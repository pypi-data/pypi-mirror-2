<rules xmlns="http://namespaces.plone.org/xdv">

<!-- title -->
    <replace content='/html/head/title'    
               theme='/html/head/title' />

<!-- Base tag -->
    <replace theme="/html/head/base" content="/html/head/base" />
	<prepend theme="/html/head" content="/html/head/link | /html/head/style" />    
	<append theme="/html/head" content="/html/head/script" />

	<prepend content="/html/body/@class" theme="/html/body" /> 

<!-- Header -->

	<append content='//*[@id="portal-siteactions"]/li'
		theme='//*[@id="site-actions"]' />

	<append content='//*[@id="portal-personaltools"]/li'
		theme='//*[@id="site-actions"]' />

	<prepend content='//*[@id="portal-logo"]/@href' theme='//*[@id="logo"]/h1/a' />

<!-- Global nav -->
	<copy content='//*[@id="portal-globalnav"]/li' 
		theme='//*[@id="menu"]/ul' />

<!-- Searchbox -->
	<copy content='//*[@id="portal-searchbox"]/*'
		theme='//*[@id="searchbox"]' />

<!-- content area -->
	<copy content='//*[@id="portal-column-content"]'
		theme='//*[@id="main"]' />

<!-- right column -->
	<append content='//*[@id="portal-column-two"]'
		theme='//*[@id="sidebar"]' />
				
	<prepend content='//*[@id="portal-footer"]/*'
		theme='//*[@id="footer"]' />

	<drop content='//*[@id="portal-colophon"]' />
	
<!-- 	<drop theme='//*[@id="colophon"]' />-->

	<drop content='//*/dl/dd/a/img' /> 

</rules> 