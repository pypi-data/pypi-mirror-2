<dl class="portlet portletFolderContents"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:define="data view/getData;
                klass data/html_class"
    tal:attributes="class python:klass and '%s %s' % (attrs['class'], klass) or attrs['class']"
    i18n:domain="collective.portlet.foldercontents">

  <dt class="portletHeader"
      tal:define="header data/header"
      tal:condition="header">
    <span class="portletTopLeft"></span>
    <span i18n:translate=""
          tal:content="header">Portlet header</span>
    <span class="portletTopRight"></span>
  </dt>

  <dd class="portletItem odd folderContentsImage"
      tal:define="image data/image"
      tal:condition="image">
    <img class="white-block-img"
         src="pics/the-victorian-house.jpg"
         tal:attributes="src image/url;
                         alt image/alt"
         i18n:attributes="alt" />
  </dd>

  <dd class="portletItem even"
      i18n:translate=""
      tal:condition="data/body"
      tal:content="data/body">
    Portlet body
  </dd>

  <dd class="portletItem odd"
      tal:define="elems data/contents"
      tal:condition="elems">
    <ul class="folderContentsLinks">
      <li tal:repeat="elem elems">
        <a href="#"
           tal:attributes="title elem/desc;
                           href elem/url"
           tal:content="elem/title"
           i18n:translate=""
           i18n:attributes="title">Portlet content</a>
      </li>
    </ul>
  </dd>

  <dd class="portletFooter"
      tal:condition="data/more_url">
    <a class="more"
       href="#"
       title="In Details"
       tal:attributes="href data/more_url" 
       i18n:translate="foldercontents_portlet_more_link"
       i18n:attributes="title foldercontents_portlet_more_title">&hellip;more</a>
    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>
  </dd>

</dl>
