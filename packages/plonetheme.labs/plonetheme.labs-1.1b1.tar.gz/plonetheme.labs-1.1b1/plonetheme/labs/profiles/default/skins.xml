<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Labs Theme">

 <object name="plonetheme_labs_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.labs:skins/plonetheme_labs_custom_images"/>
 <object name="plonetheme_labs_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.labs:skins/plonetheme_labs_custom_templates"/>
 <object name="plonetheme_labs_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.labs:skins/plonetheme_labs_styles"/>

 <skin-path name="Labs Theme" based-on="Plone Default">
  <layer name="plonetheme_labs_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_labs_custom_templates"
     insert-after="plonetheme_labs_custom_images"/>
  <layer name="plonetheme_labs_styles"
     insert-after="plonetheme_labs_custom_templates"/>
  <layer name="classic_styles"
     insert-after="plonetheme_labs_styles"/>
  <layer name="classic_ecmascript"
     insert-after="classic_styles"/>
 </skin-path>

</object>
