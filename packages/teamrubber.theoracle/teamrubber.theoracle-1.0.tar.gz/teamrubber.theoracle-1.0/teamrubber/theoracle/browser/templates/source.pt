<div class="section" tal:define="source view/getSource">
<h2>Source</h2>
<style tal:content="view/getStyle"/>

<style>

#line_numbers pre{
    font-family: monospace;
    text-align: right;
    padding-right:7px;
}

#line_numbers{
    padding-bottom:0.5em;
    width: 3em;
    overflow:auto;
    position:absolute;
}

#source{
    left:3.5em;
    top:0;
    width:95%;
    height:100%;	
    position: relative; 
}


</style>

<dl style="padding-bottom:1em;">
    <dt>Filename</dt>
    <dd tal:content="source/filename" />

    <dt>Module</dt>
    <dd><a tal:attributes="href string:${view/oracle/getBaseURL}/the_oracode?object=${source/module}"><span tal:replace="source/module" /></a> </dd>
</dl>
<div id="line_numbers">
	<pre tal:repeat="i python:range(source['start'],source['end'])"><a tal:attributes="name i; href string:${view/oracle/getBaseURL}/the_orabreak?module=${source/module}&line=${i}&action=add" tal:content="i" /></pre>
</div>

<div id="source">
    <pre tal:condition="source/structure" tal:content="structure source/source"/>
    <pre tal:condition="not:source/structure" tal:content="source/source"/>
</div>
</div>