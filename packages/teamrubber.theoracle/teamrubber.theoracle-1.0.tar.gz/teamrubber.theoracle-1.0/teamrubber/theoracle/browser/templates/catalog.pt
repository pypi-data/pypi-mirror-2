<div class="section">
    <h2>Index Data</h2>

    <dl>
        <tal:index tal:repeat="index data" tal:define="data view/getIndexDataForContext" >
            <dt tal:content="index">Index Name</dt>
            <dd>&nbsp;<span tal:content="data/?index" /></dd>
        </tal:index>

    </dl>
</div>

<div class="section">
    <h2>Metadata</h2>

    <dl>
        <tal:index tal:repeat="metadata data" tal:define="data view/getMetadataForContext" >
            <dt tal:content="metadata">Key Name</dt>
            <dd>&nbsp;<span tal:content="data/?metadata" /></dd>
        </tal:index>

    </dl>
</div>