<style>
    .message {
        border:1px solid #F00;
        padding:5px;
        margin-top:1em;
    }
</style>

<p tal:condition="request/form/message | nothing" tal:content="request/message" class="message" />
<h2>Breakpoints</h2>

<table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Filename</td>
            <td>Line</td>
            <td>Temporary</td>
            <td>Actions</td>
        </tr>
    </thead>
    
    <tr tal:repeat="break view/getBreaks">
        <td tal:content="break/id" />
        <td tal:content="break/filename" />
        <td tal:content="break/line" />
        <td tal:content="break/temporary" />
        <td>
            <a tal:attributes="href string:${view/oracle/getBaseURL}/the_orabreak?action=remove&id=${break/id}">Remove</a> | 
            <a tal:attributes="href string:${view/oracle/getBaseURL}/the_orabreak?action=temp&id=${break/id}" tal:condition="not:break/temporary">Make temporary</a>
            <a tal:attributes="href string:${view/oracle/getBaseURL}/the_orabreak?action=perm&id=${break/id}" tal:condition="break/temporary">Make permanent</a>

        </td>
            
    </tr>
</table>
