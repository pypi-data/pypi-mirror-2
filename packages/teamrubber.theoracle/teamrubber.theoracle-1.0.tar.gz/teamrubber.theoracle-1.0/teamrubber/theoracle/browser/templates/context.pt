<div class="section">
    <h2>Context</h2>
    
    <dl>
        <dt>ID</dt>
        <dd tal:content="python:view.context.aq_base.id" tal:on-error="string:Unknown ID" />

        <dt>Path</dt>
        <dd tal:content="view/getPath" tal:on-error="string:Error" />


        <dt>Portal Type</dt>
        <dd tal:content="python:view.context.aq_base.portal_type" tal:on-error="string:Error" />

        <dt>Meta Type</dt>
        <dd tal:content="python:view.context.aq_base.meta_type" tal:on-error="string:Error" />
        
        <dt>Absolute URL</dt>
        <dd tal:content="python:view.context.absolute_url()" tal:on-error="string:Error" />
    </dl>

    <tal:atfields tal:define="fields python:view.getATFields()" tal:condition="fields">
    <h2>Archetypes Fields</h2>
    
    <table id="at_field_info" tal:define="show_extras request/extras | nothing;">
    			<thead>
    				<tr>
    					<td>ID</td>
    					<td>Type</td>
    					<td tal:condition="show_extras">Searchable</td>
    					<td>Required</td>					
    					<td>Mode</td>
    					<td>Accessor</td>
    					<td tal:condition="show_extras">Index Accessor</td>
    					<td tal:condition="show_extras">Edit Accessor</td>
    					<td>Mutator</td> 
    					<td tal:condition="show_extras">Vocabulary</td> 
    				</tr>
    			</thead>

    			<tr tal:repeat="field fields">
    				<td><span tal:replace="field/id"/></td>
    				<td><span tal:replace="field/type"/></td>
    				<td tal:condition="show_extras"><span tal:replace="python:field['searchable'] and 'True' or '--'"/></td>
    				<td><span tal:replace="python:field['required'] and 'True' or '--'"/> </td>


    				<td><span tal:replace="field/mode"/></td>
    				<td><span tal:replace="field/accessor"/></td>
    				<td tal:condition="show_extras"><span tal:replace="field/index_accessor"/></td>
    				<td tal:condition="show_extras"><span tal:replace="field/edit_accessor"/></td>
    				<td><span tal:replace="field/mutator"/></td>				
    				<td tal:condition="show_extras"><span tal:replace="field/vocabulary"/></td>
    			</tr>
    </table>
    </tal:atfields>


    
    
</div>

