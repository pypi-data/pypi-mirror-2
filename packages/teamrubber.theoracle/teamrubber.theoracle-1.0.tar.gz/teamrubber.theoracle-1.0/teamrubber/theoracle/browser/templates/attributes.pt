<tal:attrs tal:define="attributes view/getAttributes;">
<h2>Attributes</h2>

<table tal:condition="attributes" id="attributes">
    <thead>
    <tr>
        <td>Name</td>
        <td>Value (repr)</td>
    </tr>
    </thead>
    
    <tr tal:repeat="attribute attributes" tal:attributes="class python:repeat['attribute'].odd() and 'odd' or 'even'">
        <td class="xcallable_title">
            <span tal:content="attribute/name" />
        </td>
        <td>
            <span tal:content="attribute/value" />

        </td>
    </tr>
    </table>

</tal:attrs>