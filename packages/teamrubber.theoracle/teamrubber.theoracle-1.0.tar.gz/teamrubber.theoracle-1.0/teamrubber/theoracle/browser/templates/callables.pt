<tal:callables tal:define="callables view/getCallables;">
<h2>Callables</h2>
<p>Note that callable links respect currently authenticated user</p>

<table tal:condition="callables" id="callables">
    <thead>
    <tr>
        <td>Method</td>
        <td>Module</td>
        <td>Security</td>
    </tr>
    </thead>
    
    <tr tal:repeat="callable callables" tal:attributes="class python:repeat['callable'].odd() and 'odd' or 'even'">
        <td class="xcallable_title">
            <span tal:condition="not:callable/can_call" tal:content="callable/name" />
            <span tal:condition="callable/can_call" ><a tal:attributes="href python:view.getMethodURL(callable['name'])" tal:content="callable/name" /></span> 

            <tal:params tal:condition="python:callable['params'] is not None">
                (<span style="color:#AAA;" tal:content="callable/params"></span>)
            </tal:params>
            <p style="color:#459022;"><span tal:replace="callable/doc" /></p>
            
        </td>
        <td>
            <tal:module tal:define="mod callable/module" >
                <a tal:condition="python:mod is not None" tal:attributes="href python:'the_oracode?object=' + mod"><span tal:content="mod"></span></a>
            </tal:module>
        </td>
    
        <td tal:content="callable/security"/>
        
    </tr>
    </table>

</tal:callables>