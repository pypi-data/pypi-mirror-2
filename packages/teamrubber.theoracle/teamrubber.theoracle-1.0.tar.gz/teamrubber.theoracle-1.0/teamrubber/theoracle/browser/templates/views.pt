<div class="section">
<h2>Browser Views</h2>

<div class="section" tal:define="views view/getViews">

    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Template</td>
                <td>Permission</td>
            </tr>
        </thead>
            <tr tal:repeat="view views">
                <td style="width:45%;"><span tal:content="view/name" />
                    <p style="color:#459022;" tal:condition="view/doc"><span tal:replace="view/doc" /></p>
                </td>
                <td tal:content="view/template" />
                <td tal:content="view/permission" />
            </tr>
        
    </table>
</div>
