<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
	<link tal:attributes="href string:${view/getBaseURL}/++resource++the_oracle/style.css" rel="stylesheet" type="text/css" >
</head>

<body>
    <div id="header">
        <h1>The Oracle <span class="subtle">v1.0</span></h1>
    </div>
    <div id="categories">
        <ul tal:define="current_category view/getCurrentCategory">
            <li tal:repeat="category view/getCategories">
                <a tal:content="category/title" 
                   tal:attributes="href python:'%s?category=%s' % (request['ACTUAL_URL'],category['id']);
                                   class python:current_category == category['id'] and 'category_selected' or None"/>
            </li>
        </ul>
    </div>



    <div id="content" tal:content="structure view/getCategoryContent" />

</body>
</html>