<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="SimplePortlet">

  <body>

    <div metal:fill-slot="main">
        <div metal:define-macro="main" tal:omit-tag="">
            <h1 class="documentFirstHeading">
              <img src="#" tal:attributes="src string:${here/portal_url}/${here/getIcon};alt here/Title" />
              <span tal:replace="here/title_or_id"/>
            </h1>

            <div metal:use-macro="here/document_actions/macros/document_actions">
                Document actions (print, sendto etc)
            </div>
            
            <p class="documentDescription"
               tal:content="here/Description"
               tal:condition="here/Description">
                Description
            </p>

            <table class="listing nosort">
                <thead>
                    <tr>
                        <th i18n:translate="heading_display">Visible</th>                        
                        <th i18n:translate="heading_position">Position</th>
                        <th i18n:translate="heading_show_subfolders">Show in subfolders</th>
                        <tal:topic condition="python: here.portal_type=='TopicPortlet'">
                            <th  i18n:translate="heading_smart_folder">Smart folder</th>
                            <th i18n:translate="heading_maximum_results">Maximum results</th>
                        </tal:topic>
                        <tal:rss condition="python: here.portal_type=='RSSPortlet'">
                            <th i18n:translate="heading_channel">Channel</th>
                            <th i18n:translate="heading_maximum_results">Maximum results</th>
                        </tal:rss>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                             <span tal:condition="here/getShow" i18n:translate="yes">yes</span>
                             <span tal:condition="python:not here.getShow()" i18n:translate="no">no</span>                        
                        </td>
                        <td tal:define="vocab python:here.Schema()['position'].Vocabulary(here);
                                              value python:here.getPosition();
                                              display python:here.displayValue(vocab, value);">
                            <span tal:content="structure display" i18n:translate="" />
                        </td>
                        <td>
                            <span tal:condition="here/getShowinsubfolders" i18n:translate="yes">yes</span>
                            <span tal:condition="python:not here.getShowinsubfolders()" i18n:translate="no">no</span>
                        </td>
                        <tal:topic condition="python: here.portal_type=='TopicPortlet'"
                                   define="topic here/getTopic | nothing;
                                           url python: topic and topic.absolute_url();
                                           title python: topic and topic.title_or_id()">
                            <td><a href="" tal:attributes="href url"
                                           tal:content="title" /></td>
                            <td tal:content="here/getMaxResults"></td>
                        </tal:topic>
                        <tal:rss condition="python: here.portal_type=='RSSPortlet'">
                            <td><span tal:replace="python: here.getChannel()" /></td>
                            <td tal:content="here/getMaxResults"></td>
                        </tal:rss>
                    </tr>
                </tbody>
            </table>            
            
            <h3 i18n:translate="heading_preview">Preview</h3>
            <div style="width:30%">
            <tal:block tal:define="portlet python:here;
                                   macro_path portlet/getMacro;
                                   macro python:path(macro_path)">
              <metal:macro use-macro="macro" />
            </tal:block>
            </div>
            

      </div>
    </div>
  </body>
</html>
