<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Techlight Theme">


   <!-- -*- extra stuff goes here -*- -->

 <object name="techlight_templates"
    meta_type="Filesystem Directory View"
    directory="quintagroup.theme.techlight:skins/techlight_templates"/>


 <object name="techlight_styles"
    meta_type="Filesystem Directory View"
    directory="quintagroup.theme.techlight:skins/techlight_styles"/>


 <object name="techlight_images"
    meta_type="Filesystem Directory View"
    directory="quintagroup.theme.techlight:skins/techlight_images"/>


 <skin-path name="Techlight Theme" based-on="Plone Classic Theme">
  <!-- -*- extra layer stuff goes here -*- -->
  <layer name="techlight_templates"
     insert-after="custom"/>
  <layer name="techlight_styles"
     insert-after="custom"/>
  <layer name="techlight_images"
     insert-after="custom"/>

 </skin-path>

</object>
