<registry>

    <!-- collective.xdv settings -->

    <record interface="collective.xdv.interfaces.ITransformSettings" field="enabled">
        <value>True</value>
    </record>

    <record interface="collective.xdv.interfaces.ITransformSettings" field="domains">
        <value>
            <element>localhost:8080</element>
            <element>127.0.0.2:8080</element>
        </value>
    </record>

    <record interface="collective.xdv.interfaces.ITransformSettings" field="rules">
        <value>python://collective.examples.diazo/static/orange_sunset/rules.xml</value>
    </record>

    <record interface="collective.xdv.interfaces.ITransformSettings" field="theme">
        <value>python://collective.examples.diazo/static/orange_sunset/index.html</value>
    </record>

    <record interface="collective.xdv.interfaces.ITransformSettings" field="absolute_prefix">
        <value>/++resource++collective.examples.diazo/orange_sunset</value>
    </record>

</registry>

