<?xml version="1.0"?>
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="qPloneDropDownMenu">
 <configlet title="Drop Down Menu" action_id="qPloneDropDownMenu"
    appId="qPloneDropDownMenu" category="Products" condition_expr=""
    icon_expr="string:$portal_url/qplonedropdownmenu.gif"
    url_expr="string:${portal_url}/@@prefs_dropdownmenu"
    visible="True" i18n:attributes="title">
  <permission>Manage portal</permission>
 </configlet>
 <configlet title="CSS Hover" action_id="csshover"
    appId="qPloneDropDownMenu" category="Products" condition_expr=""
    icon_expr="string:$portal_url/qplonedropdownmenu.gif"
    url_expr="string:${portal_url}/prefs_csshover_edit_form"
    visible="True" i18n:attributes="title">
  <permission>Manage portal</permission>
 </configlet>
</object>
