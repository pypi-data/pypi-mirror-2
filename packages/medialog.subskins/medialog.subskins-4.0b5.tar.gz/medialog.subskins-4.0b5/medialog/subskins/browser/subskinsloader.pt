<tal:block metal:define-macro="ImportStylesheets">
	<tal:plonesubskins tal:define="portal_url here/portal_url;"
						tal:repeat="category python:here.portal_subskinstool.getStylesheetCategories()">
						
			<tal:style tal:condition="python:here.portal_subskinstool.hasProperty(category['id'])">
				<style type="text/css" media="all"
					tal:define="stylesheet python:here.getProperty(category['id'])"
					tal:content="string:@import url($portal_url/$stylesheet);">
		        </style>
			</tal:style>
		</tal:plonesubskins>
</tal:block>
