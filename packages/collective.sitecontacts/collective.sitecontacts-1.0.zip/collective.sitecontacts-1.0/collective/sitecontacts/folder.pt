<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.sitecontacts">
<body>

<metal:content-core fill-slot="content-core">
	<metal:content-core define-macro="content-core"
	    tal:define="batch view/contacts;
	                mtool  context/@@plone_tools/membership;
	                isEditor python:mtool.checkPermission('Modify portal content', context);
	                toLocalizedTime nocall:context/@@plone/toLocalizedTime">
	    
	    <dl id="document-toc" class="portlet toc"   tal:condition="context/address_title">
            <dt class="portletHeader" tal:content="context/address_title">Contents</dt>
            <dd tal:condition="context/address_street" tal:content="context/address_street"/>
            <dd tal:condition="context/address_city" tal:content="context/address_city"/>
            <dd tal:condition="context/address_postal_code" tal:content="context/address_postal_code"/>
            <dd tal:condition="context/phone" tal:content="context/phone"/>
            <dd tal:condition="context/mobile" tal:content="context/mobile"/>
            <dd tal:condition="context/fax" tal:content="context/fax"/>
            <dd tal:condition="context/email">
                <a tal:attributes="href string:mailto:${context/email}"
                    tal:content="context/email"/>
            </dd>
            <dd tal:condition="context/website">
                <a tal:attributes="href context/website"
                    tal:content="context/website"/>
            </dd>
        </dl>

        <metal:field use-macro="python:context.widget('text', mode='view')">
            Body text
        </metal:field>

        <tal:contacts tal:condition="batch">
            <h2 i18n:translate="">Contacts</h2>
        
            <table class="listing">
                <thead>
                    <tr>
                        <th i18n:translate="">Grade</th>
                        <th i18n:translate="">Name</th>
                        <th i18n:translate="">Phone</th>
                        <th i18n:translate="">Mobile</th>
                        <th i18n:translate="">Email</th>
                    </tr>
                </thead>
                
                <tbody>
                    <tal:items repeat="item batch">
                        <tr tal:define="oddrow repeat/item/odd"
                            tal:attributes="class python:oddrow and 'even' or 'odd'">
                            <td tal:content="item/grade"/>
                            <td>
                                <a tal:omit-tag="not:isEditor"
                                    tal:attributes="href item/getURL"
                                    tal:content="item/Title"/>
                            </td>
                            <td tal:content="item/phone"/>
                            <td tal:content="item/mobile"/>
                            <td>
                                <a tal:omit-tag="not:item/email"
                                    tal:attributes="href string:mailto:${item/email}"
                                    tal:content="item/email"/>
                            </td>
                        </tr>
                    </tal:items>
                </tbody>
            </table>
            
            <div metal:use-macro="context/batch_macros/macros/navigation" />
        </tal:contacts>

	</metal:content-core>
</metal:content-core>

</body>
</html>