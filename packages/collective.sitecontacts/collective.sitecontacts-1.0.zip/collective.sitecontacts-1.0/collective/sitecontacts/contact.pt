<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.sitecontacts">
<body>

<metal:content-core fill-slot="content-core">
	<metal:content-core define-macro="content-core"
	    tal:define="grade  context/grade;
	                phone  context/phone;
	                mobile context/mobile;
	                email  context/email;
	                context_state nocall:context/@@plone_context_state;
	                parent context_state/parent">

        <a href=""
            class="link-parent"
            tal:attributes="href parent/absolute_url"
            i18n:translate="">
            Up to contacts Overview
        </a>

        <table class="listing">
            <tr tal:condition="grade">
                <th i18n:translate="">Grade</th>
                <td tal:content="grade"/>
            </tr>
            
            <tr tal:condition="phone">
                <th i18n:translate="">Phone</th>
                <td tal:content="phone"/>
            </tr>
            
            <tr tal:condition="mobile">
                <th i18n:translate="">Mobile</th>
                <td tal:content="mobile"/>
            </tr>
            
            <tr tal:condition="email">
                <th i18n:translate="">Email</th>
                <td>
                    <a href="" tal:attributes="href string:mailto:${email}"
                    tal:content="email"/>
                </td>
            </tr>
        </table>

	</metal:content-core>
</metal:content-core>

</body>
</html>