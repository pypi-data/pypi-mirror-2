<?PY ## ex. link_to('Show', '/show/1')  => <a href="/show/1">Show</a> ?>
<?PY def link_to(label, url): ?>
<?PY     try:    from urllib.parse import quote ?>
<?PY     except: from urllib import quote ?>
<?PY     return '<a href="%s">%s</a>' % (quote(url), label) ?>
<?PY #enddef ?>
