[logger_root]
level=CRITICAL
handlers=stderr

[logger_indexing]
level=DEBUG
handlers=stderr
qualname=collective.indexing

[logger_solr]
level=DEBUG
handlers=stderr
qualname=collective.solr

[handler_stderr]
class=StreamHandler
level=NOTSET
formatter=common
args=(sys.stderr,)

[formatter_common]
format=%(asctime)s %(levelname)s %(name)s %(message)s
datefmt=%Y-%m-%dT%H:%M:%S

[loggers]
keys=root,indexing,solr

[handlers]
keys=stderr

[formatters]
keys=common
