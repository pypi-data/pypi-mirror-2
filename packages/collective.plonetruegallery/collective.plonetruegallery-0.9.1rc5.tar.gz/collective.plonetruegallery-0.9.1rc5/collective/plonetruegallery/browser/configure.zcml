<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.plonetruegallery">

	<include package=".views" />

    <browser:page
        name="plonetruegallery_util"
        for="*"
        permission="zope2.View"
        class=".util.PTGUtility"
        allowed_interface=".interfaces.IPTGUtility"
        />
    
    <!-- We need to make the request annotatable for this to work -->
    <class class="ZPublisher.BaseRequest.BaseRequest">
        <implements interface="zope.annotation.interfaces.IAttributeAnnotatable" />
    </class>

    <browser:resource
        name="mootools.js"
        file="files/slideshow/js/mootools.js"
    />
    <browser:resource
        name="slideshow.js"
        file="files/slideshow/js/slideshow.js"
    />
    <browser:resource
        name="slideshow.flash.js"
        file="files/slideshow/js/slideshow.flash.js"
    />
    <browser:resource
        name="slideshow.fold.js"
        file="files/slideshow/js/slideshow.fold.js"
    />
    <browser:resource
        name="slideshow.kenburns.js"
        file="files/slideshow/js/slideshow.kenburns.js"
    />
    <browser:resource
        name="slideshow.push.js"
        file="files/slideshow/js/slideshow.push.js"
    />
    <browser:resource
        name="slideshow.css"
        file="files/slideshow/css/slideshow.css"
    />

    <browser:resource
        name="plonetruegallery-portlet.css"
        file="files/portlet/portlet.css"
    />
    
    <browser:resource
        name="plonetruegallery-portlet.js"
        file="files/portlet/portlet.js"
    />

    <browser:resourceDirectory
        name="plonetruegallery.resources"
        directory="files"
    />

</configure>