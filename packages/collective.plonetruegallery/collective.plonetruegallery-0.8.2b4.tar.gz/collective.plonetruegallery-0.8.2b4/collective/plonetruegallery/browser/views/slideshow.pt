<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.plonetruegallery">

<metal:css fill-slot="style_slot">
	<link rel="stylesheet" type="text/css" href="++resource++slideshow.css" media="screen" />	
</metal:css>
<metal:js fill-slot="javascript_head_slot">

    <style tal:content="python: view.displayer.css()"/>
	
    <tal:def tal:define="effect_type python: settings.slideshow_effect.split(':')[0]">
      <script type="text/javascript" 
        tal:condition="python: len(effect_type) > 0"
        tal:attributes="src string:${portal_url}/++resource++slideshow.${effect_type}.js"></script>
    </tal:def>
	<script type="text/javascript"
	        tal:content="structure python: view.displayer.javascript()">
    </script>
</metal:js>

<body>
<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main">
	<h1 tal:content="context/Title" />

 	<div class="noimages"
    tal:condition="python: view.adapter.number_of_images == 0">
    <p i18n:translate="label_no_images_in_gallery">
      There are no images in this gallery.
    </p>
 	</div>
	
	<div id="plonetruegallery-container" 
	  tal:condition="python: view.adapter.number_of_images > 0">
	  <div id="show" class="plonetruegallery">
    </div>
    <table id="plonetruegallery-dropshadow" cellspacing="0">
  	  <tbody>
  	    <tr>
  	      <td class="topleft"/>
  	      <td class="topmiddle"/>
  	      <td class="topright"/>
  	    </tr>
  	    <tr>
  	      <td class="centerleft"/>
  	      <td class="centermiddle" />
  	      <td class="centerright"/>
  	    </tr>
  	    <tr>
  	      <td class="bottomleft" />
  	      <td class="bottommiddle" />
  	      <td class="bottomright" />
  	    </tr>
  	  </tbody>
  	</table>
  </div>

  <tal:subgallery tal:replace="structure view/subgallery_template" />	

</tal:main-macro>
</metal:main>
</body>
</html>