<html>
    <head>
    </head>
    <body>
        <h1>Manage URLs</h1>

        <form tal:attributes="action python:view.url()" method="post">
            <label>URL pattern: <input type="text" name="pattern"
                tal:attributes="value request/form/pattern|nothing"/></label>
            <input type="submit" name="search" value="Search"/>
        </form>

        <table>
            <tr>
                <th>URL</th>
                <th>Status</th>
                <th>Clients</th>
                <th>&nbsp;</th>
            </tr>
            <tr tal:repeat="url view/urls">
                <td tal:content="url/url"></td>
                <td tal:content="url/state"></td>
                <td tal:content="python:len(url.clients)"></td>
                <td><a tal:attributes="href python:view.url(url, 'purge')">purge</a></td>
            </tr>
        </table>
    </body>
</html>
