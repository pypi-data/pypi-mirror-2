<div class="portlets portletCollectionDetailedView">
    <h2 tal:content="view/data/header" i18n:translate="" />
    <tal:events tal:repeat="obj view/results">
    <p>
        <a tal:attributes="href obj/getURL" id="parent-fieldname-image">
            <img tal:replace="structure python: obj.getObject().tag(scale='mini', css_class='newsImage')" src="" alt="" />
        </a>
    </p>

    <p>
        <strong>
            <a href class="title" tal:attributes="href obj/getURL;
                                                  title obj/Description"
                                  i18n:attributes="title" >
                <span i18n:translate="" tal:replace="obj/pretty_title_or_id">
                    Title
                </span>
                <span  class="portletItemDetails"
                            tal:condition="view/data/show_dates"
                            tal:content="python:toLocalizedTime(obj.Date)" i18n:name="date">
                    Date
                </span>
            </a>
        </strong>
        <br/>
       <span i18n:translate="">
           <span class="description" tal:replace="obj/Description" />
       </span>
    </p>
    </tal:events>
</div>