<h2 class="pHeader" tal:content="view/data/header" />
<tal:events tal:repeat="obj view/results">
<p>

            <a tal:attributes="href obj/getURL"
               id="parent-fieldname-image">
		<img tal:replace="structure python: obj.getObject().tag(scale='mini', css_class='newsImage')" src="" alt="" />
            </a>
</p>

<p><strong>
        <a href class="title"
                tal:attributes="href obj/getURL;
                                title obj/Description">
                <span tal:replace="obj/pretty_title_or_id">
                     Title
                </span>
                <span  class="portletItemDetails"
                          tal:condition="view/data/show_dates"
                          tal:content="python:toLocalizedTime(obj.Date)">
                        Date
                </span>
        </a>
</strong>
<br/>
   <span class="description" tal:replace="obj/Description" />
</p>
</tal:events>
</div>