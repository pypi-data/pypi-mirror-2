        class=".miscellaneous.Miscellaneous"
        permission="zope2.View"
        attribute="totals_with_currency"
        />

    <browser:page
        name="cart-id"
        for="*"
        class=".miscellaneous.Miscellaneous"
        permission="zope2.View"
        attribute="cart_id"
        />

    <browser:page
        name="total-price"
        for="*"
