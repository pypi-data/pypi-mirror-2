        attribute="total_price"
        />

    <browser:page
        name="next-step"
        for="*"
        class=".miscellaneous.Miscellaneous"
        permission="zope2.View"
        attribute="next_step"
        />

    <browser:page
        name="test-step"
        for="*"
        class=".miscellaneous.Miscellaneous"
        permission="zope2.View"
        attribute="test_step"
        />

