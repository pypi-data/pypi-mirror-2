<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
  <body>
      
    <metal:dummy fill-slot="column_one_slot"/>
    <metal:dummy fill-slot="column_two_slot"/>
        
    <metal:main fill-slot="main">
      <metal:define define-macro="header">
        <metal:use use-macro="here/edit_macros/macros/header">
        <metal:block fill-slot="title">
          <h1>
            Nova Inscri&ccedil;&atilde;o de Grupo
          </h1>
         </metal:block>
         </metal:use>
      </metal:define>
      
      <div metal:define-macro="typedescription">
              <p class="discreet">
                  Inscreva um grupo de participantes de sua empresa ou organiza&ccedil;&atilde;o.
              </p>
      </div>
      
      <metal:define define-macro="body">
      
      <metal:use use-macro="here/edit_macros/macros/body">
          
          <metal:slot fill-slot="widgets">
              <tal:tabbed tal:condition="allow_tabbing | nothing">
                <tal:fieldsets define="sole_fieldset python:len(fieldsets)==1"
                  repeat="fieldset fieldsets">
                  <fieldset tal:define="fieldsetid python:putils.normalizeString(fieldset)"
                          tal:attributes="id string:fieldset-inscricao-${fieldsetid}"
                          tal:omit-tag="sole_fieldset">
                    <legend id=""
                            tal:content="python: view.getTranslatedSchemaLabel(fieldset)"
                            tal:attributes="id string:fieldsetlegend-inscricao${fieldsetid}"
                            i18n:translate=""
                            tal:condition="not:sole_fieldset" />
                    <tal:fields repeat="field python:schematas[fieldset].editableFields(here, visible_only=True)">
                      <metal:fieldMacro use-macro="python:here.widget(field.getName(), mode='edit')" />
                    </tal:fields>
                  </fieldset>
                </tal:fieldsets>
              </tal:tabbed>
          </metal:slot>
          
          <metal:slot fill-slot="buttons">
              <script>
                if (document.getElementsByName('participantes.nome:records').length == 1){
                        dataGridFieldFunctions.addRow("participantes");            
                }
              </script>
              <input tal:condition="python:wf_state != 'em_confirmacao'"
                     class="context"
                     tabindex=""
                     type="submit"
                     name="form_submit"
                     value="Enviar"
                     tal:attributes="tabindex tabindex/next;
                                     disabled python:test(isLocked, 'disabled', None);"
                     />
              <input tal:condition="python:wf_state == 'em_confirmacao'"
                     class="standalone"
                     tabindex=""
                     type="submit"
                     name="form.button.cancelar_confirmacao"
                     value="Cancelar Confirmação"
                     tal:attributes="tabindex tabindex/next"
                     />
              <input tal:condition="python:wf_state == 'em_confirmacao'"
                     class="context"
                     tabindex=""
                     type="submit"
                     name="form.button.finalizar_confirmacao"
                     value="Confirmar Inscrição"
                     tal:attributes="tabindex tabindex/next;
                                     disabled python:test(isLocked, 'disabled', None);"
                     />
           </metal:slot>
           <metal:block fill-slot="extra_bottom">
                <script type="text/javascript" charset="utf-8">
                    jQuery('form#inscricaocorporativa-base-edit').removeClass('enableFormTabbing');
                </script>
           </metal:block>
        </metal:use>

      </metal:define>

    </metal:main>

  </body>

</html>
