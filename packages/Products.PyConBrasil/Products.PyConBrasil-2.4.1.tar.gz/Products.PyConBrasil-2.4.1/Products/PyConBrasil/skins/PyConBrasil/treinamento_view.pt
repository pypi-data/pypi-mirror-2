<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="PyConBrasil">

<body>

<metal:macro define-macro="top_slot">
    <metal:block tal:condition="python:here.portal_membership.isAnonymousUser()">
        <tal:block tal:define="dummy python:request.set('disable_border',1)" />
    </metal:block>
</metal:macro>

<metal:macro define-macro="header">

    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <strong tal:content="here/getTrilha" />

    <h1 tal:content="object_title" class="documentFirstHeading">
        Title or id
    </h1>

    <div tal:replace="structure provider:plone.belowcontenttitle" />

</metal:macro>

<metal:macro define-macro="body">

    <div tal:replace="structure provider:plone.abovecontentbody" />

    <p tal:content="here/getAssunto" />

    <p>
        <strong>N&iacute;vel da Palestra:</strong> <span tal:content="here/getNivel" />
    </p>

    <p tal:content="here/Description"
       tal:condition="here/Description">
        Description
    </p>

    <h2>Palestrante</h2>
    <h3 tal:content="here/getNome" />
    <p class="discreet"><span tal:replace="here/getCidade" /> - <span tal:replace="here/getEstado" /></p>

    <p>
        <img src="image" class="image-right"
             tal:condition="here/getImage"
             tal:attributes="alt here/getNome;
                             title here/getNome;
                             src string:${here/absolute_url}/image_thumb;" />
        <span tal:replace="here/getCurriculum" />
    </p>

    <p><a href="#" tal:attributes="href string:$portal_url/sobre-o-evento/programacao"> Voltar para Programa&ccedil;&atilde;o </a></p>

</metal:macro>

</body>
</html>
