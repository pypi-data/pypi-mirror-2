#!/usr/bin/env python
import sys
import argparse

from pyverify.verify import run

parser = argparse.ArgumentParser(description='Verify installed packages')
parser.add_argument('dists', metavar='PACKAGE', nargs='+',
                    help='Packages to verify')
parser.add_argument('--paths', dest='paths', default=sys.path, action='append',
                    help=('Scan all in paths directories ending ' 
                          'with ``.dist-info``'))

if __name__ == '__main__':
    args = parser.parse_args()
    sys.exit(run(args.dists, args.paths))
