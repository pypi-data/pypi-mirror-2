<?xml version="1.0"?>
<schema xmlns="http://purl.oclc.org/dsdl/schematron">
  <title>Test of Schematron validation</title>
  <pattern>
    <rule context="zoo">
      <assert test="cage[@id]">A zoo contains cages each with an id attribute</assert>
      <assert test="cage[@description]">Each cage has a description attribute</assert>
    </rule>
  </pattern>
</schema>
