#!/usr/bin/env python
import os
import sys
sys.path.insert(0, "../frontwebproject/")

from frontweb import comandos, subcommand


@subcommand.subcommand()
def run(opciones, *args):
    """Inicia un servidor en modo desarrollo para mostrar el sitio.

Options:
-p puerto : puerto
-h host : host
"""
    comandos.iniciar_servidor(opciones.host, opciones.puerto)

@subcommand.subcommand()
def init(opciones, *args):
    "Genera un proyecto nuevo en para construir un sitio web."

    if args:
        nombre = args[0]
    else:
        nombre = raw_input("Ingresa el nombre de proyecto: ")

    comandos.crear_proyecto_de_django(nombre)

