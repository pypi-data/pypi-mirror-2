#!/usr/bin/env python
import os
import sys
sys.path.insert(0, "../frontwebproject/")

from frontweb import subcommand
import frontweb


@subcommand.subcommand()
def run(opciones, *args):
    "Inicia un servidor en modo desarrollo para mostrar el sitio."
    frontweb.utils.iniciar_servidor()


@subcommand.subcommand()
def init(opciones, *args):
    "Genera un proyecto nuevo en para construir un sitio web."
    nombre = raw_input("Ingresa el nombre de proyecto: ")
    frontweb.utils.crear_proyecto_de_django(nombre)

    frontweb.utils.generar_archivo_url(nombre)
    frontweb.utils.generar_archivo_config(nombre)
    frontweb.utils.copiar_directorio_data(nombre)


def main():
    subcommand.main()

if __name__ == '__main__':
    main()

