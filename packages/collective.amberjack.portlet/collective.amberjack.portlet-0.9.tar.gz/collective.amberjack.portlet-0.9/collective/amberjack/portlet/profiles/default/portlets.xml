<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone"> <!-- plone domain is required -->

 <!-- Portlet type registrations -->

 <portlet
   addview="collective.amberjack.portlet.AmberjackStartPortlet"
   title="Amberjack start portlet"
   description="The portlet for starting an amberjack demo"
   i18n:attributes="title;
                    description"
   /> <!-- you can't use msgid -->

 <portlet
   addview="collective.amberjack.portlet.AmberjackChoicePortlet"
   title="Amberjack choice portlet"
   description="The portlet for starting a demo from a list"
   i18n:attributes="title;
                    description"
   />

  <assignment
      name="amberjack-choice-portlet"
      category="context"
      key="/"
      manager="plone.rightcolumn"
      type="collective.amberjack.portlet.AmberjackChoicePortlet">
  </assignment>

</portlets>
