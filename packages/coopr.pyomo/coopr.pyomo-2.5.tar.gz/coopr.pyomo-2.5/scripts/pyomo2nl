import sys
if sys.version_info[0:2] < (2,5,3):
   print ""
   print "ERROR: pyomo2nl requires Python 2.5.3 or newer"
   sys.exit(1)
from os.path import abspath, dirname
import os
sys.path.insert(0, dirname(dirname(abspath(__file__))))
sys.path.append(".")

import coopr.pyomo.scripting.convert

try:
    coopr.pyomo.scripting.convert.pyomo2nl(args=sys.argv[1:])
except SystemExit:
    pass

