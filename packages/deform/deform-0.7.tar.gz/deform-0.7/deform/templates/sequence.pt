<div class="deformSeq"
     tal:define="rndr field.renderer;
                 tmpl field.widget.item_template">
  <!-- sequence -->

  <input type="hidden" name="__start__" value="${field.name}:sequence"
         class="deformProto" 
         tal:attributes="prototype field.widget.prototype(field)"/>

  <div tal:repeat="tup subfields"
       tal:content="structure rndr(tmpl, field=tup[1], cstruct=tup[0],
                                   parent=field)"/>

  <span class="deformInsertBefore"></span>
  
  <a href="#"
     class="deformSeqAdd"
     id="${field.oid}-seqAdd"
     onclick="javascript:
              deform.addSequenceItem($(this).parent().children('.deformProto')[0],
              $(this).parent().children('.deformInsertBefore')[0]);
              return false;">
    <small id="${field.oid}-addtext">${add_subitem_text}</small>
  </a>

  <input type="hidden" name="__end__" value="${field.name}:sequence"/>

  <!-- /sequence -->

</div>
