<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Broadcaster Plone Theme">

 <object name="plonetheme_broadcaster_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.broadcaster:skins/plonetheme_broadcaster_custom_images"/>
 <object name="plonetheme_broadcaster_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.broadcaster:skins/plonetheme_broadcaster_custom_templates"/>
 <object name="plonetheme_broadcaster_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.broadcaster:skins/plonetheme_broadcaster_styles"/>

 <skin-path name="Broadcaster Plone Theme" based-on="Plone Default">
  <layer name="plonetheme_broadcaster_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_broadcaster_custom_templates"
     insert-after="plonetheme_broadcaster_custom_images"/>
  <layer name="plonetheme_broadcaster_styles"
     insert-after="plonetheme_broadcaster_custom_templates"/>
 </skin-path>

</object>
