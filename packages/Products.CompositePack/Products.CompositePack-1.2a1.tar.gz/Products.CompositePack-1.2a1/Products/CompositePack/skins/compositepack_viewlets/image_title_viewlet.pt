<div class="viewlet image"
     tal:define="title_or_id context/title_or_id;
                 title context/Title|nothing">
  <img tal:attributes="src context/absolute_url;
                       alt title_or_id;
                       title title_or_id"
       />
  <div class="viewlet image title"
       tal:condition="title"
       tal:content="title"
       />
</div>
