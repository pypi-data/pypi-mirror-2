<?xml version="1.0"?>
<object name="Department" meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">Department</property>
 <property name="description" i18n:translate="description_edit_persongrouping">
    An academic department.
 </property>
 <property name="content_icon">folder_icon.gif</property>
 <property name="content_meta_type">FSDDepartment</property>
 <property name="product">FacultyStaffDirectory</property>
 <property name="factory">addDepartment</property>
 <property name="immediate_view">department_standard_view</property>
 <property name="default_view">department_standard_view</property>
 <property name="view_methods">
    <element value="department_standard_view" />
    <element value="department_tabular_view" />
    <element value="department_textual_view" />
    <element value="fsd_atoz_view" />
 </property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
   <element value="FSDCommitteesFolder"/>
   <element value="Document"/>
   <element value="File"/>
   <element value="Image"/>
   <element value="Topic"/>
   <element value="News Item"/>
   <element value="Event" />
 </property>
 <property name="allow_discussion">False</property>
</object>
