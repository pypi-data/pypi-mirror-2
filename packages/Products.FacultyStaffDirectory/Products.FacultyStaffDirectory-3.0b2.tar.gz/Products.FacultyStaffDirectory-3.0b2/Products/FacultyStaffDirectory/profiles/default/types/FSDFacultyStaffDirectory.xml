<?xml version="1.0"?>
<object name="FacultyStaffDirectory"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="plone">
 <property name="title" i18n:translate="">Faculty/Staff Directory</property>
 <property name="description" i18n:translate="description_edit_facultystaffdirectory">A directory of faculty and staff members</property>
 <property name="content_icon">folder_icon.gif</property>
 <property name="content_meta_type">FSDFacultyStaffDirectory</property>
 <property name="product">FacultyStaffDirectory</property>
 <property name="factory">addFacultyStaffDirectory</property>
 <property name="immediate_view">directory_standard_view</property>
 <property name="default_view">directory_standard_view</property>
 <property name="view_methods">
    <element value="directory_standard_view" />
    <element value="directory_tabular_view" />
    <element value="fsd_atoz_view" />
 </property> 
 <property name="global_allow">True</property>
 <property name="filter_content_types">1</property>
 <property name="allowed_content_types">
    <element value="FSDPerson"/>
    <element value="FSDClassification"/>
    <element value="FSDCommitteesFolder"/>
    <element value="FSDSpecialtiesFolder"/>
    <element value="FSDDepartment"/>
    <element value="Document"/>
    <element value="Topic"/>
 </property>
 <property name="allow_discussion">False</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="base_edit"/>
 <alias from="view" to="(selected layout)"/>
 <alias from="index.html" to="(selected layout)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
