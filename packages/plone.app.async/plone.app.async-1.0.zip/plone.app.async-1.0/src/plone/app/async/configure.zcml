<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="plone.app.async">

  <!-- Plone 3.x -->
  <include zcml:condition="installed zope.app.keyreference" package="zope.app.keyreference" />

  <!-- Plone 4.x -->
  <include zcml:condition="installed zope.keyreference" package="zope.keyreference" />

  <!-- zc.async -->
  <include package="zc.async" />
  <include package="zc.async" file="dispatcher.zcml" />
  <include package="zc.z3monitor" />

  <!-- async service -->
  <utility provides=".interfaces.IAsyncService" factory=".service.AsyncService" />

</configure>
