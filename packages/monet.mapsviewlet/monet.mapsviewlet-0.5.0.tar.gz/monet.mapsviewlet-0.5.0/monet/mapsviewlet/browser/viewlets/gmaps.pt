<div metal:define-macro="content_gmaps"
     tal:condition="view/view_map">

	<script type="text/javascript"
	        tal:attributes="src string:http://maps.google.com/maps?file=api&amp;v=2.136d&amp;key=${view/googlemaps_key}">
	</script>

	<span style="display:none" id="gmaps-location" tal:content="context/getLocation" />

    <div id="googlemaps">
		map body
    </div>

	<span style="display:none"
	      class="kmlurl"
		  tal:repeat="kmlurl view/relatedKml" tal:content="kmlurl" />

</div>