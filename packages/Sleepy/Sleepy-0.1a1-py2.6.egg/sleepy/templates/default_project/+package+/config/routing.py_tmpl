from routes import Mapper

def make_map( config ):
    map = Mapper( directory=config[ "pylons.paths" ]
                                  [ "controllers" ],
                 always_scan=config[ "debug" ] )
    map.minimization = False
    map.explicit = False

    map.connect( "/error/{action}",
                 controller="error" )
    map.connect( "/error/{action}/{id}",
                 controller="error" )

    # CUSTOM ROUTES HERE

    return map
