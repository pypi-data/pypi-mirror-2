<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
        xmlns="http://www.w3.org/1999/xhtml">
<%namespace
        name="u"
        file="/sleepy/util.mako" />
    <head>
        <title>

            ::
            ${ self.title() }
        </title>
        ${ u.css( "reset" ) }
        ${ u.css( "util" ) }
        ${ u.css( "site" ) }
        ${ u.css( "jquery.fancybox" ) }
        ${ self.css() }
        ${ u.script( "jquery" ) }
        ${ u.script( "jquery.fancybox" ) }
        ${ u.script( "site" ) }
        ${ self.script() }
        <script
                type="text/javascript"
                src="http://use.typekit.com/       .js"></script>
        <script
                type="text/javascript">
            try {
                Typekit.load();
            } catch ( e ) {
            }
        </script>
    </head>
    <body>
        <div
                id="stuff">
            <div
                    id="pre">
                <div
                        class="primary">
                    ${ self.header() }
                    ${ self.nav() }
                </div>
            </div>
            <div
                    class="clearfix"
                    id="content">
                ${ next.body() }
            </div>
        </div>
    </body>
</html>
<%def
        name="header()">
    <h1>

    </h1>
</%def>
<%def
        name="bodyTitle()">
    <h2>${ c.page.title.capitalize() }</h2>
</%def>
<%def
        name="title()">
    ${ c.page.title }
</%def>
<%def
        name="nav()">
    <ul
            class="clearfix"
            id="nav">
        % for ( num, page ) in enumerate( page for page in app_globals.pages if page.nav and page.section is None ):
            <li>
                <a
                        href="${ page.url }">
                    ${ page.link_text.upper() }
                </a>
            </li>
        % endfor
    </ul>
</%def>
<%def
        name="css()">
    ${ u.css() }
</%def>
<%def
        name="script()">
    ${ u.script() }
</%def>
