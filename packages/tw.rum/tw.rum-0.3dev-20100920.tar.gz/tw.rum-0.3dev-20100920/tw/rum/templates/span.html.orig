<span xmlns="http://www.w3.org/1999/xhtml"
	  xmlns:py="http://genshi.edgewall.org/"
 	  class="${css_class}">
	<span class="rum-field-value"
          py:if="value is not None and escape" py:replace="formatter(value)" />
	<span class="rum-field-value"
          py:if="value is not None and not escape" py:replace="HTML(formatter(value))" />
	<span class="rum-nullvalue" py:if="value is None">&nbsp;</span>
</span>
