<html>
  <head>
    <title>$PAGETITLE</title>
    <style>
      img { border:0; margin:5px; }
      body { padding:1em; background:white; font-family:sans-serif; }
      h1 { font-family:sans-serif; }
    </style>
#if $OPTS.USE_JS:
    <script type="text/javascript" src="/lightbox/js/prototype.js"></script>
    <script type="text/javascript" src="/lightbox/js/scriptaculous.js?load=effects"></script>
    <script type="text/javascript" src="/lightbox/js/lightbox.js"></script>
    <link rel="stylesheet" href="/lightbox/css/lightbox.css" type="text/css" media="screen" />
#end if
  </head>
  <body>
    <h1>$PAGETITLE</h1>
#if $NUM_PAGES > 0
    <div class="pagelinks">Pages: $LINKSTR</div>
#end if

    <p>
#for npic in $PAGETHUMBS
##if not npic in (0, NUM_PER_PAGE-1) and npic % opts.NUM_COLS == 0: f/write("<br/>\n")
      <a href="$PAGEPICS[$npic]"><img alt="$PAGETHUMBS[$npic]" src="$PAGETHUMBS[$npic]" 
                                      style="border:0;" width="$PAGETHUMBDIMS[$npic][0]" 
                                      height="$PAGETHUMBDIMS[$npic][1]" /></a>
#end for
    </p>

#if $NUM_PAGES > 0
    <div class="pagelinks">Pages: $LINKSTR</div>
#end if

#if $OPTS.WRITE_ZIPFILE:
    <p>All photos zipped up: <a href="$ZIPFILE">$ZIPFILE</a></p>
#end if
  </body>
</html>
