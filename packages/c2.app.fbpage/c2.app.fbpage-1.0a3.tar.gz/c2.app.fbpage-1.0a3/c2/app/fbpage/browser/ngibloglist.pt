<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
     lang="en"
     metal:use-macro="here/@@fb-base/macros/master"
     i18n:domain="c2.app.fbpage">
<body>
<div metal:fill-slot="main">

  <h2 class="heading" tal:content="context/Title">Title</h2>

      <tal:rep repeat="item view/get_items">
        <h3><a class="blogHeadingLink" tal:content="item/Title"
                                       tal:attributes="href item/getURL">Title</a></h3>

        <div class="blog_datecategory">
                <div class="row">
                        <div class="date cell width-6 position-0" tal:content="python:view.trans_pub_date(item.pub_date)">2010/12/19</div>
                        <div class="cell width-8 position-8">
                                <ul class="blogcategory">
                                        <li tal:repeat="c_name item/getBlogCategory"><a href="" tal:attributes="href string:${context/absolute_url}?cat=${c_name}" tal:content="c_name">name</a></li>
                                </ul>
                        </div>
                </div>
                <div class="visualClear"><!-- --></div>
        </div>

                <div class="entrybox">

                    <div class="entryPicture" tal:condition="python:item.getPictureSize">
                            <a href="" title="" tal:attributes="href item/getURL">
                                <img src="" alt="" tal:define="obj item/getObject;"
                                 tal:replace="structure python:obj.getField('picture_1').tag(obj,scale='thumb',alt='')" />
                            </a>
                    </div>
                        <div class="entryDescription">
                                <p tal:content="item/Description"></p>
                                <div class="textRight">
                                        <a href="#" tal:attributes="href item/getURL" i18n:translate="blog_read_more">Read more...</a>
                                </div>
                        </div>
                        <div class="visualClear"><!-- --></div>
                </div>
                <div class="visualClear"><!-- --></div>
      </tal:rep>

</div>
</body>
</html>