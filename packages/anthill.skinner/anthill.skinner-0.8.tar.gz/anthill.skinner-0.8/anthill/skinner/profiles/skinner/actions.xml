<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <object name="site_actions" meta_type="CMF Action Category">
  <object name="preview_show" meta_type="CMF Action"
     i18n:domain="anthill.skinner">
   <property name="title" i18n:translate="">Show Preview</property>
   <property name="description"
      i18n:translate="">This link switches to the public view if available</property>
   <property
      name="url_expr">string:$folder_url/@@skinner/activatePreview</property>
   <property name="icon_expr"></property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="anthill: View CMS"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>

</object>
