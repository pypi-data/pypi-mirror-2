<div id="portal-colophon" metal:define-macro="colophon" 
    tal:define="helper nocall:here/@@pythonbrasil_helper;
                patrocinadores python:helper.patrocinadores();"
    i18n:domain="plone">
  <metal:slot define-slot="colophon" />

  <div class="colophonWrapper">
    <div class="patrocinio" id="lista-patrocinio">
    <metal:grupos tal:repeat="grupo patrocinadores">
        <div tal:define="title python:grupo[0];
                         lista python:grupo[1]">
        <span tal:content="title">Apoio institucional</span>
        <metal:empresas tal:repeat="item lista">
        <a  tal:attributes="href item/url;title item/title;"
            href="http://www.ucs.br/site">
            <img tal:attributes="src string:${here/portal_url}/${item/logo};alt item/title" />
        </a>
        </metal:empresas>
        </div>
    </metal:grupos>
    </div>
  </div>

</div>