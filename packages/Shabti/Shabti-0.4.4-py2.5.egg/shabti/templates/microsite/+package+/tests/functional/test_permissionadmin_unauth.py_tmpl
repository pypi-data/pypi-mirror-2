# microsite/tests/functional/test_permissionadmin_unauth
from pylons import url
from {{package}}.model import *
from {{package}}.tests import *

class TestPermissionUnauthAdminController(TestController):
    def test_unauthorised_permission_state_retrieval_prohibited(self):
        """PermissionUnauthAdmin (microsite): unauthorised permission GET access is prohibited."""
        response = self.app.get(url('edit_permission', id='1'))
        
        assert response.status_int == 302
        
        assert response.location == 'http://localhost/login/index'
        
        response = self.app.get(url('new_permission'))
        
        assert response.status_int == 302
        
        assert response.location == 'http://localhost/login/index'
        
        response = self.app.get(url('save_permission', id='1'),
                                params={'name': 'Fake Name',
                                        '_method':u'PUT'})
        
        assert response.status_int == 302
        
        assert response.location == 'http://localhost/login/index'
        
        response = self.app.get(url('delete_permission', id='1'),
                                params={'_method':'DELETE'})
        
        assert response.status_int == 302
        
        assert response.location == 'http://localhost/login/index'
    
    
    def test_unauthorised_permission_state_change_prohibited(self):
        """PermissionUnauthAdmin (microsite): unauthorised permission PUTs and DELETEs are prohibited"""
        response = self.app.put(url('save_permission', id='1'),
                                params={'name': 'Fake name',
                                        '_method':'PUT'})
        
        assert response.status_int == 302
        
        assert response.location == 'http://localhost/login/index'
        
        response = self.app.delete(url('delete_permission', id='1'))
        
        assert response.status_int == 302
        
        assert response.location == 'http://localhost/login/index'
    

