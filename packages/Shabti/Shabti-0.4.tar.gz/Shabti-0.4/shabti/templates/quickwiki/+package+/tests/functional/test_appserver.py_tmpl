from {{package}}.tests import *

class TestAppServer(TestController):
    def test_index(self):
        response = self.app.get('/')
        # Test response...
        import os
        if 'index.html' in os.listdir(os.getcwd()+'/{{package}}/public/'):
            # When default public/index.html is present ...
            assert '<span style="color:lime">Elixir DSL</span>' in response
        else:
            # When default public/index.html has been deleted ...
            assert '<p>Welcome to the <a href="/pages/show/QuickWiki">QuickWiki</a> front page.</p>' in response
