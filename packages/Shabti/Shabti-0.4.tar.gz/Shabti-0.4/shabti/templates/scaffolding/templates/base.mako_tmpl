## -*- coding: utf-8 -*-
<html>
<head>
    <title>{{title}}</title>
    ${h.stylesheet_link('/css/scaffold.css')}
</head>
<body>
    <% messages = h.flash.pop_messages() %>
    % if messages:
    <ul id="flash-messages">
    % for message in messages:
        <li>${message}</li>
    % endfor
    </ul>
    % endif

    ${next.body()}
</body>
</html>
