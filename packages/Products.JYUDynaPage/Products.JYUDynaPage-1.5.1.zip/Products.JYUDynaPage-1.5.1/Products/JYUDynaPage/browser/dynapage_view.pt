<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="dynapage">
    <head>
        <metal:css fill-slot="css_slot">
            <style type="text/css" media="all"
                tal:content="string: @import url(${context/++resource++dynapage.css});">
            </style>
        </metal:css>
    </head>

<body>

<div class="gainLayout" id="dynapage" metal:fill-slot="main" tal:define="inheritImage view/hasFrontpageImage">
    <tal:main-macro metal:define-macro="main">

        <div id="dpBanner" tal:condition="inheritImage|nothing">
        </div>

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="documentDescription" tal:content="structure here/Description">
            <span metal:use-macro="python:context.widget('description', mode='view')" />
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <tal:topBlock tal:define="lists view/getListData;
            data    lists/data;
            top     lists/top;
            bottom  lists/bottom;">

            <tal:lists tal:repeat="listat data">
                <tal:block tal:condition="python: listat['position'] == 'top'"
                    tal:define="lista listat/listObjects">

                        <div class="#" tal:attributes="class top">
                            <h4 class="listTitleHeading">
                                <span class="list_title" tal:content="listat/title"/>
                                <a href="" class="list_title_rss" tal:attributes="href listat/rss">
                                    <img src="rss.gif" alt="RSS-icon" />
                                </a>
                            </h4>

                            <ul>
                                <tal:list tal:repeat="list_data lista">
                                    <li>
                                        <a tal:attributes="href list_data/getURL; title list_data/Description;"
                                           tal:content="list_data/Title">
                                           Title
                                        </a><br />

                                        <span tal:condition="python: 'Description' in listat['fields']" tal:content="list_data/Description">
                                            Description
                                        </span>

                                        <p class="jyudynapage_date" tal:condition="python: 'CreationDate' in listat['fields']"
                                            i18n:translate="jyudynapage_created">Created
                                            <span i18n:name="created" tal:content="list_data/CreationDate">
                                                1.1.2008
                                            </span>
                                        </p>
                                        <p class="jyudynapage_date" i18n:translate="jyudynapage_published"
                                            tal:condition="python: u'EffectiveDate' in listat['fields'] and list_data['effective'] != '1000/01/01'">Published
                                            <span i18n:name="effective" tal:content="python: toLocalizedTime(list_data['effective'])">
                                                1.1.2008
                                            </span>
                                        </p>

                                    </li>
                                </tal:list>
                            </ul>
                        </div>

                </tal:block>
            </tal:lists>

            <div id="pageBody">
                <span metal:use-macro="python:context.widget('text', mode='view')" />
            </div>

            <div class="visualClear" />

            <tal:lists tal:repeat="listat data">
                <tal:block tal:condition="python: listat['position'] == 'bottom'"
                    tal:define="lista listat/listObjects">

                        <div class="" tal:attributes="class bottom">
                            <h4 class="listTitleHeading">
                                <span class="list_title" tal:content="listat/title"/>
                                <a href="" class="list_title_rss" tal:attributes="href listat/rss">
                                  <img src="rss.gif" alt="RSS-icon"/>
                                </a>
                            </h4>
                            <ul>
                                <tal:list tal:repeat="list_data lista">
                                    <li>
                                        <a tal:attributes="href list_data/getURL; title list_data/Description;"
                                           tal:content="list_data/Title">
                                           Title
                                        </a><br />

                                        <span class="jyudynapage_description"
                                            tal:condition="python: 'Description' in listat['fields']" tal:content="list_data/Description">
                                            Description
                                        </span>

                                        <p class="jyudynapage_date" tal:condition="python: 'CreationDate' in listat['fields']"
                                            i18n:translate="jyudynapage_created">Created
                                            <span i18n:name="created" tal:content="list_data/CreationDate">
                                                1.1.2008
                                            </span>
                                        </p>
                                        <p class="jyudynapage_date" i18n:translate="jyudynapage_published"
                                            tal:condition="python: u'EffectiveDate' in listat['fields'] and '1000/01/01' not in str(list_data['effective'])">Published
                                            <span i18n:name="effective" tal:content="python: toLocalizedTime(list_data['effective'])">
                                                1.1.2008
                                            </span>
                                        </p>

                                    </li>
                                </tal:list>
                            </ul>
                        </div>

                </tal:block>
            </tal:lists>

        </tal:topBlock>

        <div class="visualClear" />

    </tal:main-macro>

    <div metal:use-macro="here/document_relateditems/macros/relatedItems">
        show related items if they exist
    </div>

    <div tal:replace="structure provider:plone.belowcontentbody" />

</div>


</body>
</html>

