<html tal:omit-tag="">
<div tal:replace="structure context/manage_page_header"/>
<div tal:replace="structure context/manage_tabs"/>
<h3>Manage TakeAction content items</h3>
<form action="" method="POST"
    tal:attributes="action string:${context/absolute_url}/${view/__name__}">
    
<table tal:condition="view/has_items">
<thead>
  <tr><th></th><th>Path</th><th>Category</th></tr>
</thead>
<tbody>
  <tr tal:repeat="item view/items">
    <td><input type="checkbox" name="selected:int:list" tal:attributes="value item/index; checked item/selected" class="form-element"/></td>
    <td><input type="text" name="items.path:records" tal:attributes="value item/path" class="form-element"/></td>
    <td><input type="text" name="items.category:records" tal:attributes="value item/category" class="form-element"/></td>
  </tr>
</tbody>
<tfoot>
  <tr>
    <td>&nbsp;</td>
    <td colspan="2">
      <input type="submit" name="save" value=" Save " class="form-element"/>
      <input type="submit" name="delete" value=" Delete " class="form-element"/>
      <input type="submit" name="up" value=" Move up " class="form-element"/>
      <input type="submit" name="down" value=" Move down " class="form-element"/>
    </td>
  </tr>
</tfoot>
</table>
</form>

<form action="" method="POST"
    tal:attributes="action string:${context/absolute_url}/${view/__name__}">
<h3>Add a new item</h3>
<table>
<thead>
  <tr><th>Path</th><th>Category</th></tr>
</thead>
<tbody>
  <tr>
    <td><input type="text" name="path" class="form-input"/></td>
    <td><input type="text" name="category" class="form-input"/></td>
  </tr>
  <tr>
    <td colspan="2"><input type="submit" name="add" value=" Add "/></td>
  </tr>
</tbody>
</table>

</form>
<div tal:replace="structure context/manage_page_footer"/>
</html>