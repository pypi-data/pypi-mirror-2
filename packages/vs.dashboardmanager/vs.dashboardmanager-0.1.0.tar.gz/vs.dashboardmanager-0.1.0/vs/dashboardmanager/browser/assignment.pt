<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="vs.dashboardmanager">

  <body>
    <div metal:fill-slot="main">
        <fieldset> 
            <legend>Assignment (non functional)</legend>

            <form method="post" tal:attributes="action string:${context/absolute_url}/@@push-assignment" >
                <label for="userid">Member id</label>
                <input type="text" name="userid" id="userid" size="20" />
                <br/>
                <br/>
                <label for="group">Group</label>
                <select id="group" name="group">
                    <option value="">Please select...</option>
                    <option tal:repeat="group view/getGroups"
                        tal:content="group/title"
                        tal:attributes="value group/title"
                        />
                </select>
                <br/>
                <br/>
                <input class="context" type="submit" value="Update dashboard portlet of user or group" />
            </form>
        </fieldset>
    </div>
  </body>
</html>
