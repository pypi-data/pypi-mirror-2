<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns:tal="http://xml.zope.org/namespaces/tal" id="region-content" xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" i18n:domain="tinymce">
<head>
	<meta http-equiv="Content-type" content="text/html;charset=UTF-8" /> 
	<title>Add/edit a Plomino Hide-when Formula</title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="../../utils/mctabs.js"></script>
	<script type="text/javascript" src="../../utils/form_utils.js"></script>
	<link rel="stylesheet" type="text/css" href="css/plomino.tinymce.css" />
</head>
<body tal:define="parentpath here/REQUEST/parent|nothing;
                  form python:here.restrictedTraverse('/'.join(parentpath.split('/')[0:-1]));
                  hidewhenid here/REQUEST/hidewhenid|nothing;
                  adapted form/tinyform|nothing;
                  hidewhenFormula adapted/getHidewhenFormula;
                  hidewhen adapted/getHidewhen;
				  ">
    
	<div class="dialog-wrapper">
		<!-- Form which selects an existing action -->
			
		<fieldset tal:condition="hidewhen">
			<legend>Select a Plomino Hide-when Formula</legend>
			<form id="hidewhenSelection" method="get">
				<p>
					<label for="hidewhenid">Hide-when ID</label>
					<select id="hidewhenid" name="hidewhenid" onchange="this.form.submit();">
						<option
							tal:repeat="item python:form.getHidewhenFormulas()"
							tal:content="item/id"
							tal:attributes="value item/id; selected python:item.id==hidewhenid"></option>
					</select>
				</p>
				<p>
					<button class="context" onclick="document.getElementById('create').setAttribute('value', 'true'); this.form.submit();">Create a Hide-when</button>
					<input id="create" name="create" type="hidden" />
					<input name="parent" type="hidden" tal:attributes="value parentpath" />
				</p>
			</form>
		</fieldset>
		
		<!-- Form which edits the selected hide-when -->
		<form method="post"
			tal:attributes="action python:hidewhen and hidewhen.absolute_url() + '/tinyhidewhen/setHidewhenProperties' or form.absolute_url() + '/tinyform/addHidewhen'">
			<fieldset tal:condition="python:not hidewhen">
				<legend>Create a Plomino Hide-when Formula</legend>
				
				<label for="hidewhenid">Hide-when ID</label>
				<input type="text" name="hidewhenid" id="hidewhenid" />
			</fieldset>
			
			<fieldset>
				<legend>Edit Hide-when Formula</legend>
				
				<p>
					<label for="hidewhenFormula">Hide-when Formula</label>
					<textarea id="hidewhenFormula" name="hidewhenformula" tal:content="hidewhenFormula"></textarea>
				</p>
			</fieldset>
			
			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" i18n:attributes="value common_insert" />
					<input type="button" id="cancel" class="standalone" name="cancel" i18n:attributes="value common_cancel" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
	
</body>
</html>