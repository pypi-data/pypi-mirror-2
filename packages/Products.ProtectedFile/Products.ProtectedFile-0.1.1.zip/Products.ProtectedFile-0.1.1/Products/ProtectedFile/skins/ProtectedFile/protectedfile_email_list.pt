<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">

    <tal:main-macro metal:define-macro="main">

        <h1 tal:content="template/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>

        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>

        <div class="documentDescription"
             tal:content="here/Description">
            description
        </div>

        <p>
            This is the e-mail list from people who get this file:
        </p>

        <table id="email-list"
               class="listing"
               summary="E-Mail Listing">

            <thead>
                <th>Key</th>
                <th>E-Mail</th>
                <th>Confirmation Date</th>
                <th>Downloads</th>
            </thead>

            <tbody>
                <tr tal:repeat="token here/listTokens">
                    <td tal:content="token/key">key</td>
                    <td tal:content="token/email">e-mail address</td>
                    <td tal:content="token/timestamp">confirmation date</td>
                    <td tal:content="token/downloads">downloads</td>
                </tr>
            </tbody>

        </table>

        <div metal:use-macro="here/document_byline/macros/byline">
            Get the byline - contains details about author and modification date.
        </div>

    </tal:main-macro>

</div>

</body>

</html>
