<h1>Query Catalog</h1>

<h2>XPath Query</h2>
<form method="post" action="">
  <div class="field">
    <textarea class="monospace" 
              name="query" rows="5" cols="80">$query</textarea>
  </div>
  
  <div class="button">
    <input type="submit" name="send" value="Query" />
  </div>
</form>

<br />
<br />

<h2>Result</h2>
#if $rows
<p>
  $rows rows<br />
  $clock sec
</p>
#end if
<textarea class="monospace" rows="17" cols="80">$result</textarea>
