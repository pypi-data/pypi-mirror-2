#def CSS
  <link rel="stylesheet" type="text/css" href="/yui2/assets/accordion.css" media="screen" />
#end def
#def JAVASCRIPT
  <script type="text/javascript" src="/yui2/build/yahoo-dom-event/yahoo-dom-event.js"></script>
#end def

<h1>Plug-ins</h1>

<form method="post" id="plugins" action="">
  <dl class="accordion">
    #for $plugin in $sorted_plugins
    <dt>
      <input class="check" type="checkbox" 
        #if len([$p for $p in $plugins.get($plugin).get('plugins') if not $p.enabled])==0
             checked="checked"
        #elif len([$p for $p in $plugins.get($plugin).get('plugins') if $p.enabled])>0
             checked="checked"
             disabled="disabled"
        #end if 
             name="somename" value="somevalue" />
      <span>
        <strong>$plugin</strong><br />
        #if $plugins.get($plugin).get('description')
        <i>$plugins.get($plugin).get('description')</i><br />
        #end if
      </span>
    </dt>
    <dd class="close">
      #for $p in $plugins.get($plugin).get('plugins')
      <input type="hidden" name="plugin" value="$p.classname" />
      <input class="check" type="checkbox"
        #if $p.required
             disabled="disabled"
             readonly="readonly" 
        #end if 
        #if $p.enabled
             checked="checked" 
        #end if 
             name="enabled" value="$p.classname" />
      <strong>$p.classname</strong><br />
      <i>$p.description </i><br />
      #end for
    </dd>
    #end for
  </dl>

  <div class="button">
    <input type="submit" name="update" value="Save" />
    <input type="submit" name="reload" value="Refresh List" />
  </div>
</form>

<script type="text/javascript" src="/yui2/assets/accordion.js"></script>
