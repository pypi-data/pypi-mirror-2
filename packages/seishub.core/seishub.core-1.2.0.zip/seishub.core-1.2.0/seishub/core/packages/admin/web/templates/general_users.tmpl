<h1>Users</h1>

#if $action=='add'
<h2>Add new user</h2>
<form method="post" id="add" action="">
  <div class="field">
    <label>User ID</label><br />
    <input type="text" size="20" name="id" value="$id" />
  </div>
  <div class="field">
    <label>UID</label><br />
    <input type="text" size="20" name="uid" value="$uid" />
  </div>
  <div class="field">
    <label>Name</label><br />
    <input type="text" size="80" name="name" value="$name" />
  </div>
  <div class="field">
    <label>Password</label><br />
    <input type="password" size="20" name="password" value="" />
  </div>
  <div class="field">
    <label>Password Confirmation</label><br />
    <input type="password" size="20" name="confirmation" value="" />
  </div>
  <div class="field">
    <label>E-Mail</label><br />
    <input type="text" size="80" name="email" value="$email" />
  </div>
  <div class="field">
    <label>Institution</label><br />
    <input type="text" size="80" name="institution" value="$institution" />
  </div>
  <div class="field">
    <label>Permissions</label><br />
    <select name="permissions">
      <option value="777" 
        #if $permissions==777
        selected="selected"
        #end if
        >RW</option>
      <option value="755" 
        #if $permissions==755
        selected="selected"
        #end if
        >R-</option>
      <option value="700" 
        #if $permissions==700
        selected="selected"
        #end if
        >--</option>
    </select>
  </div>
  <div class="button">
    <input type="submit" name="add" value="Add" />
    <input type="submit" name="cancel" value="Cancel" />
  </div>
</form>

<br />
<br />
#end if


