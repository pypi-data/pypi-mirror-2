<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Gemstone">

 <object name="plonetheme_gemstone_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.gemstone:skins/plonetheme_gemstone_custom_images"/>
 <object name="plonetheme_gemstone_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.gemstone:skins/plonetheme_gemstone_custom_templates"/>
 <object name="plonetheme_gemstone_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.gemstone:skins/plonetheme_gemstone_styles"/>

 <skin-path name="Gemstone" based-on="Sunburst Theme">
  <layer name="plonetheme_gemstone_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_gemstone_custom_templates"
     insert-after="plonetheme_gemstone_custom_images"/>
  <layer name="plonetheme_gemstone_styles"
     insert-after="plonetheme_gemstone_custom_templates"/>
 </skin-path>

</object>
