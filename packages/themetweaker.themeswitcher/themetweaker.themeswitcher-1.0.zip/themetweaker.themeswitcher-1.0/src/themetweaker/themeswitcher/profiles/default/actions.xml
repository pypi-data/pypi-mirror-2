<?xml version="1.0"?>
<object name="portal_actions" meta_type="CMF Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <object name="object" meta_type="CMF Action Category">
         <object name="switcherform" meta_type="CMF Action" i18n:domain="themeswitcher">
              <property name="title" i18n:translate="">ThemeSwitcher</property>
              <property name="description" i18n:translate="">The user interface for switching a theme.</property>
              <property name="url_expr">string:${globals_view/getCurrentFolderUrl}/switcherform</property>
              <property name="icon_expr"></property>
              <property name="available_expr">object/displayContentsTab</property>
              <property name="permissions">
                   <element value="Switch Theme"/>
              </property>
              <property name="visible">True</property>
         </object>
    </object>
</object>