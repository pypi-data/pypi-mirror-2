<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="archetypes.multifile">

  <head><title></title></head>

  <body>

    <!-- Gridfield Widgets -->

    <metal:define define-macro="view">
        <tal:block define="fields python: widget.fields(here, field);
                           canModify python: widget.canModify(here);
                           klass widget/table_class">
            <table class="listing" tal:attributes="class klass">
                <thead>
                <tr>
                    <th tal:repeat="item fields">
                        <tal:head tal:content="item/title" />
                    </th>
                    <th tal:condition="canModify"></th>
                    <th tal:condition="canModify"></th>
                </tr>
                </thead>
                <tbody>
                <tal:rows repeat="row python:accessor()">
                    <tr>
                        <tal:row replace="structure python:widget.render_row(here, field, row)"/>
                        <td  tal:condition="canModify">
                            <a href="" class="edit-record" tal:attributes="href string:${context/absolute_url}/++field++${field/getName}/edit?row_id=${row/_id}">
                                edit
                            </a>
                        </td>
                        <td  tal:condition="canModify">
                            <a href="" class="remove-record" tal:attributes="href string:${context/absolute_url}/++field++${field/getName}/delete?row_id=${row/_id}">
                                delete
                            </a>
                        </td>
                    </tr>
                    
                </tal:rows>
                </tbody>
            </table>
            <a href="" class="add-record" tal:attributes="href string:${context/absolute_url}/++field++${field/getName}/add"
                 tal:condition="canModify">
                Add a new row
            </a>

        </tal:block>
    </metal:define>

    <metal:define define-macro="edit">
    </metal:define>

    <metal:define define-macro="search">
    </metal:define>

  </body>

</html>
