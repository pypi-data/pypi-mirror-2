<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:five="http://namespaces.zope.org/five"
   xmlns:browser="http://namespaces.zope.org/browser"
   i18n_domain="collective.monkeypatcherpanel">

  <five:registerPackage package="." initialize=".initialize" />

  <browser:page
    for="OFS.interfaces.IApplication"
    name="remove-monkeypatcherpanel"
    class=".utils.Utils"
    attribute="remove"
    permission="zope2.ViewManagementScreens"
    />

  <browser:page
    for="OFS.interfaces.IApplication"
    name="add-monkeypatcherpanel"
    class=".utils.Utils"
    attribute="add"
    permission="zope2.ViewManagementScreens"
    />

  <browser:resource
    file="zmi/face-monkey.png"
    name="monkeypatcherpanel.png"
   />

  <five:registerClass
     class="collective.monkeypatcherpanel.controlpanel.ControlPanel"
     meta_type="Monkey patches control panel"
     icon="monkeypatcherpanel.png"
     permission="zope2.ViewManagementScreens"
    />

  <subscriber
     for="collective.monkeypatcher.interfaces.IMonkeyPatchEvent"
     handler=".controlpanel.monkeyPatchAdded"
    />

</configure>
