<tal:cu3er tal:condition="view/available">
    <!--  STEP ONE: insert path to SWFObject JavaScript -->
    <script type="text/javascript" src="++resource++collective.cu3er.swfobject.js"></script>

    <!--  STEP TWO: configure SWFObject JavaScript and embed CU3ER slider -->
    <script type="text/javascript" tal:content="view/get_js_config|nothing">
        var flashvars = {};
        flashvars.xml = "collective.cu3er.config.xml";
        var attributes = {};
        attributes.wmode = "transparent";
        attributes.id = "slider";
        swfobject.embedSWF("++resource++collective.cu3er.cu3er.swf", "cu3er-object", "600", "300", "9", "++resource++collective.cu3er.expressInstall.swf", flashvars, attributes);
    </script>
    <style type="text/css" tal:content="view/get_css_config|nothing">
    <!--
        #cu3er-object {width:600px; outline:0;}
    -->
    </style>
    <div id="cu3er-container"></div>
</tal:cu3er>