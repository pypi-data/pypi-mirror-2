<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

  <head><title></title></head>

  <body>
    <metal:fill fill-slot="main">
      <metal:main_macro>

        <dl>
          <tal:block repeat="field here/fgFields">
            <tal:block tal:define="fname field/getName">
              <dt tal:content="field/widget/label" />
              <dd>
                <span tal:replace="python:request.form.get(fname, 'No Input')" />
                <tal:block tal:condition="python:request.form.get(fname, None)">
                <tal:block tal:condition="python:field.getName()==request.form.get('ssf_id', None)">
                  <tal:block     tal:define="ssf_id python:request.form.get('ssf_id');
                                       ssf python:request.form.get(ssf_id);
                                       selected_field python:ssf_id+'_'+ssf;
                                       ssf_value python:request.form.get(selected_field)"
                                       >
                    <br />
                    <span tal:replace="ssf_value" />
                  </tal:block>
                </tal:block>
                </tal:block>
                
              </dd>
            </tal:block>
          </tal:block>
        </dl>
      
      </metal:main_macro>
    </metal:fill>
  </body>
</html>
