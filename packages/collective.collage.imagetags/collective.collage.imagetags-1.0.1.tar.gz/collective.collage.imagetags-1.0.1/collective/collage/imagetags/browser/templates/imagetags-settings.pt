<div xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     i18n:domain="collective.collage.imagetags"
     class="expandable-section"
     tal:condition="view/uses_tags_layout|python:False">
  
  <a href="#"
     tal:define="object view/getImmediateObject"
     tal:attributes="href string:${object/absolute_url}/@@imagetags-settings"
     class="expandable-label">
    <div class="expandable-icon"><!-- nothing here --></div>
    <span class="row-create" i18n:translate="">Settings</span>
  </a>
  
  <div class="expandable-content">
    <h4 i18n:translate="">
      Imagetags settings
    </h4>
    <div class="inner-content">
      <p i18n:translate=""
         class="discreet">Set image scale preferences and press 'Apply' button.
      </p>

      <div class="ajax-reference-browser">
        <tal:loading i18n:translate="label_loading" i18n:domain="collage">
          Loading...
        </tal:loading>
      </div>
      <div class="visualClear"><!-- nothing here --></div>
    </div>
  </div>
  
</div>
