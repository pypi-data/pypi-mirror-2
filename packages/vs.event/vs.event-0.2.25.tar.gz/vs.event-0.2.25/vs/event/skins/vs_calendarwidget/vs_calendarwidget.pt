<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="vs.event">
  <head><title></title></head>
  <body>

    <metal:view_macro define-macro="view">
	   <span tal:replace="python: context.vs_calendarwidget_datestr(accessor(), 
                                                      with_time=widget.with_time, 
                                                      ignore_unset_time=getattr(widget, 'ignore_unset_time', 0))"/>
    </metal:view_macro>

    <metal:define define-macro="edit"
                  tal:define="default_minute    python: getattr(widget, 'default_minute', 0);
                              default_hour      python: getattr(widget, 'default_hour', 0);
                              wholeDay          context/getWholeDay;
                              hours_minutes     python: context.vs_calendarwidget_hours_minutes(accessor());
                              format_dict       context/vs_calendarwidget_formats;
                              hours             python: hours_minutes[0];
                              minutes           python: hours_minutes[1];
                              hours             python: test(hours==default_hour or not hours, default_hour, hours);
                              minutes           python: test(minutes==default_minute or not minutes, default_minute, minutes);
                              ">

      <!-- mix-in language in order to use the proper language for the DatePicker widget -->
      <script type="text/javascript" tal:content="string:PLONE_LANGUAGE='${request/LANGUAGE}';" />
      <script type="text/javascript" tal:content="string:PYTHON_DATE_FORMAT='${format_dict/python_fmt}';" />
      <script type="text/javascript" tal:content="string:JQUERY_DATE_FORMAT='${format_dict/jquery_fmt}';" />

      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
        <div metal:fill-slot="widget_body">
            <input class="calendarInputDateFormat" type="hidden" tal:attributes="name   string:${fieldName}-date-format;
                                                                                 id     string:${fieldName}-date-format;
                                                                                 value  format_dict/python_fmt;
                                                                                 " />

            <input tal:define="date_str request/?fieldName | nothing;
                               date_str python: date_str or context.vs_calendarwidget_datestr(accessor())"
                   class="calendarInput" 
                   type="text" 
                   value="" 
                   tal:attributes="name  fieldName; 
                                   id    fieldName;
                                   value date_str" /> 
        
            <tal:if condition="widget/with_time|nothing">
              &nbsp;
              <span class="vs-calendarwidget-time" 
                     tal:attributes="style python: test(wholeDay, 'display: none', '')">
                  <select class="calendarInput" tal:attributes="name string:${fieldName}_hour;
                                                                id   string:${fieldName}_hour; ">
                    <option tal:repeat="hour python: range(24)"
                            tal:attributes="value hour;
                                            SELECTED python: str(hour)==str(hours)"
                            tal:content="python: '%02d' % hour" />
                  </select> :
                  <select class="calendarInput" tal:attributes="name string:${fieldName}_minute;
                                                                id   string:${fieldName}_minute">
                    <option tal:repeat="minute python: range(0, 60)"
                            tal:attributes="value minute;
                                            selected python: str(minute)==str(minutes)"
                            tal:content="python: '%02d' % minute" />
                  </select> 
                  <span i18n:translate="label_hour">hour</span>
              </span>
            </tal:if>
        </div>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/string/macros/edit">
      </div>
    </div>

  </body>
</html>

