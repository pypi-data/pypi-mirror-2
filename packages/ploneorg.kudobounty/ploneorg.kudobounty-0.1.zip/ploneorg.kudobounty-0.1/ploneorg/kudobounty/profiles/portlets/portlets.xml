<?xml version="1.0"?>
<portlets>

<assignment
    type="plone.portlet.static.Static"
    manager="ContentWellPortlets.FooterPortletManager5"
    category="context"
    key="/"
    name="ploneorg_kudobounty_static"
    >
    <property name="header">Bounty Winners Information</property>
    <property name="text">
    <![CDATA[
      <div class="portal-bounty-program">
	<div class="helperText">
	  <span>Special thanks to the following companies and individuals for their recent contributions to improving Plone:</span>
	  <div class="moreInfo">        
	     <a href="/bounty-submissions/bounty-submissions-form"
		title="Kudo Bounty Program Submission Form">
	     [Find out more about how you can contribute]</a>
	  </div> 
	</div>
      </div>
    ]]>
    </property>
    <property name="omit_border">True</property>
    <property name="footer"></property>
    <property name="more_url">False</property>
</assignment>

<assignment
    type="collective.portlet.collectionmultiview.CollectionMultiView"
    manager="ContentWellPortlets.FooterPortletManager5"
    category="context"
    key="/"
    name="ploneorg_kudobounty_collection"
    >
    <property name="header">Bounty Winners</property>
    <property name="target_collection">/bounty-submissions/aggregator</property>
    <property name="random">False</property>
    <property name="show_more">False</property>
    <property name="show_dates">False</property>
    <property name="renderer">bounty_collection_view</property>

</assignment>


</portlets>
