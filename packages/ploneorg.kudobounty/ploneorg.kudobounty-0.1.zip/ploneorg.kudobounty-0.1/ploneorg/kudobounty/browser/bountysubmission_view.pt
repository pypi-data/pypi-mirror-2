<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-description fill-slot="content-description" />
<metal:content-core fill-slot="content-core">
   <metal:content-core define-macro="content-core">

      <tal:loop repeat="fdata view/data">
	<div class="field ArchetypesField-FieldType" id="archetypes-fieldname-fieldName"
             tal:attributes="class string:field ArchetypesField-${fdata/fieldType};
                             id string:archetypes-fieldname-${fdata/fieldName}">
           <label class="formQuestion"><span tal:content="fdata/label">Label</span>:</label>
           <br/>
           <span id="parent-fieldname-fieldName"
                 tal:attributes="id string:archetypes-fieldname-${fdata/fieldName}"
                 tal:define="isImage python:fdata['fieldType']=='ImageField'" >
	       <img tal:condition="isImage" tal:replace="structure fdata/value" /> 
	       <span tal:condition="not: isImage" tal:replace="fdata/value" />
           </span>
        </div>
      </tal:loop>

    </metal:content-core>
</metal:content-core>

</body>
</html>
