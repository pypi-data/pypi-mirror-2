<dl class="portlet portletActionsPortlet"
    i18n:domain="collective.portlet.actions">
  <tal:comment replace="nothing">
    ###############
    Actions portlet
    ###############
    $Id: actionsportlet.pt 114310 2010-03-30 16:07:23Z glenfant $
  </tal:comment>

  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <span tal:condition="view/title" tal:replace="view/title">
      Title
    </span>
    <span class="portletTopRight"></span>
  </dt>

  <dd class="portletItem odd">
    <table>
      <tr tal:repeat="link view/actionLinks"
          style="vertical-align: top">
        <td tal:define="icon link/icon"
            tal:condition="icon">
          <img src="#"
               tal:replace="structure icon" />
        </td>
        <td>
          <a href="#"
             tal:attributes="href link/url"
             tal:content="link/title">
            Action
          </a>
        </td>
      </tr>
    </table>
  </dd>
  <dd class="portletFooter">
    <span class="portletBottomLeft"></span>
    &nbsp;
    <span class="portletBottomRight"></span>
  </dd>
</dl>
