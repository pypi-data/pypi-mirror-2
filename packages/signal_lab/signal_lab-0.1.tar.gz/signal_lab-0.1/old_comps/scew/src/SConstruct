

from slabcore import *

env = Environment( )

env.Tool('slabroot')
env.Tool('slab_cc')
env.Tool('expat')
env.Append( CPPPATH=['../scew-0.4.0/scew'] )


c_files= [
'../scew-0.4.0/scew/attribute.c',
'../scew-0.4.0/scew/element.c',
'../scew-0.4.0/scew/error.c',
'../scew-0.4.0/scew/parser.c',
'../scew-0.4.0/scew/str.c',
'../scew-0.4.0/scew/tree.c',
'../scew-0.4.0/scew/writer.c',
'../scew-0.4.0/scew/xattribute.c',
'../scew-0.4.0/scew/xerror.c',
'../scew-0.4.0/scew/xhandler.c',
'../scew-0.4.0/scew/xparser.c',
'../scew-0.4.0/scew/xprint.c',
]

scew = env.SharedLibrary( 'slab_scew' ,c_files )

env.InstallLibrary( scew )