
from slabcore import *
from os.path import join
#import slabdev

env = Environment( )

env.Tool('slabroot')

env.Tool('slab_cc')
env.Tool('slabc')
env.Tool('scew')
env.Tool('expat')


srcdir = Dir('.').srcnode( ).abspath
srcincdir = join( srcdir, "../includes" )

env.Append( CPPPATH=[srcincdir] )

slabxml = env.SharedLibrary( "slab_xml", ["xml_sabio.c",
                               "xml_sub_header.c",
                               "xml_meta_header.c"
                                     ] )

core = env.InstallLibrary( slabxml )

