from slabproj import *


from os import walk
from os.path import join

walker = walk( './book' )

bookscons = []
for dirpath, dirnames, filenames in walker:
    
    if "SConstruct" in filenames:
        book = join( dirpath, "SConstruct" )
        bookscons.append( book )
        SConscript( book )

env = Environment( )
env.Tool( 'books' )

env.Book( 'zdoxy_books.h' , bookscons )
#for book in bookscons:

while DEFAULT_TARGETS:
    DEFAULT_TARGETS.pop()

Default('book')
    