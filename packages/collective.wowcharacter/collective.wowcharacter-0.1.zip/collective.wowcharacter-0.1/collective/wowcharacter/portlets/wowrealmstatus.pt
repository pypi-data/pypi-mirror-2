<!-- author: marc goetz
     pagetemplate for wowrealmstatus portlet
-->

<tal:block tal:condition="view/visible">

  <dl class="portlet portletRealmstatusPortlet"
    i18n:domain="collective.wowcharacter">

    <dd class="portletItem odd">
      <div align="center" tal:condition="view/realm_status">
        <img src="++resource++collective.wowcharacter.images/up.png" />
      </div>
      <div align="center" class="realmstatus_up" tal:condition="view/realm_status">
        <div class="realmstatus_name">
          <span tal:replace="context/realm" />
        </div>
        <div class="realmstatus_type">
          <span tal:replace="view/realm_type" />
        </div>
        </div>
      <div align="center" tal:condition="not: view/realm_status">
        <img src="++resource++collective.wowcharacter.images/down.png" />
      </div>
      <div align="center" class="realmstatus_down" tal:condition="not: view/realm_status">
        <div class="realmstatus_name">
          <span tal:replace="context/realm" />
        </div>
        <div class="realmstatus_type">
          <span tal:replace="view/realm_type" />
        </div>
       </div>
    </dd>

  </dl>

</tal:block>
