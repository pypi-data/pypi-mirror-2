<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />
  
  <div metal:fill-slot="main">

     <tal:block  tal:define="cooptool python:modules['Products.CMFCore.utils'].getToolByName(here, 'portal_googlecoop');
                 		goopid cooptool/identifier;
                 		coopiduri python:goopid.replace(':','%3A');
                 		coopdomain cooptool/domain">
	<!-- Google CSE Search Box Begins -->
		<form  action="" tal:attributes="action string:${here/absolute_url}/${template/getId};
                                 		 id string:searchbox_$goopid" >
  			<input type="hidden" name="cx" tal:attributes="value goopid" />
  			<input name="q" type="text" size="40" tal:attributes="value request/SearchableText|nothing" />
  			<input type="submit" name="sa" value="Search" i18n:attributes="value label_search" />
  			<input type="hidden" name="cof" value="FORID:9" 
  			       tal:attributes="value cooptool/adsposition"/>
		</form>
		<script type="text/javascript" tal:attributes="src string:http://${coopdomain}/coop/cse/brand?form=searchbox_$coopiduri " ></script>
	<!-- Google CSE Search Box Ends -->

	<!-- Google Search Result Snippet Begins -->
	<div tal:attributes="id string:results_$goopid"></div>
	<script type="text/javascript" tal:content="cooptool/getGoCoopJS"></script>
	<script type="text/javascript" tal:attributes="src string:http://${coopdomain}/afsonline/show_afs_search.js"></script>
	<!-- Google Search Result Snippet Ends -->
	<div class="googlecoopsearchgadget">
	<a tal:define="id1 python:goopid.split(':')[0];
	               id2 python:goopid.split(':')[1];"
	   tal:attributes="href string:http://fusion.google.com/add?moduleurl=http%3A%2F%2F${coopdomain}%2Fcoop/api/$id1/cse/$id2/gadget">
	   <img src="http://buttons.googlesyndication.com/fusion/add.gif" 
	        width="104" height="17" border="0" alt="Add to Google" />
        </a>
        </div>
     </tal:block>
  </div>

</html>

