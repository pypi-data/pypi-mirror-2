<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>      
  <metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />
  
  <div metal:fill-slot="main">       
     <tal:block  tal:define="cooptool python:modules['Products.CMFCore.utils'].getToolByName(here, 'portal_googlecoop');
                 		goopid cooptool/identifier;
                 		coopiduri python:goopid.replace(':','%3A');
                 		coopdomain cooptool/domain;
                 		subject traverse_subpath;
                                this_subject_path python:'/'.join(subject);
                                full_cse_path string:${here/absolute_url}_cse_${this_subject_path};
                                uCseId python: cooptool.uniqueURLID(full_cse_path);">
    
        <!-- Google CSE Search Box Begins  -->
        <!-- Use of this code assumes agreement with the Google Custom Search Terms of Service. -->
        <!-- The terms of service are available at http://www.google.com/coop/docs/cse/tos.html -->
        <form id="cref_iframe" action="http://www.guha.com/results.html"
              tal:attributes="action string:${here/absolute_url}/${template/getId}/${this_subject_path};" >
          <input type="hidden" name="cref" value="http://www.guha.com/cref_cse.xml" 
                 tal:attributes="value string:${here/absolute_url}/tasty-cseref/${this_subject_path};"
                 />
          <input type="hidden" name="cof" value="FORID:9" 
                 tal:attributes="value cooptool/adsposition"/>
          <input type="text" name="q" size="40" tal:attributes="value request/q |nothing" />          
          <input type="submit" name="sa" value="Search" i18n:attributes="value label_search" />
        </form>        
        <script type="text/javascript" src="http://www.google.com/coop/cse/brand?form=cref_iframe"
                tal:attributes="src string:http://${coopdomain}/coop/cse/brand?form=cref_iframe" ></script>
        <!-- Google CSE Search Box Ends -->


        <!-- Google Search Result Snippet Begins -->
        <div id="results_cref"></div>
        <script type="text/javascript" tal:content="cooptool/getCseCrefJS">
          var googleSearchIframeName = "results_cref";
          var googleSearchFormName = "searchbox_cref";
          var googleSearchFrameWidth = 600;
          var googleSearchFrameborder = 0;
          var googleSearchDomain = "www.google.com";
          var googleSearchPath = "/cse";
        </script>
        <script type="text/javascript" src="http://www.google.com/afsonline/show_afs_search.js"
                tal:attributes="src string:http://${coopdomain}/afsonline/show_afs_search.js"></script>
        <!-- Google Search Result Snippet Ends -->   
     </tal:block>
   </div>               

  </body>
</html>
