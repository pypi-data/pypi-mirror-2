<?xml version="1.0" encoding="UTF-8" ?>
<GoogleCustomizations version="1.0" xmlns:tal="http://xml.zope.org/namespaces/tal"
                                    xmlns:metal="http://xml.zope.org/namespaces/metal"
     tal:define="cooptool python:modules['Products.CMFCore.utils'].getToolByName(here, 'portal_googlecoop');
                 goopid cooptool/identifier;
                 coopid python:'_cse_'+goopid.split(':')[1];                 
                 linkSubjects cooptool/Subject;                                 
                 useSubjectAsLabel cooptool/labelKeywords | nothing;">
    <metal:block tal:define="dummy python:request.RESPONSE.setHeader('Content-Type', 'text/xml;;charset='+context.plone_utils.getSiteEncoding())" />
    <CustomSearchEngine>
        <Title tal:content="string:${here/Title}"> Title </Title>   
        <Description tal:content="here/Description"> Description </Description>     
        <Context>
           <Facet tal:repeat="label linkSubjects" tal:condition="useSubjectAsLabel |nothing" >
                <FacetItem Title="Project Sites"  
                            tal:attributes="Title label">
                   <Label name="project_sites" mode="FILTER" Rewrite="" IgnoreBackgroundLabels="false" weight="1"
                          tal:attributes="name python:cooptool.subject2label(label)">
                      <Rewrite/>
                      <IgnoreBackgroundLabels>false</IgnoreBackgroundLabels>
                  </Label>
                  <Title tal:content="label">Cuba</Title>
               </FacetItem>
           </Facet>           
           <BackgroundLabels>             
             <Label name="_cse_0fbay6eytto" tal:attributes="name coopid"/>                                     
          </BackgroundLabels>
        </Context>
        <LookAndFeel nonprofit="true"
           tal:attributes="nonprofit cooptool/addStatus">   
           <!--Logo url="http://www.ascii.com/logo.gif" destination="http://www.ascii.com/" height="90"/-->        
           <Colors url="#FF6600" background="#FFFF33" border="#FF6600" title="#FF3300" text="#000000" visited="#663399" light="#FF0077"
               tal:attributes="url string:#${cooptool/linkColor};
                               background string:#${cooptool/backgroundColor};
                               border string:#${cooptool/borderColor};
                               title string:#${cooptool/titleColor};
                               text string:#${cooptool/textColor};
                               visited string:#${cooptool/visitedColor};
                               light string:#${cooptool/cachedColor};"              
           />
        </LookAndFeel>
    </CustomSearchEngine>   
</GoogleCustomizations>
