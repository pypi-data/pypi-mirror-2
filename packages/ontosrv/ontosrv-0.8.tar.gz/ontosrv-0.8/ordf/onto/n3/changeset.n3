@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdfg:    <http://www.w3.org/2004/03/trix/rdfg-1/> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel: <http://www.w3.org/2004/09/fresnel#> .
@prefix dc:      <http://purl.org/dc/terms/> .
@prefix foaf:    <http://xmlns.com/foaf/0.1/> .
@prefix cs:      <http://purl.org/vocab/changeset/schema#> .
@prefix ordf:    <http://purl.org/NET/ordf/> .
@prefix :        <http://ordf.org/lens/changeset#> .

<http://ordf.org/lens/changeset> a rdfg:Graph ;
	rdfs:label "Changeset Display" ;
	ordf:lens <http://ordf.org/lens/fresnel> ;
	ordf:lensList (
		:ChangesetLens
	) .

:csGroup a fresnel:Group ;
	fresnel:stylesheetLink <http://ordf.org/css/fresnel.css> .

:ChangesetLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain cs:ChangeSet ;
	fresnel:group :csGroup ; 
	fresnel:showProperties (
		cs:subjectOfChange
		cs:changeReason
		cs:creatorName
		cs:createdDate
		cs:precedingChangeSet
		[ a fresnel:PropertyDescription ;
		  fresnel:property cs:addition ;
		  fresnel:sublens :StatementLens ]
		[ a fresnel:PropertyDescription ;
		  fresnel:property cs:removal ;
		  fresnel:sublens :StatementLens ]
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		ordf:lens
		rdf:type
	) .

:StatementLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:instanceLensDomain rdf:Statement ;
	fresnel:group :csGroup ;
	fresnel:showProperties (
		rdf:subject
		rdf:predicate
		rdf:object
		ordf:graph
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		rdf:type
	) .

:tripleFormat a fresnel:Format ;
	fresnel:propertyFormatDomain cs:addition ;
	fresnel:propertyFormatDomain cs:removal ;
	fresnel:valueStyle "reified_triple"^^fresnel:styleClass ;
	fresnel:group :csGroup .

:labelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:label ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "h2_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h2"^^fresnel:styleClass ;
	fresnel:group :csGroup .

:nolabelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:comment ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "nolabel"^^fresnel:styleClass ;
	fresnel:group :csGroup .
