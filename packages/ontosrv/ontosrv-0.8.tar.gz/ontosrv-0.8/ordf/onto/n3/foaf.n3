@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdfg:    <http://www.w3.org/2004/03/trix/rdfg-1/> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel: <http://www.w3.org/2004/09/fresnel#> .
@prefix dc:      <http://purl.org/dc/terms/> .
@prefix foaf:    <http://xmlns.com/foaf/0.1/> .
@prefix time:    <http://www.w3.org/2006/time#> .
@prefix ordf:     <http://purl.org/NET/ordf/> .
@prefix cs:      <http://purl.org/vocab/changeset/schema#> .
@prefix :        <http://ordf.org/lens/foaf#> .

<http://ordf.org/lens/foaf> a rdfg:Graph ;
    rdfs:label "FOAF" ;
    ordf:lens <http://ordf.org/lens/fresnel> ;
    ordf:lensList ( :PersonLens ).
        
:PersonLens a fresnel:Lens ;
    fresnel:purpose fresnel:defaultLens ;
    fresnel:classLensDomain foaf:Person ;
    fresnel:group :foafGroup ; 
    fresnel:showProperties (
        foaf:depiction
        foaf:name
        foaf:nick
        foaf:homepage
        foaf:mbox_sha1sum
        fresnel:allProperties
    ) ;
    fresnel:hideProperties (
        rdf:type
    ) .
        
:foafGroup a fresnel:Group ;
    fresnel:stylesheetLink <http://ordf.org/css/fresnel.css> .

:labelFormat a fresnel:Format ;
    fresnel:propertyFormatDomain rdfs:label ;
    fresnel:label fresnel:none ;
    fresnel:propertyStyle "h2_container"^^fresnel:styleClass ;
    fresnel:valueStyle "h2"^^fresnel:styleClass ;
    fresnel:group :foafGroup .

:linkFormat a fresnel:Format ;
    fresnel:propertyFormatDomain foaf:page, foaf:homepage , rdfs:seeAlso, foaf:currentProject ;
    fresnel:value fresnel:externalLink ;
    fresnel:group :foafGroup .

:imageFormat a fresnel:Format ;
    fresnel:propertyFormatDomain foaf:depiction ;
    fresnel:label fresnel:none ;
    fresnel:value fresnel:image ;
    fresnel:propertyStyle "nolabel"^^fresnel:styleClass ;
    fresnel:group :foafGroup .

:nolabelFormat a fresnel:Format ;
    fresnel:propertyFormatDomain foaf:name ;
    fresnel:label fresnel:none ;
    fresnel:propertyStyle "nolabel"^^fresnel:styleClass ;
    fresnel:group :foafGroup .
