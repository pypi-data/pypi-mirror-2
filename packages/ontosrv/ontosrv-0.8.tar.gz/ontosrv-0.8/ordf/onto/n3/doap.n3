@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdfg:    <http://www.w3.org/2004/03/trix/rdfg-1/> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel: <http://www.w3.org/2004/09/fresnel#> .
@prefix dc:      <http://purl.org/dc/terms/> .
@prefix doap:    <http://usefulinc.com/ns/doap#>.
@prefix foaf:    <http://xmlns.com/foaf/0.1/> .
@prefix time:    <http://www.w3.org/2006/time#> .
@prefix ordf:     <http://purl.org/NET/ordf/> .
@prefix cs:      <http://purl.org/vocab/changeset/schema#> .
@prefix :        <http://ordf.org/lens/doap#> .

<http://ordf.org/lens/doap> a rdfg:Graph ;
	rdfs:label "DOAP" ;
	ordf:lens <http://ordf.org/lens/fresnel> ;
	ordf:lensList ( :ProjectLens ).
		
:ProjectLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain doap:Project ;
	fresnel:group :doapGroup ; 
	fresnel:showProperties (
		doap:name
		doap:created
		doap:homepage
		doap:description
		doap:programming-language
		[ a fresnel:PropertyDescription ;
		  fresnel:property doap:developer ;
		  fresnel:sublens :PersonLens ]
		[ a fresnel:PropertyDescription ;
		  fresnel:property doap:maintainer ;
		  fresnel:sublens :PersonLens ]
		doap:license
		doap:download-page
		[ a fresnel:PropertyDescription ;
		  fresnel:property doap:release ;
		  fresnel:sublens :ReleaseLens ]
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		rdf:type
	) .

:PersonLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain foaf:Person ;
	fresnel:group :doapGroup ; 
	fresnel:showProperties (
		foaf:name
		rdfs:seeAlso
	) .

:ReleaseLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain doap:Version ;
	fresnel:group :doapGroup ; 
	fresnel:showProperties (
		doap:name
		doap:revision
		doap:created 
	) .
		
:doapGroup a fresnel:Group ;
	fresnel:stylesheetLink <http://ordf.org/css/fresnel.css> .

:labelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:label ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "h2_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h2"^^fresnel:styleClass ;
	fresnel:group :doapGroup .

:linkFormat a fresnel:Format ;
	fresnel:propertyFormatDomain doap:license, doap:download-page, doap:category, doap:homepage, rdfs:seeAlso ;
	fresnel:value fresnel:externalLink ;
	fresnel:group :doapGroup .

:nolabelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain foaf:name ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "nolabel"^^fresnel:styleClass ;
	fresnel:group :doapGroup .
