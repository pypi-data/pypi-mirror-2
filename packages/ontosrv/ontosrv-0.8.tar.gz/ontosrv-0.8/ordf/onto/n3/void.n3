@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdfg:     <http://www.w3.org/2004/03/trix/rdfg-1/> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel:  <http://www.w3.org/2004/09/fresnel#> .
@prefix dc:       <http://purl.org/dc/terms/> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix ordf:     <http://purl.org/NET/ordf/> .
@prefix void:     <http://rdfs.org/ns/void#>.
@prefix :         <http://ordf.org/lens/void#> .

<http://ordf.org/lens/void> a rdfg:Graph ;
	rdfs:label "VOID Interlinked DataSets" ;
    rdfs:comment "Incomplete - only handles datasets, not link sets" ;
	ordf:lens <http://ordf.org/lens/fresnel> .

:DataSet a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain void:Dataset ;
	fresnel:group :voidGroup ; 
	fresnel:showProperties (
		dc:title
		dc:description
        rdfs:comment
        foaf:homepage
        foaf:page
        void:subset
        void:vocabulary
		fresnel:allProperties
	) ;
    fresnel:hideProperties (
        rdf:type
        rdfs:label
        rdfs:comment
        ordf:lens
    ) .

:voidGroup a fresnel:Group ;
	fresnel:stylesheetLink <http://ordf.org/css/fresnel.css> .

:labelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:label ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "h1_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h1"^^fresnel:styleClass ;
	fresnel:group :voidGroup .

:titleFormat a fresnel:Format ;
	fresnel:propertyFormatDomain dc:title ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "h1_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h1"^^fresnel:styleClass ;
	fresnel:group :voidGroup .

:descriptionFormat a fresnel:Format ;
	fresnel:propertyFormatDomain dc:description ;
	fresnel:label "Description" ;
	fresnel:group :voidGroup .

:commentFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:comment ;
	fresnel:label "Comment" ;
	fresnel:group :voidGroup .

:subsetFormat a fresnel:Format ;
    fresnel:propertyFormatDomain void:subset ;
    fresnel:label "Subset" ;
    fresnel:group :voidGroup .

:vocabFormat a fresnel:Format ;
    fresnel:propertyFormatDomain void:vocabulary ;
    fresnel:label "Vocabularies Used" ;
    fresnel:group :voidGroup .

:sparqlFormat a fresnel:Format ;
    fresnel:propertyFormatDomain void:sparqlEndpoint ;
    fresnel:label "SPARQL Endpoint" ;
    fresnel:group :voidGroup .

:exampleFormat a fresnel:Format ;
    fresnel:propertyFormatDomain void:exampleResource ;
    fresnel:label "Example Resource";
    fresnel:group :voidGroup .

:homepageFormat a fresnel:Format ;
    fresnel:propertyFormatDomain foaf:homepage ;
    fresnel:label "Home Page" ;
    fresnel:group :voidGroup .

:pageFormat a fresnel:Format ;
    fresnel:propertyFormatDomain foaf:page ;
    fresnel:label "Page" ;
    fresnel:group :voidGroup .

:depictionFormat a fresnel:Format ;
	fresnel:propertyFormatDomain foaf:depiction ;
	fresnel:label fresnel:none ;
	fresnel:value fresnel:image ;
	fresnel:propertyStyle "display: block; width: 100%;"^^fresnel:stylingInstructions ;
	fresnel:group :voidGroup .
