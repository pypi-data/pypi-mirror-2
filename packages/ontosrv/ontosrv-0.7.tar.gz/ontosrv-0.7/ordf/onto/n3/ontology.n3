@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdfg:    <http://www.w3.org/2004/03/trix/rdfg-1/> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel: <http://www.w3.org/2004/09/fresnel#> .
@prefix dc:      <http://purl.org/dc/terms/> .
@prefix foaf:    <http://xmlns.com/foaf/0.1/> .
@prefix ordf:    <http://purl.org/NET/ordf/> .
@prefix opmv:    <http://purl.org/net/opmv/ns#> .
@prefix time:    <http://www.w3.org/2006/time#> .
@prefix :        <http://ordf.org/lens/ontology#> .

<http://ordf.org/lens/ontology> a rdfg:Graph ;
	rdfs:label "Ontology Display" ;
	ordf:lens <http://ordf.org/lens/fresnel> ;
	ordf:lensList (
		:OntologyLens
		:ClassLens
		:ObjectLens
		:DatatypeLens
	) .

:OntologyLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain owl:Ontology ;
	fresnel:group :ontoGroup ; 
	fresnel:showProperties (
		rdfs:label
		rdfs:comment
		ordf:changeSet
		[ a fresnel:PropertyDescription ;
		  fresnel:property opmv:wasGeneratedBy ;
		  fresnel:sublens :ProcessLens ]
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		rdf:type
		opmv:wasGeneratedAt
		ordf:lens
	) .

:ClassLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain owl:Class ;
	fresnel:group :ontoGroup ;
	fresnel:showProperties (
		rdfs:label
		rdfs:comment
		rdf:type
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		rdfs:isDefinedBy
	) .

:DatatypeLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain owl:DatatypeProperty ;
	fresnel:group :ontoGroup ;
	fresnel:showProperties (
		rdfs:label
		rdfs:comment
		rdf:type
		rdfs:domain
		rdfs:range
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		rdfs:isDefinedBy
	) .

:ObjectLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain owl:ObjectProperty ;
	fresnel:group :ontoGroup ;
	fresnel:showProperties (
		rdfs:label
		rdfs:comment
		rdf:type
		rdfs:domain
		rdfs:range
		fresnel:allProperties
	) ;
	fresnel:hideProperties (
		rdfs:isDefinedBy
	) .

:TimeLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:instanceLensDomain time:Instant ;
	fresnel:group :ontoGroup ;
	fresnel:showProperties (
		time:inXSDDateTime
	) .

:ProcessLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:instanceLensDomain opmv:Process ;
	fresnel:group :ontoGroup ;
	fresnel:showProperties (
		[ a fresnel:PropertyDescription ;
		  fresnel:property opmv:wasPerformedAt ;
		  fresnel:sublens :TimeLens ]
		[ a fresnel:PropertyDescription ;
		  fresnel:property opmv:wasControlledBy ;
		  fresnel:sublens :AgentLens ]
		opmv:used
		ordf:version
		ordf:hostname
		ordf:pid
		ordf:cmdline
	) .

:AgentLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:instanceLensDomain foaf:Agent ;
	fresnel:group :ontoGroup ;
	fresnel:showProperties (
		foaf:name
		foaf:nick
		foaf:homepage
	) .

:ontoGroup a fresnel:Group ;
	fresnel:stylesheetLink <http://ordf.org/css/fresnel.css> .

:labelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:label ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "h2_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h2"^^fresnel:styleClass ;
	fresnel:group :ontoGroup .

:nolabelFormat a fresnel:Format ;
	fresnel:propertyFormatDomain rdfs:comment ;
	fresnel:propertyFormatDomain foaf:nick ;
	fresnel:propertyFormatDomain time:inXSDDateTime ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "nolabel"^^fresnel:styleClass ;
	fresnel:group :ontoGroup .
