# Contributor: Roberto Gea (Alquimista) <alquimistaotaku@gmail.com>

pkgname=scru
pkgver=1.1.1
pkgrel=1
pkgdesc="Screenshot Uploader"
arch=(any)
url="https://bitbucket.org/alquimista"
license=("MIT")
depends=("python2" "scrot" "pygobject")
makedepends=("python2-distribute")
#optdepnds=("pygobject: soporte para notificaciones")
source=(http://pypi.python.org/packages/source/S/Scru/${pkgname}-${pkgver}.tar.gz
        http://pypi.python.org/packages/source/p/plac/plac-0.8.1.tar.gz)
options=(!emptydirs)
md5sums=('50e093859dc640c7cf80160dcdaa22cb'
         '19709c1af633f5d14af523d723390cdc') #generate with 'makepkg -g'


build() {
	cd plac-0.8.1
	python2 setup.py build --root=$pkgdir 
	cd $srcdir/${pkgname}
    python2 setup.py build --root=$pkgdir 
}

package() {
  cd plac-0.8.1
  python2 setup.py install --root=$pkgdir --optimize=1	
  cd $srcdir/${pkgname}
  python2 setup.py install --root=$pkgdir --optimize=1
}
