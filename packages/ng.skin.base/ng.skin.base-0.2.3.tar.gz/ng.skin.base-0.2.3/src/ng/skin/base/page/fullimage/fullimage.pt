<html metal:use-macro="views/standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>Full photo image</title>
  </head>
  <body metal:fill-slot="mainbody">
    <div class="fullimagecontainer">
      <h1 class="sitetitle"><a href="/" tal:content="context/@@main/title">Заголовок</a></h1>
      <div class="imagebox">
        <a href=""
          tal:define="url context/ob/@@absolute_url"
          tal:attributes="href python:request.get('HTTP_REFERER',None) or url">
          <img border="0" src=""
            tal:attributes="src python:path('context/ob/@@absolute_url') + '/@@get'; alt context/title" />
        </a>
      </div>

      <h1 class="fullimage" tal:content="structure context/title" />
    
      <div style="font-size: 10pt;">
        <span>Вы здесь:&nbsp;&nbsp;</span>
        <tal:block repeat="breadcrumb context/@@absolute_url/breadcrumbs">
          <span tal:condition="repeat/breadcrumb/start">
            <a href=""
              tal:attributes="
              href string:${breadcrumb/url}/"
              i18n:translate="">Main</a>
          </span>
          <span tal:condition="not:repeat/breadcrumb/start">
            <nobr>::<a href=""
                tal:content="string:${breadcrumb/name}"
                tal:attributes="
                href string:${breadcrumb/url}/">
                breadcrumb item</a></nobr>
          </span>
        </tal:block>
      </div>
    </div>
  </body>
</html>  