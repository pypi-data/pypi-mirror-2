<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">

  <head>
    <title>Create Dictionary Item</title>
  </head>
  <body>

    <div metal:fill-slot="body">
       <tal:block tal:condition="request/form/crosswiki|nothing">
           <form action="" tal:attributes="action python:'%(crosswiki)s/@@searchpage.html' % request.form">
	   	<input type="hidden" name="query" value="" tal:attributes="value python:request.form['field.title']"/>
	   	<input type="hidden" name="predicate" value="keyword"/>
	   	<input type="submit" value="Use Cross Wiki"/>
           </form>
	   
<!--           <a href="" tal:attributes="href python:'%(crosswiki)s/@@searchpage.html?query=%(keyword)s&predicate=keyword' % {'keyword': request.form['field.title'], 'crosswiki':request.form['crosswiki']}">Создать на КроссВики</a> -->
       </tal:block>
       <div metal:use-macro="view/generated_form/macros/addform">
       </div>
   </div>
  </body>

</html>
