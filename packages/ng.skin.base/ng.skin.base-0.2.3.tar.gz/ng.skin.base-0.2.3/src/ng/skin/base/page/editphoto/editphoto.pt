<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>EditPhoto</title>
  </head>
  <body>
    <div metal:fill-slot="body">
      <div metal:use-macro="view/generated_form/macros/body">
        <div class="row" style="text-align: center" metal:fill-slot="extra_info">
          <a href="" tal:attributes="href python: path('context/@@absolute_url')+u'/@@view'">
            <img 
              border="1" 
              align="center"
		          tal:attributes="src python: path('context/@@smartimagecontainer/full/url')[:-4] + '/@@nocache'" />
          </a>
          <tal:block repeat="item view/msgerrors" condition="view/msgerrors">
            <div class="row">
              <span class="error" tal:content="item"/>
            </div>                 
          </tal:block>
        </div>
       </div>
    </div>
  </body>
</html>
