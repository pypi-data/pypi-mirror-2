<html metal:use-macro="views/@@standard_macros/view">
<title> Словарь </title>
 <body metal:fill-slot="body">
    <h1 class="abstract">Словарь</h1>
    <div class="abstract">
    <div class="article">
      <dl style="width: 70em; float: left;" align="center"
          ><tal:block repeat="word view/words"
             ><span style="float: left; width: 15em; height: 4em; border-bottom: 0pt solid gray;"><dt tal:content="word"></dt
            ><dd tal:repeat="item python:view.articlebyword(word)" 
            ><a tal:attributes="href item/@@absolute_url" tal:content="item/title | item/__name__"></a
            ></dd
        ></span></tal:block
      ></dl>
    </div>
</body>
</html>
