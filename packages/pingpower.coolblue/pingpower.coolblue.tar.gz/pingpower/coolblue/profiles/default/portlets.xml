<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
	

 <assignment name="navigation" category="context" key="/"
    manager="plone.rightcolumn" type="portlets.Navigation">
     <property name="topLevel">0</property>
 </assignment>
 <!-- remove the columns in the left column -->
<assignment 
     remove="True" 
	 name="login" 
	 category="context" 
	 key="/"
	 manager="plone.leftcolumn" 
	 type="portlets.Login" 
	 />
<assignment 
     remove="True" 
	 name="Navigation" 
	 category="context" 
	 key="/"
	 manager="plone.leftcolumn" 
	 type="portlets.Navigation" 
	 />
<!-- add a new portlet which to show the Aboutme -->
 <portlet 
   addview="portlets.Aboutme"
   title="About me"
   description="A portlet which can render Aboutme in the Coolblue website"
   i18n:attributes="title;
                    description"
   >  
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
 <!-- add a new portlet which to show the Folder items -->
  <portlet 
   addview="portlets.Folder"
   title="Folder Items"
   description="A portlet which can render Folder items in the Coolblue website"
   i18n:attributes="title;
                    description"
   >  
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
<!-- modify a new portlet to replace login portlet -->
<portlet
  addview="portlets.logininfo"
  title="logininfo"
  description="A portlet which to control the login forms and to show the info of the user"
   i18n:attributes="title;
                    description"
   >  
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
 <!--To put the Short about portlet to the rightcolumn -->
   <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Calendar"
     name="Calendar"
     />
   <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Login"
     name="login"
     />   
   <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Aboutme"
     name="Aboutme"
     />
   <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.logininfo"
     name="Logininfo"
     />	
 </portlets>    