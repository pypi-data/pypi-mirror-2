<dl class="portlet portletShortabout"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <div tal:content="view/title" tal:omit-tag="">Folder Items</div>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">

  <tal:block>
    <ul tal:repeat="item view/results">
			<li><a href="http://www.dreamtemplate.com" title="Website Templates" 
			tal:define="
			item_title item/pretty_title_or_id;
			item_description item/Description;
			Showitem python:'%s <br/> <span> %s </span> '%(item_title,item_description);"
			tal:content="structure Showitem"
			tal:attributes="href item/getURL;
			                title item/pretty_title_or_id;">DreamTemplate <br />
	            	<span>Over 6,000+ Premium Web Templates</span></a>
	            </li>
	</ul>
  </tal:block> 
  
        </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
