<tal:rss tal:define="path context/@@plone_portal_state/navigation_root_path;
					 portal context/@@plone_portal_state/portal;"
		 tal:condition="python:portal.portal_syndication.isSiteSyndicationAllowed()">
<tal:rssenable tal:condition="not:python:portal.portal_syndication.isSyndicationAllowed(portal)">
<span tal:define="dummy python:portal.portal_syndication.enableSyndication(portal);" tal:omit-tag=""></span>
</tal:rssenable>
<p id="rss" tal:condition="python:portal.portal_syndication.isSyndicationAllowed(portal)">
   <a href="index.html" tal:attributes="href python:'%s/RSS'%path">Grab the RSS feed</a>
</p>
</tal:rss>