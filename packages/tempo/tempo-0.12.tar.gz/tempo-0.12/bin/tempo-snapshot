""" Wrapper script use to run Tempo jobs.

Handles checking of return codes and publishing of notifications.
"""

import os
import sys

possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'tempo', '__init__.py')):
    sys.path.insert(0, possible_topdir)

import tempo.command


class SnapshotQueueWorker(tempo.command.QueueWorker):
    def make_command(self, task, body, message):
        instance_uuid = task.instance_uuid
        snapshot_name = body.get('snapshot_name', 'snapshot')
        cmd = ['nova-snapshot.sh', instance_uuid, snapshot_name]
        return cmd


if __name__ == '__main__':
    worker = SnapshotQueueWorker(exchange='tempo',
                                 queue='tempo.snapshot',
                                 key='snapshot',
                                 logger_name='tempo-snapshot')
    worker.configure()
    worker.run()
