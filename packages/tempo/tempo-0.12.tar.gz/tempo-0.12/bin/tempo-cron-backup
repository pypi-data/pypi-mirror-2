"""Wrapper to cron to queue snapshot jobs."""

import optparse
import os
import sys

possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'tempo', '__init__.py')):
    sys.path.insert(0, possible_topdir)

import tempo.command

if __name__ == '__main__':
    parser = tempo.command.make_options_parser()
    options, args = parser.parse_args()

    if len(args) < 2:
        sys.exit('Need at least task UUID and backup type as arguments')

    topic = 'tempo.backup'
    message = dict(task_uuid=args[0], backup_type=args[1])
    tempo.command.publish_message(topic, message)
