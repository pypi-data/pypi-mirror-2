<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.taghelper">
<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">
        <form method="post" class="enableFormTabbing"
                tal:attributes="action string:${context/absolute_url}/${view/__name__}">

            <fieldset id="fieldset-calais" tal:define="terms view/calais_terms">
              <legend id="fieldsetlegend-calais">Open Calais</legend>
              <div tal:repeat="term terms">
                <input type="checkbox"
                id="calais_term_1"
                value="Biodiversity"
                tal:attributes="id string:calais_term_${repeat/term/letter};
                                value term"
                name="subject:list"
                 />
                <label for="calais_term_1"
                    tal:attributes="for string:calais_term_${repeat/term/letter}"
                    tal:content="term">Biodiversity</label>

              </div>
            </fieldset>

            <fieldset id="fieldset-yahoo" tal:define="terms view/yahoo_terms">
              <legend id="fieldsetlegend-yahoo">Yahoo</legend>
              <div tal:repeat="term terms">
                <input type="checkbox"
                id="yahoo_term_1"
                value="Biodiversity"
                tal:attributes="id string:yahoo_term_${repeat/term/letter};
                                value term"
                name="subject:list"
                 />
                <label for="yahoo_term_1"
                    tal:attributes="for string:yahoo_term_${repeat/term/letter}"
                    tal:content="term">Biodiversity</label>
              </div>
            </fieldset>

            <fieldset id="fieldset-silcc" tal:define="terms view/silcc_terms">
              <legend id="fieldsetlegend-silcc">SiLLC</legend>
              <div tal:repeat="term terms">
                <input type="checkbox"
                id="silcc_term_1"
                value="Biodiversity"
                tal:attributes="id string:silcc_term_${repeat/term/letter};
                                value term"
                name="subject:list"
                 />
                <label for="silcc_term_1"
                    tal:attributes="for string:silcc_term_${repeat/term/letter}"
                    tal:content="term">Biodiversity</label>

              </div>
            </fieldset>
            <fieldset id="fieldset-ttn" tal:define="terms view/ttn_terms">
              <legend id="fieldsetlegend-ttn">TagThe.Net</legend>
              <div tal:repeat="term terms">
                <input type="checkbox"
                id="ttn_term_1"
                value="Biodiversity"
                tal:attributes="id string:ttn_term_${repeat/term/letter};
                                value term"
                name="subject:list"
                 />
                <label for="ttn_term_1"
                    tal:attributes="for string:ttn_term_${repeat/term/letter}"
                    tal:content="term">Biodiversity</label>

              </div>
            </fieldset>
            <div>
                <input type="submit" class="context" name="form.button.save"
                    value="Save" />
                <input type="submit" class="context" name="form.button.cancel"
                    value="Cancel" />
            </div>
        </form>
        </tal:main-macro>
    </div>
</body>
</html>
