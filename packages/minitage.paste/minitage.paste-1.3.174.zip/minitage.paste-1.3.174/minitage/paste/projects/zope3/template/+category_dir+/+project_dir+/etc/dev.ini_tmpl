#
# WSGI CONFIGURATION FILE
#

[DEFAULT]
debug=false
test_url=false

[composite:main]
use=egg:Paste#urlmap
/=zope

[pipeline:zope]
pipeline=$project

[app:$project]
use = egg:$project
conf=%(here)s/../parts/zope.conf

[filter:exc]
# Change the last part from 'ajax' to 'pdb' for a post-mortem debugger
# on the console:
use = egg:z3c.evalexception#ajax

[server:main]
#if 'zodb' in $mode:
use = egg:Paste#http
# You cant use spawning with plain zodb
#else
use = egg:Spawning
#end if
host = $address
port = $port


