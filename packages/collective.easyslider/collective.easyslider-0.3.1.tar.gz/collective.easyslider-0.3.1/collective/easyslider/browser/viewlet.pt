<tal:show tal:condition="view/show">

  <div id="slider-container"
       tal:define="slides python: view.settings.slides">
    <div id="slider">
        <ul>
        <tal:rep tal:repeat="slide slides">
            <li tal:content="structure slide" />
        </tal:rep>
        </ul>
    </div>
  </div>

</tal:show>