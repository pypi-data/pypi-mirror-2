<div id="slides-view"
     lang="en"
     xml:lang="en"
     xmlns="http://www.w3.org/1999/xhtml"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     tal:define="slides python: view.settings.slides"
     i18n:domain="plone">
     
     <style tal:content="structure view/css" type="text/css" />
      <input 
         type="hidden" 
         id="slides-view-url" 
         tal:attributes="value string:${view/slider_url}/--slides--"
     />     
    <p class='discreet'><tal:empty tal:replace="python: len(slides)" /> total slides</p>
    <div class="add-new-buttons">
    <a class='add-new'
        tal:condition="python: len(slides) > 0"
        tal:attributes="href string:${view/slider_url}/edit-slide?index=-1">
        add new slide
    </a>
    </div>
        <tal:rep tal:repeat="slide slides">
            <div class="slide">
                <li tal:content="structure slide" />
                <div class="slide-buttons">
                    <b class="slide-number">#<tal:replace tal:replace="repeat/slide/number" /></b> &raquo;  
                    
                    <a class="edit" tal:attributes="href string:${view/slider_url}/edit-slide?index=${repeat/slide/index}">
                        edit</a> &minus;
                    <a class="move-up" tal:attributes="href string:${view/slider_url}/--slides--/${repeat/slide/index}/@@move-slide-up">
                        up</a> &minus; 
                    <a class="move-down" tal:attributes="href string:${view/slider_url}/--slides--/${repeat/slide/index}/@@move-slide-down">
                        down</a> &minus; 
                    <a class="remove" tal:attributes="href string:${view/slider_url}/--slides--/${repeat/slide/index}/@@remove-slide">
                        remove</a>
                </div>
            </div>
        </tal:rep>

        <div class="add-new-buttons">
          <a class='add-new'
              tal:attributes="href string:${view/slider_url}/edit-slide?index=-1">
              add new slide
          </a>
        </div>
</div>
