<?xml version="1.0"?>
<object name="portal_skins">

 <object name="abstract_galleriffic_images"
    meta_type="Filesystem Directory View"
    directory="Products.galleriffic:skins/abstract_galleriffic_images"/>
 <object name="abstract_galleriffic_templates"
    meta_type="Filesystem Directory View"
    directory="Products.galleriffic:skins/abstract_galleriffic_templates"/>
 <object name="abstract_galleriffic_styles"
    meta_type="Filesystem Directory View"
    directory="Products.galleriffic:skins/abstract_galleriffic_styles"/>

 <skin-path name="*">
  <layer name="abstract_galleriffic_images"
     insert-after="custom"/>
  <layer name="abstract_galleriffic_templates"
     insert-after="abstract_galleriffic_images"/>
  <layer name="abstract_galleriffic_styles"
     insert-after="abstract_galleriffic_templates"/>
 </skin-path>

</object>