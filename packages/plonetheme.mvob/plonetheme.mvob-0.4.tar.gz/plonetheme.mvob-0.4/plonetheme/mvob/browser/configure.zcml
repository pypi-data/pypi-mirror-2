<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plonetheme.mvob">

  <!-- 'MVOB Theme' Zope 3 browser layer
    Register views, viewlets and resources for this layer to make sure
    they only apply to the 'MVOB Theme' theme.
    You can also use this layer to override default Plone browser views
    and viewlets only within the 'MVOB Theme' theme.
  -->
  <interface
      interface=".interfaces.IThemeSpecific"
      type="zope.publisher.interfaces.browser.IBrowserSkinType"
      name="MVOB Theme"
      />
  
  <!-- Viewlets registration -->
  <browser:viewlet
      name="plonetheme.mvob.personal_bar"
      manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
      class="plone.app.layout.viewlets.common.PersonalBarViewlet"
      layer=".interfaces.IThemeSpecific"
      permission="zope2.View"
      />
      
  <browser:viewlet
      name="plonetheme.mvob.copyright"
      manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
      template="./copyright.pt"
      layer=".interfaces.IThemeSpecific"
      permission="zope2.View"
      />

  <browser:viewlet
      name="plonetheme.mvob.footermenu"
      manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
      template="./footermenu.pt"
      layer=".interfaces.IThemeSpecific"
      permission="zope2.View"
      />
      
  <browser:viewlet
      name="plonetheme.mvob.visualclear"
      manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
      template="./visualclear.pt"
      layer=".interfaces.IThemeSpecific"
      permission="zope2.View"
      />

  <!-- Zope 3 browser resources -->

  <!-- Resource directory for images
    See plonetheme/mvob/browser/images/README.txt
    for more information about registering images as Zope 3 browser
    resources.
  -->
  <browser:resourceDirectory
      name="plonetheme.mvob.images"
      directory="images"
      layer=".interfaces.IThemeSpecific"
      />

  <!-- Resource directory for stylesheets
    See plonetheme/mvob/browser/stylesheets/README.txt
    for more information about registering stylesheets as Zope 3 browser
    resources.
  -->
  <browser:resourceDirectory
      name="plonetheme.mvob.stylesheets"
      directory="stylesheets"
      layer=".interfaces.IThemeSpecific"
      />

  <browser:page
         for="Products.ATContentTypes.interface.IATTopic"
         name="slider_view"
         class=".slider_view.SliderView"
         template="slider_view.pt"
         permission="zope2.View"
     />
     
  <browser:menuItem
        for="Products.ATContentTypes.interface.IATTopic"
        menu="plone_displayviews"
        title="Slider View"
        action="slider_view"
        description="View that creates a javascript slider from the body and shows two results out of the collection"
    />


</configure>
