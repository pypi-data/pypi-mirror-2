# example server configuration for running apps

[global]
server.socket_host = '127.0.0.1'
server.socket_port = 8080
engine.autoreload_on = False
log.screen = False
log.error_file = '/var/server/error.log'
environment = 'production'


hosts.apps = {
    'www': { \
        'on': True,
        'default': True,
        'domain': 'www.dasa.cc',
        'conf': 'apps/www/app.conf',
        },
            
    'js': { \
        'on': True,
        'domain': 'js.dasa.cc',
        'conf': 'apps/js/app.conf',
        },
            
    'kwh': { \
        'on': True,
        'domain': 'kwh.dasa.cc',
        'conf': 'apps/kwh/app.conf',
        },

    'gitview': { \
        'on': True,
        'domain': 'gitview.dasa.cc',
        'conf': 'apps/gitview/app.conf',
        },
    'daml': { \
        'on': True,
        'domain': 'daml.dasa.cc',
        'conf': 'apps/daml/app.conf',
    },
    }

