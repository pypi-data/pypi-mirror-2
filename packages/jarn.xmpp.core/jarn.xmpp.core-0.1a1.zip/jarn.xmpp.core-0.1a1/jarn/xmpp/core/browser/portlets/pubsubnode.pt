<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portletPubSubNode"
    i18n:domain="jarn.xmpp.core" tal:define="isLeaf python: view.nodeType=='leaf'">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <tal:portrait tal:condition="isLeaf">
            <img class="portrait"
                 tal:define="portrait python:context.portal_membership.getPersonalPortrait(view.node);"
                 tal:condition="portrait"
                 tal:attributes="src portrait/absolute_url">
        </tal:portrait>
        <span tal:content="view/title">A node</span>
        <span class="portletTopRight"></span>
        <div class="visualClear"><!-- --></div>
    </dt>

    <tal:pubsubitems  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                                plone_view context/@@plone;"
                    tal:repeat="obj view/items">
    <dd tal:define="oddrow repeat/obj/odd;
                    author obj/author;
                    content obj/content;
                    updated obj/updated;"
         tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
         <tal:portrait tal:condition="not: isLeaf">
             <img class="portrait"
                  tal:define="portrait python:context.portal_membership.getPersonalPortrait(author);"
                  tal:condition="portrait"
                  tal:attributes="src portrait/absolute_url">
         </tal:portrait>
         <span tal:content="author">Saint Andre</span>
         <span tal:replace="structure content">xmpp ftw!</span>
         <span class="portletItemDetails"
            tal:content="python:toLocalizedTime(updated)">May 5</span>
          <div class="visualClear"><!-- --></div>
    </dd>
    </tal:pubsubitems>
    <dd class="portletFooter" tal:condition="view/showPublishForm">
        <span class="portletBottomLeft"></span>
        <a class="pubsub-post"
          tal:attributes="href string:@@pubsub-publish?node=${view/node}">Post</a>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</html>
