<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.salesforce.query">
<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">


        <ul id="sf_actions">
        <li tal:condition="view/update_allowed">
            <a tal:attributes="href string:${context/absolute_url}/update">
                Update <span tal:replace="context/datatype"/>s (call to SalesForce)
            </a>
        </li>
        </ul>

        <div tal:replace="structure view/item_details" />

        </tal:main-macro>
    </div>
</body>
</html>
