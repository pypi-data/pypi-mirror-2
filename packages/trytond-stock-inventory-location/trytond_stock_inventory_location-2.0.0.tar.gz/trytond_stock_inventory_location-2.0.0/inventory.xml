<tryton>
    <data>
        <record model="ir.action.wizard" id="wizard_create_inventory">
            <field name="name">Create Inventories</field>
            <field name="wiz_name">stock.inventory.create</field>
            <field name="groups" eval="[('add', ref('stock.group_stock'))]"/>
        </record>
        <menuitem parent="stock.menu_inventory_form" action="wizard_create_inventory"
            id="menu_create_inventory" sequence="10" groups="stock.group_stock"/>

        <record model="ir.ui.view" id="inventory_create_init_view_form">
            <field name="model">stock.inventory.create.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Create Inventories">
                    <label name="lost_found"/>
                    <field name="lost_found"/>
                    <label name="company"/>
                    <field name="company"/>
                    <label name="date"/>
                    <field name="date"/>
                    <separator name="locations" colspan="4"/>
                    <field name="locations" colspan="4">
                        <tree string="Locations" fill="1">
                            <field name="name" select="1"/>
                            <field name="code" select="1"/>
                        </tree>
                    </field>
                </form>
                ]]>
            </field>
        </record>
    </data>
</tryton>
