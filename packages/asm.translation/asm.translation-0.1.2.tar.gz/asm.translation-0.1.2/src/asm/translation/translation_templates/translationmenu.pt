<div class="section expandable">
    <h3>Language
    <span class="closed ui-icon ui-icon-carat-1-s"></span>
    <span class="closed hint" tal:content="viewlet/current_language">English</span>
    <span class="open ui-icon ui-icon-carat-1-n"></span>
    </h3>

    <ul class="expand">
        <li tal:repeat="version viewlet/list_language_versions"
            tal:attributes="class version/class">
            <a tal:attributes="href version/url">
                <span tal:replace="version/label"/>
                <span tal:condition="version/hint" class="discreet"
                      tal:content="version/hint"/>
            </a>
        </li>
    </ul>
</div>
