<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.atimage.transformtoolbar">

  <!-- View page registration -->
  <browser:page
        name="transform"
        for="Products.ATContentTypes.interface.IATImage"
        class="collective.atimage.transformtoolbar.browser.transform.TransformView"
        attribute="transform"
        permission="cmf.ModifyPortalContent"
        layer="collective.atimage.transformtoolbar.interfaces.ITransformToolbarLayer"
        />

  <!-- Resources registration -->
  <browser:resourceDirectory
        name="collective.atimage.transformtoolbar"
        directory="resources"
        layer="collective.atimage.transformtoolbar.interfaces.ITransformToolbarLayer"
        />

  <!-- Viewlet registration -->
  <browser:viewlet
        name="collective.atimage.transformtoolbar.toolbar"
        for="Products.ATContentTypes.interface.IATImage"
        manager="plone.app.layout.viewlets.interfaces.IBelowContentBody"
        layer="collective.atimage.transformtoolbar.interfaces.ITransformToolbarLayer"
        class="collective.atimage.transformtoolbar.browser.viewlets.TransformToolbarViewlet"
        permission="cmf.ModifyPortalContent"
        view="zope.publisher.interfaces.browser.IBrowserView"
        />



</configure>

