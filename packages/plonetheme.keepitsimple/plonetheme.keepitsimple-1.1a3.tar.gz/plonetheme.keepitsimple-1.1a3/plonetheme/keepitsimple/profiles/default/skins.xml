<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Keep it Simple">

 <object name="plonetheme_keepitsimple_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.keepitsimple:skins/plonetheme_keepitsimple_custom_images"/>
 <object name="plonetheme_keepitsimple_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.keepitsimple:skins/plonetheme_keepitsimple_custom_templates"/>
 <object name="plonetheme_keepitsimple_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.keepitsimple:skins/plonetheme_keepitsimple_styles"/>

 <skin-path name="Keep it Simple" based-on="Plone Classic Theme">
  <layer name="plonetheme_keepitsimple_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_keepitsimple_custom_templates"
     insert-after="plonetheme_keepitsimple_custom_images"/>
  <layer name="plonetheme_keepitsimple_styles"
     insert-after="plonetheme_keepitsimple_custom_templates"/>
  <layer name="classic_styles"
     insert-after="plonetheme_keepitsimple_styles"/>

 </skin-path>

</object>
