<html metal:use-macro="context/@@controlpanel_macros/macros/master">
  <metal:main-slot fill-slot="body">
    <p class="location-bar">
      <a href="@@manage_main">Namespaces</a> &gt;
      <a href="#"
         tal:attributes="href view/this_namespace_view_url">
        <span tal:content="view/this_namespace">http://namespaces.zope.org/some_ns</span>
      </a> &gt;
      <span tal:content="view/this_directive">foo</span>
    </p>
    <h2>"<span tal:content="view/this_directive">foo</span>" directive</h2>

    <tal:block define="subdirs view/list_subdirectives"
               condition="subdirs">
      <p>Subdirectives:
        <tal:loop repeat="subdir subdirs">
          <a href="#"
             tal:attributes="href subdir/view_url"
             tal:content="subdir/name">
            subdirective
          </a><span tal:condition="not: repeat/subdir/end">,</span>
        </tal:loop>
      </p>
    </tal:block>

    <tal:bloc define="info view/directive_infos">
      <metal:attributes use-macro="context/@@controlpanel_macros/macros/summary" />
    </tal:bloc>
  </metal:main-slot>
</html>
