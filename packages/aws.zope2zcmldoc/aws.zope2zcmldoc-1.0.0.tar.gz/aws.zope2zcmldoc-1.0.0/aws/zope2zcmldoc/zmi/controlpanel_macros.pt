<metal:master-macro define-macro="master">
  <h1 tal:replace="structure here/manage_page_header" />
  <h2 tal:replace="structure here/manage_tabs" />
  <metal:body-slot define-slot="body">
    Putting body here
  </metal:body-slot>
  <h1 tal:replace="structure here/manage_page_footer" />
</metal:master-macro>

<metal:attributes-macro define-macro="summary">
  <h3>Summary</h3>
  <p class="form-help" tal:content="info/summary">Blah...</p>
  <h3>Attributes</h3>
  <p>Required attributes are in <strong>bold</strong>.</p>
  <table>
    <tr class="row-hilite">
      <th>Name</th>
      <th>Default</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
    <tal:loop repeat="attrib info/attributes">
      <tr class="#"
          tal:attributes="class attrib/row_class">
        <td><tt>
          <strong tal:omit-tag="not: attrib/required"
                  tal:content="attrib/name">foo</strong>
          </tt>
        </td>
        <td tal:content="attrib/default">100</td>
        <td tal:content="attrib/type">Boolean</td>
        <td>
          <strong tal:content="attrib/title">Foo</strong>
          <span tal:content="attrib/description">Lorem ipsum...</span>
        </td>
      </tr>
    </tal:loop>
  </table>
  <h3>Misc</h3>
  <p>Defined in:
    <span tal:content="info/zcml_source">File stuff...</span>
  </p>
  <p>Handler:
    <tt tal:content="info/python_handler">foo.bar</tt>
  </p>
</metal:attributes-macro>
