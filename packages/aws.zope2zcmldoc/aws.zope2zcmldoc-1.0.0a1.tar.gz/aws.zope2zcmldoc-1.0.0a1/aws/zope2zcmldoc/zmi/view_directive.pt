<h1 tal:replace="structure here/manage_page_header" />
<h2 tal:replace="structure here/manage_tabs" />

<h3>ZCML Documentation</h3>
<p>
  <a href="@@manage_main">Namespaces</a> &gt;
  <a href="#"
     tal:attributes="href view/this_namespace_view_url">
    <span tal:content="view/this_namespace">http://namespaces.zope.org/some_ns</span>
  </a> &gt;
  <span tal:content="view/this_directive">foo</span>
</p>
<p>Directive <span tal:content="view/this_directive">foo</span></p>

<tal:block define="subdirs view/list_subdirectives"
           condition="subdirs">
  <p>Subdirectives:
    <tal:loop repeat="subdir subdirs">
      <a href="#"
         tal:attributes="href subdir/view_url"
         tal:content="subdir/name">
        subdirective
      </a><span tal:condition="not: repeat/subdir/last">,</span>
    </tal:loop>
  </p>
</tal:block>

<tal:bloc define="info view/directive_infos">
  <p>Summary:
    <span tal:content="info/summary">Blah...</span>
  </p>
  <p>Attributes</p>
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Options</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
    <tal:loop repeat="attrib info/attributes">
      <tr>
        <td tal:content="attrib/name">foo</td>
        <td tal:content="attrib/option">Required</td>
        <td tal:content="attrib/type">Boolean</td>
        <td>
          <strong tal:content="attrib/title">Foo</strong>
          <span tal:content="attrib/description">Lorem ipsum...</span>
        </td>
      </tr>
    </tal:loop>
  </table>

  <p>Defined in:
    <span tal:content="info/zcml_source">File stuff...</span>
  </p>
  <p>Handler:
    <span tal:content="info/python_handler">foo.bar</span>
  </p>
</tal:bloc>
<h1 tal:replace="structure here/manage_page_footer" />
