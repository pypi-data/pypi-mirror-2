<dl class="portlet portletWordPressBlogPortlet"
    tal:condition="view/available"
    i18n:domain="collective.portlet.wordpress">

    <dt class="portletHeader" tal:condition="view/data/name">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/name"
              i18n:translate="">Header</span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:entries tal:define="toLT nocall:context/@@plone/toLocalizedTime"
                 tal:repeat="entry view/getBlogEntries">
    <dd tal:define="oddrow repeat/entry/odd"
        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
        <a href=""
           class="tile"
           tal:attributes="href entry/url;
                           title entry/desc">
            <span tal:replace="entry/title">Blog Entry Title</span>
            <span class="portletItemDetails"
                  tal:content="python:toLT(entry['date'])">May 5</span>
        </a>
    </dd>
    </tal:entries>

    <dd class="portletFooter"
        tal:condition="view/data/show_more">
        <a class="tile"
           href="#"
           title="View More"
           i18n:attributes="title"
           i18n:translate=""
           tal:attributes="href view/data/url">More&hellip;</a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
