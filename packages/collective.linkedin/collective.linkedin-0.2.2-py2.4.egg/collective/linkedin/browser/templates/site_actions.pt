<ul id="portal-siteactions"
    tal:define="accesskeys python: {'sitemap' : '3', 'accessibility' : '0', 'contact' : '9'};"
    tal:condition="view/site_actions"
    i18n:domain="plone">

    <li tal:repeat="saction view/site_actions"
        tal:attributes="id string:siteaction-${saction/id}">
        <a tal:condition="python:saction['id'] != view.linkedin_action_id()"
           href=""
           tal:define="title saction/title;
                       id saction/id;
                       accesskey python: accesskeys.get(id, '');"
           i18n:attributes="title"
           i18n:translate=""
           tal:content="title"
           tal:attributes="href saction/url;
                           title title;
                           accesskey accesskey;">
            Site action
        </a>
        <tal:ld tal:condition="python:view.action_visible() and saction['id'] == view.linkedin_action_id()">
            LinkedIn: <span id="linkedinpopup"></span>
            <span tal:condition="not:view/company_name">
                You need to set up the company name
            </span>
        </tal:ld>
    </li>
</ul>
<script tal:condition="view/show_popup"
        type="text/javascript"
        tal:content="string:new LinkedIn.CompanyInsiderPopup('linkedinpopup','${view/company_name}');">
</script>
