<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      tal:omit-tag=""
      metal:define-macro="controlpanel"
      i18n:domain="raptus.browsermessage">

<metal:block use-macro="context/prefs_main_template/macros/master">

<metal:block metal:fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border', 1)" />

<body>

<div metal:fill-slot="prefs_configlet_main">

    <div metal:define-macro="form">

        <div id="viewspace" metal:define-slot="viewspace"
             tal:define="ploneview context/@@plone">

            <h1 class="documentFirstHeading"
                i18n:translate="">
                Manage browser message
            </h1>

            <a href=""
               class="link-parent"
               tal:attributes="href string:$portal_url/plone_control_panel"
               i18n:domain="plone"
               i18n:translate="label_up_to_plone_setup">
                Up to Site Setup
            </a>
            
            <form action="@@manage-browsermessage"
                  method="post">
                    
                <fieldset>
                  
                    <legend i18n:translate="">Select</legend>

                    <div class="field">
    
                        <label for="browsers" 
                               i18n:translate="">
                            Browsers for which the message appears
                        </label>
                        
                        <div class="formHelp"
                             i18n:translate="">
                            Select the Browsers for which the upgrade message shall appear
                        </div>
    
                        <div style="float:left; margin-right: 2em;"
                             tal:define="browsersLists python:here.createMultiColumnList(view.browsers, numCols=4);"
                             tal:repeat="sublist browsersLists">
                            <tal:block tal:repeat="browser sublist">
                                <input name="browsers:list"
                                       class="noborder"
                                       type="checkbox"
                                       tal:attributes="value browser/id;
                                                       id browser/id;
                                                       checked browser/checked;"
                                />
                                <label for="#"
                                       tal:attributes="for browser/id"
                                       tal:content="browser/title"
                                       i18n:translate="">Type</label>
                                <br/>
                            </tal:block>
                        </div>
    
                    </div>
    
                    <div class="visualClear" id="clear-space-before-suggest"><!-- --></div>
                    <br />

                    <div class="field">
    
                        <label for="suggest" 
                               i18n:translate="">
                            Browsers to suggest
                        </label>
                        
                        <div class="formHelp"
                             i18n:translate="">
                            Select the Browsers to present to the user for upgrade
                        </div>
                        
                        <tal:block tal:repeat="browser view/suggest">
                            <input name="suggest:list"
                                   class="noborder"
                                   type="checkbox"
                                   tal:attributes="value browser/id;
                                                   id browser/id;
                                                   checked browser/visible;"
                            />
                            <label for="#"
                                   tal:attributes="for browser/id"
                                   tal:content="browser/title"
                                   i18n:translate="">Type</label>
                            <br/>
                        </tal:block>
    
                    </div>
                    
                    <div class="formControls">
                        <input class="context"
                            type="submit"
                            name="form.button.Save"
                            value="Save"
                            i18n:domain="plone"
                            i18n:attributes="value label_save;"
                        />
                    </div>
                
                </fieldset>
                
            </form>
            
        </div>
            
    </div>

</div>
</body>

</metal:block>
</html>
