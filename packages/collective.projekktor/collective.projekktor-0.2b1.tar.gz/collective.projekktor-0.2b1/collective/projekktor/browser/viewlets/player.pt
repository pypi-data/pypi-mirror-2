<tal:block>
  <tal:if condition="view/isVideo">
    <div class="projekktor-video-widget" 
	 id="videoContainer"
	 tal:define="alternates view/getAlternativeFilepaths">     
      <a class="projekktor-video-link"
	 tal:attributes="title  view/getTitle;
			 href view/getFilepath">
	<img class="projekktor-video-poster" 
	     tal:attributes="src view/getPoster;
			     width  view/getWidth;
			     height view/getHeight;
			     alt  view/getTitle;
			     " />
	<span class="projekktor-video-mimetype" 
	      style="visibility: hidden; display: none"
	      tal:content="view/getMimetype" />
      </a>
      <tal:if condition="alternates">
	<div class="projekktor-video-alternatives">
	  <tal:loop repeat="alternate alternates">
	    <a class="projekktor-video-alternative"
	       tal:attributes="href python:alternates[alternate]"
	       tal:content="alternate" />
	  </tal:loop>
	</div>
      </tal:if>
    </div>
  </tal:if>
  <tal:if condition="view/isAudio">
    <div class="projekktor-audio-widget" 
	 id="audioContainer"
	 tal:define="alternates view/getAlternativeFilepaths"> 
      <a class="projekktor-audio-link"
	 tal:attributes="title  view/getTitle;
			 href view/getFilepath">
	<img class="projekktor-audio-poster" 
	     tal:attributes="src view/getPoster;
			     width  view/getWidth;
			     height view/getHeight;
			     alt  view/getTitle;
			     " />
	<span class="projekktor-audio-mimetype" 
	      style="visibility: hidden; display: none"
	      tal:content="view/getMimetype" />
      </a>
      <tal:if condition="alternates">
	<div class="projekktor-audio-alternatives">
	  <tal:loop repeat="alternate alternates">
	    <a class="projekktor-audio-alternative"
	       tal:attributes="href python:alternates[alternate]"
	       tal:content="alternate" />
	  </tal:loop>
	</div>
      </tal:if>
    </div>
  </tal:if>
</tal:block>
