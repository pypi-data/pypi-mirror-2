<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="my315ok.store">
<metal:js metal:fill-slot="javascript_head_slot">
	  <tal:js metal:define-macro="javascript_head_slot">
	   <script type="text/javascript">
        jq(document).ready(function(){
        var options3 =
            {
                zoomWidth: 400,
                zoomHeight: 400,
                xOffset: 20,
                title: false,
                lens:false

            }

            jq(".jqzoom").jqzoom(options3);
	      
                                      });
       </script>
     <metal:newslot metal:define-slot="javascript_head_slot" />
     </tal:js>
     </metal:js>	  
<body>
    <div metal:fill-slot="main">
	 
        <tal:main-macro metal:define-macro="main">
		 <div tal:replace="structure provider:plone.abovecontenttitle" />

<div id="topimgbg">        
<h1 class="documentFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>       

        <div class="documentDescription">
            <span metal:use-macro="python:context.widget('description', mode='view')" />
        </div></div>
        
        <div tal:replace="structure provider:plone.abovecontentbody" /> 
		<div  tal:define="imglists python: view.img_fast_tag(fieldname='image',small='tile',preview='mini',large='large')" tal:omit-tag="">
        <div id="showphoto"  tal:condition="python: len(imglists['small'])">
		  <a id="bigphoto" href="" tal:attributes="href python: imglists['large'][0]" class="jqzoom"  title="MYTITLE">
		  <span tal:omit-tag=""  tal:content="structure python: imglists['preview'][0]" />
		  </a>		  
		<ul id = "smallphoto" tal:define="smallimgs python:imglists['small']">
		  <div tal:repeat = "img smallimgs" tal:omit-tag="">					 
                     <li class ="imgli" tal:define="j repeat/img/index"><a href="#" tal:attributes="href python:imglists['imgurl'][j]" tal:content="structure img" /></li>
		   </div>
        </ul> 
		</div>
		<script type="text/javascript" tal:content="structure view/swich_img"></script>
		
		</div>
		<ul class ="parameters"  >
		  <li id = "market_price" ><span i18n:translate="market price:">market price:</span><span i18n:translate="rmb" class="rmb">rmb</span><span class="mprice" tal:content="structure context/getMarket_price" /></li>
		  <li id = "our_price" ><span i18n:translate="our price:">our price:</span><span i18n:translate="rmb" class="rmb">rmb</span><span class="oprice" tal:content="structure context/getOur_price" /></li>
		  <li id = "brand" ><span i18n:translate="goods brand:">goods brand:</span><span  tal:content="structure context/getBrand" /></li>
		  <li id = "model"><span i18n:translate="goods model:">goods model:</span><span  tal:content="structure context/getModel" /></li>
		  <li id = "cash_gift"><span i18n:translate="cash gift:">cash gift:</span><span i18n:translate="rmb" class="rmb">rmb</span><span  tal:content="structure context/getCash_gift" /></li>
		  <li id = "stock_status"> <span i18n:translate="stock status:">stock status:</span><span class="stockst" tal:content="structure context/getStock_status" /></li>
		</ul>
                <ul class="add2">
                <li id="add2gouwuche">
               <a  i18n:translate="add2cart"  tal:attributes="href string: ${context/absolute_url}/@@getpaid-cart-add?add_item=True">addtocart</a>
               </li>
                <li id="add2favi"> 
                <a  href="#" i18n:translate="add2favi">addtofavi</a>
                </li>
                </ul> 
              
		<div class="details"><span id="details_tit" i18n:translate="more details">more details</span><br />
            <span metal:use-macro="python:context.widget('details', mode='view')" />
        </div>   		  
			
		<div tal:replace="structure provider:plone.belowcontentbody" /> 

        </tal:main-macro>
    </div>
</body>
</html>
