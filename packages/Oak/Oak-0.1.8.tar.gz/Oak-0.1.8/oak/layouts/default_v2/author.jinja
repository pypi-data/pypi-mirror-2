{% extends "base.jinja" %}
{% block title %}
{{ blog.title }} :: author :: {{ author.author }}
{% endblock title %}
{% block subheader %}
<h1 class="post">authors &gt; {{ author.author }}</h1>
{% endblock subheader %}
{% block body %}
<div id="main">
    <h2>posts written by {{ author.author }}</h2>
    <ul>
    {% for p in author.posts %}
        <li><a href="{{ p.url }}">{{ p.metadata.title }}</a></li>
    {% endfor %}
    </li>
</div>
{% endblock body %}
