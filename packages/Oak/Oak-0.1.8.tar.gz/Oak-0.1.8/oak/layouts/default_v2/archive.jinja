{% extends "base.jinja" %}
{% block title %}
{{ blog.title }} :: archive
{% endblock title %}
{% block subheader %}
<h1 class="post">archive</h1>
{% endblock subheader %}
{% block body %}
<div id="main">
<h2>posts list</h2>
<ul>
{% for p in posts %}
<li><a href="{{ p.url }}">{{ p.metadata.title }}</a> <span class="date">{{ p.metadata.pub_date|datetimeformat }}</span></li>
{% endfor %}
</ul>
</div>
{% endblock body %}
