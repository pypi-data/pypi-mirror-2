<!-- configure.zcml of browser folder -->
<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.langMailHost">

    <browser:page
        name="encoding"
        for="*"
        class=".encoding.Encoding"
        permission="zope2.View"
        attribute="encoding"
        />

</configure>
