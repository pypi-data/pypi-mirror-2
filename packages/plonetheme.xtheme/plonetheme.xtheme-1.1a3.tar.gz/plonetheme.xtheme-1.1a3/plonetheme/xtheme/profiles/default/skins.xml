<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="XTheme Theme">

 <object name="plonetheme_xtheme_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.xtheme:skins/plonetheme_xtheme_custom_images"/>
 <object name="plonetheme_xtheme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.xtheme:skins/plonetheme_xtheme_custom_templates"/>
 <object name="plonetheme_xtheme_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.xtheme:skins/plonetheme_xtheme_styles"/>

 <skin-path name="XTheme Theme" based-on="Plone Classic Theme">
  <layer name="plonetheme_xtheme_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_xtheme_custom_templates"
     insert-after="plonetheme_xtheme_custom_images"/>
  <layer name="plonetheme_xtheme_styles"
      insert-after="plonetheme_xtheme_custom_templates"/>
  <layer name="classic_styles" 
      insert-after="plonetheme_xtheme_styles"/>
 </skin-path>

</object>
