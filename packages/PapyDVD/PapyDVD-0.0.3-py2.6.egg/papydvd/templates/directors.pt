<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
	  metal:use-macro="main.macros['master']">

<body>

<metal:main fill-slot="main_content">

		<div class="row">
			<div class="cell width-12 position-0">
				<div id="directorsList" class="list">
					<table tal:condition="directors_count">
						<tbody id="main">
							<tal:rows repeat="director view.all_directors">
							<tr class="${repeat.director.even and 'even' or 'odd'}">
								<td class="directorCommands">
									<a href="${request.application_url}/deleteDirector?director_id=${director['id']}"
									   class="deleteDirectorCommand" title="Elimina questo regista">
									   	<img alt="Elimina" src="${request.application_url}/static/images/delete.png" />
									</a>
									<a href="${request.application_url}/editDirector?director_id=${director['id']}"
									   class="editDirectorCommand" title="Modifica questo regista">
									   	<img alt="Modifica" src="${request.application_url}/static/images/edit.png" />
									</a>
								</td>
								<td>${director['name']}</td>
							</tr>
							</tal:rows>
						</tbody>
					</table>
					<p tal:condition="not directors_count">
						Nessun regista
					</p>
				</div>
			</div>
		</div>

</metal:main>

</body>
</html>
