<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
	  metal:use-macro="main.macros['master']">

<body>

<metal:main fill-slot="main_content">

	<!-- batching & search -->
	<div id="batching" class="row center">
		<div id="pageBack" class="cell width-1 position-0" style="display:none">
			<a href="">
				<img alt="Pagina precedente" src="${request.application_url}/static/images/arrow_left.png" />
			</a>
		</div>
		<div class="cell width-10 position-1">
			<label for="search">Cerca</label>
			<input name="search" id="search" />
		</div>
		<div id="pageForward" class="cell width-1 position-11" style="display:none">
			<a href="">
				<img alt="Pagina successiva" src="${request.application_url}/static/images/arrow_right.png" />
			</a>
		</div>
	</div>
	
	<div class="row">
		<div class="cell width-12 position-0">
			<div id="movieList" class="list">
				<table tal:condition="last_movie">
					<thead>
						<tr><th>&nbsp;</th><th>Id</th><th>Titolo</th><th>Genere</th><th>Anno</th><th>Regista</th></tr>
					</thead>
					<tbody id="rowModel" class="invisible">
						<tr>
							<td class="movieCommands">
								<a href="${request.application_url}/deleteMovie?movie_id="
								   class="deleteMovieCommand" title="Elimina questo film">
								   	<img alt="Elimina" src="${request.application_url}/static/images/delete.png" />
								</a>
								<a href="${request.application_url}/editMovie?movie_id="
								   class="editMovieCommand" title="Modifica questo film">
								   	<img alt="Modifica" src="${request.application_url}/static/images/edit.png" />
								</a>
							</td>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
						</tr>					
					</tbody>
					<tbody id="main">
						<tr id="loading">
							<td colspan="6"><img alt="Caricamento..."
							                     src="${request.application_url}/static/images/ajax-loader.gif" /></td>
						</tr>
					</tbody>
				</table>
				<p tal:condition="not last_movie">
					Nessun film
				</p>
			</div>
		</div>
	</div>
</metal:main>

</body>
</html>
