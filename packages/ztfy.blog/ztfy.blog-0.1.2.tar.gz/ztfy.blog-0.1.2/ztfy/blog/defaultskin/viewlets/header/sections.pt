<div class="sections" tal:define="sections view/sections" tal:condition="sections" i18n:domain="ztfy.blog">
	<ul>
		<tal:loop repeat="item sections">
			<li tal:define="section item/section;"
				tal:attributes="class python:item['selected'] and 'selected' or None;">
				<a tal:attributes="href section/@@absolute_url;"
				   tal:content="section/i18n:shortname" />
			</li>
		</tal:loop>
		<tal:if condition="python:request.principal.id == 'zope.anybody'">
			<li class="login">
				<form name="login_form" tal:attributes="action string:${context/@@absolute_url}/@@login.html" method="POST">
					<a href="javascript:$.ZBlog.actions.showLoginForm(this.form);" i18n:translate="">Login</a>
					<span class="inputs">
						<input type="text" id="login_login" name="login" size="10" value="" />
						<label for="login_password" i18n:translate="">Password</label>
						<input type="password" id="login_password" name="password" size="10" value="" />
						<input type="image" src="/++skin++ZBlog/@@/ztfy.blog.defaultskin.img/login.png" onclick="return $.ZBlog.actions.login(this.form);" />
					</span>
				</form>
				<script type="text/javascript">
					$(document).ready(function() {
						$('FORM[name="login_form"]').submit(function() {
							return $.ZBlog.actions.login(this);
						});
					});
				</script>
			</li>
		</tal:if>
		<tal:if condition="python:request.principal.id != 'zope.anybody'">
			<li class="login selected">
				<span tal:content="request/principal/title" />
				<a href="javascript:$.ZBlog.actions.logout();" title="Logout !" i18n:attributes="title">
					<img src="/++skin++ZBlog/@@/ztfy.blog.defaultskin.img/logout.png" />
				</a>
			</li>
			<li class="management" tal:condition="context/permission:ztfy.ManageContent">
				<a tal:attributes="href view/manage_url" i18n:translate="">Manage</a>
			</li>
		</tal:if>
		<div class="clearer"><!-- IE bugfix --></div>
	</ul>
</div>