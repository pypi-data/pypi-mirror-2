<dl class="portlet" tal:condition="view/showPurgeViewlet" i18n:domain="varnishpurger">
    <dt class="portletHeader">
    </dt>

    <dd class="portletItem">
		<span tal:condition="python: not view.isPloneSite() and not view.isHomePage()">
			<a href="#" tal:attributes="href string:${context/absolute_url}/varnish_purge;" i18n:translate="">Purge cache for this page</a>
			<br />
			<span class="discreet" i18n:translate="">Click this link to purge cache for this page.</span>
		</span>
		<span tal:condition="view/isHomePage">
			<a href="#" tal:attributes="href string:${context/absolute_url}/varnish_purge?homepage=1;" i18n:translate="">Purge homepage cache</a>
			<br />
			<span class="discreet" i18n:translate="">Click this link to purge cache for the homepage.</span>
		</span>
		<span tal:condition="view/isControlPanel">
			<a href="#" tal:attributes="href string:${context/absolute_url}/varnish_purge_everything;" i18n:translate="">Purge portal cache</a>
			<br />
			<span class="discreet" i18n:translate="">Attention: Clicking this link will purg cache for the whole portal.</span>
		</span>	
    </dd>
</dl>
