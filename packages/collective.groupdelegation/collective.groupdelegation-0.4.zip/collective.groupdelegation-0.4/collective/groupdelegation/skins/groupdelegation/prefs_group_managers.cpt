<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/prefs_main_template/macros/master"
      i18n:domain="plone">

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />

<body>

<div metal:fill-slot="prefs_configlet_content"
     tal:define="errors python:request.get('errors', {});
                gtool context/portal_groups;
                portal_roles mtool/getPortalRoles;
                Batch python:modules['Products.CMFPlone'].Batch;
                b_start python:request.get('b_start',0);
                b_size python:20;
                groupname request/groupname|nothing;
                grouproles python:request.set('grouproles', []);
                group python:gtool.getGroupById(groupname);
                grouptitle group/getGroupTitleOrName|groupname;
                isGroup nocall:gtool/isGroup;
                mq python:modules['ZTUtils'].make_query;
                groupquery python:mq(groupname=groupname);
                groupkeyquery python:mq(key=groupname);
                ">

    <tal:conditional condition="group">
        <tal:defines define="dummy python:request.set('grouproles', group.getRoles())" />
    </tal:conditional>

    <div class="documentEditable">

    <!-- simulating views on the groups/user pages until we have real objects. -->
    <ul class="contentViews">
      <li class="plain">
            <a href=""
           tal:attributes="href string:$here_url/prefs_group_members?${groupquery}"
           i18n:translate="label_group_members">Group Members</a>
      </li>
      <li class="plain">
            <a href=""
           tal:attributes="href string:${here_url}/prefs_group_details?${groupquery}"
               i18n:translate="label_group_properties">Group Properties</a>
      </li>
      <li class="selected">
        <a href=""
           tal:attributes="href string:$here_url/prefs_group_managers?groupname=${groupname}"
           i18n:domain="collective.groupdelegation"
           i18n:translate="label_group_managers">Group Managers</a>
      </li>      
      <li class="plain">
        <a href=""
           tal:attributes="href string:${portal_url}/@@manage-group-portlets?${groupkeyquery}"
           i18n:translate="label_group_portlets">Group Portlets</a>
      </li>      
    </ul>

    <div class="contentActions">
      &nbsp;
    </div>

    <div id="region-content" class="documentContent">

      <div metal:use-macro="here/global_statusmessage/macros/portal_message">
        Portal status message
      </div>

      <div class="configlet">
        <tal:ifnogroups tal:condition="not:group | nothing">
          <h1 i18n:translate="heading_group_managers">Group Managers</h1>
          <a href=""
             class="link-parent"
             tal:attributes="href string: $portal_url/prefs_groups_overview"
             i18n:translate="label_up_to_groups_overview">
            Up to Groups Overview
          </a>

          <p i18n:translate="label_no_group_specified">No group was specified.</p>

          <p>
            <a href="prefs_groups_overview" i18n:translate="label_find_group">Find a group here</a>
          </p>
        </tal:ifnogroups>

        <tal:ifgroups tal:condition="group | nothing"
                      tal:define="targetGetProperty nocall:group/getProperty | nocall:here/returnNone;
                                  groupManagers python:targetGetProperty('delegated_group_member_managers', ()) or ();">
          <h1 class="documentFirstHeading">
              <span  i18n:translate="heading_group_managers"
                     i18n:domain="collective.groupdelegation">
                     Delegated managers for group
              </span>       
              &nbsp;:&nbsp;
              <span tal:content="grouptitle">Groupname</span>
          </h1>

          <a href=""
             class="link-parent"
             tal:attributes="href string: $portal_url/prefs_groups_overview"
             i18n:translate="label_up_to_groups_overview">
            Up to Groups Overview
          </a>

          <p class="documentDescription"
             i18n:translate="description_group_managers"
             i18n:domain="collective.groupdelegation">
            You can add or remove managers from this particular group here.
          </p>


          <form action=""
                    name="groups"
                    method="post"
                    tal:attributes="action string:$here_url/$template_id"
                    tal:define="searchstring request/searchstring | nothing;
                                findAll python:'form.button.FindAll' in request.keys();
                                ignoreUsersGroups python: [mtool.getMemberById(user_id) for user_id in groupManagers];
                                searchType python:'users';
                                results python:(searchstring or findAll) and here.prefs_user_group_search(searchstring, searchType, ignore=ignoreUsersGroups) or [];
                                batch python:Batch(results, b_size, int(b_start), orphan=1)">
            <h2 i18n:translate="heading_groupmanagers_current"
                i18n:domain="collective.groupdelegation">Current group managers</h2>
              <table class="listing" summary="Group Managers Listing"
                 tal:condition="groupManagers">

                  <tr>
                      <th>
                          <input class="noborder"
                                 type="checkbox"
                                 src="select_all_icon.gif"
                                 name="selectButton"
                                 title="Select all items"
                                 onClick="toggleSelect(this, 'delete:list');"
                                 tal:attributes="src string:$portal_url/select_all_icon.gif"
                                 alt="Select all items"
                                 i18n:attributes="title label_select_all_items; alt label_select_all_items;"/>
                                 <!--Remove manager from this group-->
                      </th>
                      <th i18n:translate="listingheader_user_name">User name</th>
                      <th i18n:translate="listingheader_email_address">E-mail Address</th>
                  </tr>

                  <tal:block tal:repeat="user_id groupManagers">
                    <tr tal:define="oddrow repeat/user_id/odd;
                                    this_user python:mtool.getMemberById(user_id);"
                        tal:attributes="class python:test(oddrow,'odd','even')">
                        <td class="listingCheckbox">
                            <input
                                   type="checkbox"
                                   class="noborder notify"
                                   name="delete:list" tal:attributes="value this_user/getId" />
                        </td>

                        <tal:block tal:condition="python: isGroup(this_user)">
                          <td>
                            <img src="group.gif" alt="" />
                            <a href="" tal:content="this_user/getGroupTitleOrName | default">
                              <span i18n:translate="link_groupname_not_available">
                              groupname not available</span>
                            </a>
                          </td>
                        </tal:block>

                        <tal:block tal:condition="python: not isGroup(this_user)">
                          <td>
                            <img src="user.gif" alt="" />
                            <a href="" tal:attributes="href string:${here/portal_url}/author/${this_user/getId}"
                                tal:content="this_user/getUserName | default">
                                <span i18n:translate="link_username_not_available">
                                username not available</span>
                            </a>
                          </td>
                        </tal:block>

                        <td tal:define="email python: this_user.getProperty('email')">
                            <a  href="#"
                                tal:attributes="href string:mailto:${email}"
                                title="Send a mail to this user"
                                i18n:attributes="title title_send_mail_to_user;"
                                tal:condition="email">
                                <span tal:replace="email" />
                            </a>
                        </td>
                    </tr>
                  </tal:block>
              </table>


              <input class="destructive"
                     type="submit"
                     name="form.button.Edit"
                     value="Remove selected groups / users"
                     i18n:attributes="value label_remove_selected_users;"
                     tal:condition="groupManagers" />
                     
              <p tal:condition="not:groupManagers"
                 i18n:domain="collective.groupdelegation"
                 i18n:translate="decription_no_managers_assigned">There is no manager attached to this group.</p>


            <h2 i18n:domain="collective.groupdelegation"
                i18n:translate="heading_search_newmanagers">Search for new group managers</h2>

            <input type="hidden" name="groupname" value="groupname" tal:attributes="value groupname" />
            <input type="hidden" name="form.submitted" value="1" />

            <table class="listing" summary="Groups">
              <tr>
                <th colspan="2">
                  <span tal:omit-tag="" i18n:translate="label_quick_search">Quick search</span>:
                    <input class="quickSearch"
                           tabindex=""
                           type="text"
                           name="searchstring"
                           value=""
                           tal:attributes="value searchstring;
                               tabindex tabindex/next;"
                           />

                    <input type="submit"
                           class="searchButton"
                           name="form.button.Search"
                           value="Search"
                           tabindex=""
                           i18n:attributes="value label_search;"
                           tal:attributes="tabindex tabindex/next;" />
                    <input type="submit"
                           class="searchButton"
                           name="form.button.FindAll"
                           value="Show all"
                           tabindex=""
                           i18n:attributes="value label_showall;"
                           tal:attributes="tabindex tabindex/next;" />
                </th>
              </tr>
              <tr>
                <th>
                    <input class="noborder"
                           type="checkbox"
                           src="select_all_icon.gif"
                           name="selectButton"
                           title="Select all items"
                           onClick="toggleSelect(this, 'add:list');"
                           tal:attributes="src string:$portal_url/select_all_icon.gif"
                           alt="Select all items"
                           i18n:attributes="title label_select_all_items; alt label_select_all_items;"/>
                </th>

                <th i18n:translate="listingheader_group_user_name">Group/User name</th>
              </tr>

              <tal:block repeat="this_user batch">
                <tr tal:define="oddrow repeat/this_user/odd"
                    tal:attributes="class python:test(oddrow,'odd','even')">

                  <td class="listingCheckbox">
                    <input type="checkbox"
                           class="noborder"
                           name="add:list"
                           value="value"
                             tal:attributes="value this_user/getId" />
                  </td>

                  <td>
                      <tal:block tal:condition="python:not isGroup(this_user)">
                          <img src="user.gif" alt="" />
                          <a href="" tal:attributes="href string:${here/portal_url}/author/${this_user/getId}"
                                   tal:content="this_user/getUserName | default">
                                   <span i18n:translate="link_username_not_available">username not available</span>
                          </a>
                      </tal:block>
                      <tal:block tal:condition="python: isGroup(this_user)">
                          <img src="group.gif" alt="" />
                          <a href="" tal:content="this_user/getGroupTitleOrName | default">
                                     <span i18n:translate="link_groupname_not_available">
                                     groupname not available</span>
                          </a>
                      </tal:block>
                  </td>
                </tr>
              </tal:block>
            </table>

            <tal:block condition="not:batch">
              <p tal:condition="searchstring"
                        i18n:translate="text_nomatches">No matches</p>
                  <p tal:condition="not:searchstring"
                     class="discreet"
                     i18n:translate="text_no_searchstring">Enter a user name to search for, or click 'Show All'.</p>
            </tal:block>

            <input type="hidden" value="b_start" name="b_start"
                     tal:attributes="value b_start"/>

            <div metal:use-macro="here/batch_macros/macros/navigation" />

            <input class="context"
                    tabindex=""
                    type="submit"
                    name="form.button.Add"
                    value="Add selected managers to this group"
                    tal:condition="batch"
                    tal:attributes="tabindex tabindex/next;"
                    i18n:attributes="value label_add_managers_to_group;" />

          </form>
        </tal:ifgroups>
      </div>

    </div>
    </div>

</div>
</body>
</html>

