<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Estatelite Theme">


   <!-- -*- extra stuff goes here -*- -->

 <object name="estatelite_images"
    meta_type="Filesystem Directory View"
    directory="quintagroup.theme.estatelite:skins/estatelite_images"/>


 <object name="estatelite_templates"
    meta_type="Filesystem Directory View"
    directory="quintagroup.theme.estatelite:skins/estatelite_templates"/>


 <object name="estatelite_styles"
    meta_type="Filesystem Directory View"
    directory="quintagroup.theme.estatelite:skins/estatelite_styles"/>


 <skin-path name="Estatelite Theme" based-on="Plone Classic Theme">
  <!-- -*- extra layer stuff goes here -*- -->
  <layer name="estatelite_images" insert-after="custom"/>
  <layer name="estatelite_templates" insert-after="custom"/>
  <layer name="estatelite_styles" insert-after="custom"/>

 </skin-path>

</object>
