<tal:block tal:define="async options/async|python:False">
<div id="cicero-recipients" tal:omit-tag="async">
<p>Your letter will be sent to:</p>
<ul>
  <li tal:repeat="recipient options/recipients"
      tal:content="recipient"/>
</ul>
</div>

<script tal:condition="not:async" type="text/javascript">
$(function() {
  $('input[name=zip]').blur(function() {
    $('#cicero-recipients').load('@@collective.megaphonecicerolookup-lookup', $(this).closest('form').serialize());
  });
});
</script>
</tal:block>