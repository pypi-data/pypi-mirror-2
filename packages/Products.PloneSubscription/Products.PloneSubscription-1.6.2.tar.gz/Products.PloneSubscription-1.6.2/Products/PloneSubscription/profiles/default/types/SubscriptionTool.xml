<?xml version="1.0"?>
<object name="SubscriptionTool" meta_type="Factory-based Type Information"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">Subscription Tool</property>
 <property
    name="description">A tool to manage placeless subscription</property>
 <property name="content_icon">folder_icon.gif</property>
 <property name="content_meta_type">SubscriptionTool</property>
 <property name="product">PloneSubscription</property>
 <property name="factory">addSubscriptionTool</property>
 <property name="immediate_view">base_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>
 <alias from="(Default)" to="base_view"/>
 <alias from="edit" to="base_edit"/>
 <alias from="index.html" to="(Default)"/>
 <alias from="view" to="(Default)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/base_view" visible="True">
  <permission value="PlacelessSubscription: Manage Content"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/base_edit" visible="True">
  <permission value="PlacelessSubscription: Manage Content"/>
 </action>
 <action title="Manage Subscribers" action_id="subscribers_management"
    category="object" condition_expr=""
    url_expr="string:${object_url}/subscribers_management" visible="True">
  <permission value="PlacelessSubscription: Manage Content"/>
 </action>
 

</object>
