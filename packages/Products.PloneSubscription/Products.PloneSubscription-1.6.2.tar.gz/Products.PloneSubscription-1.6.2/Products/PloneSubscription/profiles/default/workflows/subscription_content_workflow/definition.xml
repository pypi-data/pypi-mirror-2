<?xml version="1.0"?>
<dc-workflow workflow_id="subscription_content_workflow"
             title="Default Workflow [PloneSubscription]"
             description="" state_variable="review_state"
             initial_state="private">
 <permission>View</permission>
 <permission>PlacelessSubscription: View Content</permission>
 <permission>PlacelessSubscription: Edit Content</permission>
 <permission>Modify portal content</permission>
 <state state_id="private"
        title="Visible and editable only by owner">
  <exit-transition transition_id="show"/>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="PlacelessSubscription: Edit Content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="PlacelessSubscription: View Content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubscriptionViewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubscriptionViewer</permission-role>
  </permission-map>
 </state>
 <state state_id="published" title="Public">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="retract"/>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="PlacelessSubscription: Edit Content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="PlacelessSubscription: View Content"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubscriptionViewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubscriptionViewer</permission-role>
  </permission-map>
 </state>
 <state state_id="visible" title="Visible but not published">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="PlacelessSubscription: Edit Content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="PlacelessSubscription: View Content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubscriptionViewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubscriptionViewer</permission-role>
  </permission-map>
 </state>
 <transition transition_id="hide" title=""
             new_state="private" trigger="USER"
             before_script="" after_script="">
  <description>Member makes content private</description>
  <action url="%(content_url)s/content_hide_form"
          category="workflow">Make private</action>
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="publish" title=""
             new_state="published" trigger="USER"
             before_script="" after_script="">
  <description>Reviewer publishes content</description>
  <action url="%(content_url)s/content_publish_form"
          category="workflow">Publish</action>
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="retract" title=""
             new_state="visible" trigger="USER"
             before_script="" after_script="">
  <description>Member retracts submission</description>
  <action url="%(content_url)s/content_retract_form"
          category="workflow">Retract</action>
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="show" title=""
             new_state="visible" trigger="USER"
             before_script="" after_script="">
  <description>Member makes content visible</description>
  <action url="%(content_url)s/content_show_form"
          category="workflow">Make visible</action>
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
