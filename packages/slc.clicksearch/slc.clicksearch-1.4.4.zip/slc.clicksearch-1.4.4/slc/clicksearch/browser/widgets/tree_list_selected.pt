<a class="unselect_value"
   tal:attributes="href view/unselect_link">
   Reset selection of <span tal:replace="view/box_title" />
</a>

<tal:define define="subtree view/get_current_tree">

<metal:macro define-macro="termlist" tal:condition="subtree">
<ul>

    <li tal:repeat="term subtree/keys">

        <tal:repeat define="caption python:subtree[term][0];
                            subtree python:subtree[term][1]">

        <a tal:attributes="href python:view.select_link(term);
                           class python:term==view.selected_value() and 'current_selection' or 'unselected'"
           tal:content="caption" />

            <metal:usemacro use-macro="template/macros/termlist"  />

        </tal:repeat>

    </li>

</ul>
</metal:macro>


</tal:define>
