<dl class="portlet portletClickSearch"
    i18n:domain="slc.clicksearch"
    tal:define="plone_view context/@@plone;">

    <dt class="portletHeader">
        <span tal:replace="view/title">search</span>
    </dt>

    <dd class="portletItem odd">

        <form name="searchform"
              action="clicksearch"
              method="get">
            <input name="SearchableText"
                   onchange="this.form.submit();"
                   type="text"
                   size="15"
                   title="Search Site"
                   i18n:attributes="title title_search_title;"
                   tal:attributes="value request/SearchableText|nothing;"
                   />
            <noscript><input type="submit"
                   value="Search"
                i18n:attributes="value label_search;"/></noscript>
            <tal:qs replace="structure view/generate_hidden_fields" />
            </form>
    </dd>

  <tal:repeat repeat="box view/boxes">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:replace="box/title" />
        <span class="portletTopRight"></span>
    </dt>


    <dd class="portletItem odd">
        <tal:sub content="structure python:view.displayWidget(box['index'])"></tal:sub>
    </dd>

  </tal:repeat>

  <dt class="portletFooter" tal:condition="view/showReset">
      <a href="clicksearch">reset</a>
  </dt>

</dl>
