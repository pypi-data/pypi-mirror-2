<?xml version="1.0" encoding="UTF-8"?>
<?authenticity.output-type xhtml?>
<?authenticity.content-type application/xhtml+xml?>
<?authenticity.xml_declaration on?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>${context.page_title} :: Error</title>
        <link rel="stylesheet" href="${context.construct_url('/style/css/default.css')}" type="text/css"/>
        ${head_elements}
    </head>
    <body>
        <table id="content">
            <tbody>
                <tr>
                    <td>
                        <h1>An error has occured.</h1>
                        <p class="error">$error</p>
                        <p>
                            If you think the error is caused by the software installation, please contact the server administrator at
                            <a href="mailto:${context.server_admin}" title="E-mail the server administrator.">${context.server_admin}</a>.
                            If you think this is a bug in Authenticity, please go to the project's <a href="${context.authenticity_homepage}"
                            title="Visit Authenticity's homepage.">website</a> and follow the instructions to submit a bug report.
                        </p>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td id="footer">
                        Powered by <a href="${context.authenticity_homepage}" title="Visit Authenticity's homepage.">Authenticity</a>
                        ${context.authenticity_version}
                    </td>
                </tr>
            </tfoot>
        </table>
    </body>
</html>
