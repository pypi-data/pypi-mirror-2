<?xml version="1.0" encoding="UTF-8"?>
<?authenticity.output-type xhtml?>
<?authenticity.content-type application/xhtml+xml?>
<?authenticity.xml_declaration on?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:py="http://genshi.edgewall.org/">
    <head>
        <title>${context.page_title} :: ${identity.name}'s identity page</title>
        <link rel="stylesheet" href="${context.construct_url('/style/css/identity.css')}" type="text/css"/>
        ${head_elements}
    </head>
    <body>
        <table id="content">
            <tbody>
                <tr>
                    <td id="icon_container">
                        <object id="icon" type="image/png" data="${context.construct_url('/images/user.png')}" title="User icon"/>
                    </td>
                    <td>
                        <h1 class="name">${identity.name}</h1>
                        <hr/>
                        <table class="data">
                            <tbody>
                                <tr py:if="identity.email">
                                    <td class="name">Email</td>
                                    <td class="value"><a href="mailto:${identity.email}" title="E-mail ${identity.name}.">${identity.email}</a></td>
                                </tr>
                                <tr py:if="identity.country">
                                    <td class="name">Country</td>
                                    <td class="value">${identity.country}</td>
                                </tr>
                                <tr py:if="identity.timezone">
                                    <td class="name">Timezone</td>
                                    <td class="value">${identity.timezone}</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td id="footer" colspan="2">
                        Powered by <a href="${context.authenticity_homepage}" title="Visit Authenticity's homepage.">Authenticity</a>
                        ${context.authenticity_version}
                    </td>
                </tr>
            </tfoot>
        </table>
    </body>
</html>
