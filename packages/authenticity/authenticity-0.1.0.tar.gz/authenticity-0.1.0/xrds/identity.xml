<?xml version="1.0" encoding="UTF-8"?>
<?authenticity.output-type xml?>
<?authenticity.content-type application/xrds+xml?>
<?authenticity.xml_declaration on?>
<xrds:XRDS xmlns:xrds="xri://$xrds" xmlns="xri://$xrd*($v*2.0)" xmlns:py="http://genshi.edgewall.org/">
    <XRD>
        <Service priority="0">
            <Type>http://specs.openid.net/auth/2.0/signon</Type>
            <Type>http://openid.net/signon/1.0</Type>
            <URI>${context.openid_server_url(path_only=False)}</URI>
            <LocalID py:if="forced_local_id">${forced_local_id}</LocalID>
        </Service>
    </XRD>
</xrds:XRDS>
