<?xml version="1.0"?>

<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Responsive Theme">

 <object name="plonetheme_responsivetheme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.responsivetheme:skins/plonetheme_responsivetheme_custom_templates"/>
 <object name="plonetheme_responsivetheme_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.responsivetheme:skins/plonetheme_responsivetheme_styles"/>
 <object name="plonetheme_responsivetheme_js"
    meta_type="Filesystem Directory View"
    directory="plonetheme.responsivetheme:skins/plonetheme_responsivetheme_js"/>

 <skin-path name="Responsive Theme" based-on="Sunburst Theme">
  <layer name="plonetheme_responsivetheme_custom_templates"
     insert-after="custom"/>
  <layer name="plonetheme_responsivetheme_styles"
     insert-after="plonetheme_responsivetheme_custom_templates"/>
  <layer name="plonetheme_responsivetheme_js"
     insert-after="plonetheme_responsivetheme_styles"/>
 </skin-path>

</object>
