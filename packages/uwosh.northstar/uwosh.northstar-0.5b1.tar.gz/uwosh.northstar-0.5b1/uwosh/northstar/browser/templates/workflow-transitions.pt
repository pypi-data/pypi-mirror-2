<div id="workflow-transitions" class="workflow-list" 
    tal:define="available_states options/available_states;
                available_transitions options/available_transitions;">

    <a name="fieldsetlegend-transitions-anchor" class="doc-link">fieldsetlegend-transitions-anchor</a>
    
    <span class="set-top">
        <a class="dialog-box" rel="#overlay"
            tal:attributes="href python: view.get_url('@@northstar-add-new-transition');">
            <form tal:attributes="action string:${context/absolute_url}/@@northstar-add-new-transition" method="POST">
                <input type="hidden" name="selected-workflow" tal:attributes="value view/selected_workflow/id" />
                <input type="submit" class="context allowMultiSubmit" name="add-new-transition-button-one" value="Add new transition" />
            </form>
        </a>
    </span>
  
  <tal:transitions tal:repeat="transition available_transitions"
        tal:content="structure python: view.workflow_transition_template(transition=transition, available_states=available_states)" />

    <span class="set-top">
        <a class="dialog-box" rel="#overlay"
            tal:attributes="href python: view.get_url('@@northstar-add-new-transition');">
            <form tal:attributes="action string:${context/absolute_url}/@@northstar-add-new-transition" method="POST">
                <input type="hidden" name="selected-workflow" tal:attributes="value view/selected_workflow/id" />
                <input type="submit" class="context allowMultiSubmit" name="add-new-transition-button-two" value="Add new transition" />
            </form>
        </a>
    </span>
</div>
