<div class="dialog-box" id="prompt" 
    tal:define="transition view/selected_transition;
                has_mailer python: view.has_mailer_action(transition);
                action view/get_mailer_action"> 
    <h2>Confirm Delete '<tal:replace tal:replace="transition/title" />' Mailer Action</h2> 
 
    <p class='discreet'> 
        Are you sure you want to delete this mail action?
    </p> 
 
    <form action="@@uwosh-northstar-delete-mail-action" method="POST">
        
        <input type="hidden" name="selected-workflow" tal:attributes="value view/selected_workflow/id" />
        <input type="hidden" name="selected-transition" tal:attributes="value transition/id" />
        
        <input type="submit" name="button.confirm.delete" value="Delete" class="context" />
        <input type="submit" name="button.cancel.delete" value="Cancel" class="standalone" />
        
    </form> 
    <br /> 
 
</div>