<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "Culture Cab Theme" skin.
     -->

<object>
 <order manager="plone.portalheader" skinname="Color Context Theme" based-on="Plone Default">
	<viewlet name="plone.logo" insert-before="*" />
  </order>

  <order manager="plone.portalfooter" skinname="Color Context Theme" based-on="Plone Default">
     <viewlet name="plonetheme.cultureCab.footermenu" insert-before="*" />
  </order>
  
  <hidden manager="plone.portaltop" skinname="Culture Cab Theme">
    <viewlet name="plone.path_bar" />
    <viewlet name="plone.personal_bar" />  
  </hidden>

  <hidden manager="plone.portalheader" skinname="Culture Cab Theme">
    <viewlet name="plone.global_sections" />
    <viewlet name="plone.site_actions" />
    <viewlet name="plone.skip_links" />
    <viewlet name="plone.searchbox" />
    <viewlet name="plone.personal_bar" />  
  </hidden>

  <hidden manager="plone.abovecontent" skinname="Culture Cab Theme">
    <viewlet name="plone.path_bar" />
  </hidden>

  <hidden manager="plone.belowcontentbody" skinname="Culture Cab Theme">
    <viewlet name="plone.abovecontenttitle.documentactions" />
    <viewlet name="plone.belowcontentbody.relateditems" />
  </hidden>

  <hidden manager="plone.portalfooter" skinname="Culture Cab Theme">
    <viewlet name="plone.footer" />
    <viewlet name="plone.colophon" />
    <viewlet name="plone.site_actions" />
  </hidden>

  <hidden manager="plone.portaltop" skinname="Culture Cab Theme">
    <viewlet name="plone.personal_bar" />
  </hidden>

</object>
