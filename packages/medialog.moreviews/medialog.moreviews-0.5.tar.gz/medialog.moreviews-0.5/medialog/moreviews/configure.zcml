<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:cmf="http://namespaces.zope.org/cmf"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="medialog.moreviews">

  <five:registerPackage package="." initialize=".initialize" />

  <!-- -*- extra stuff goes here -*- -->

  <include package=".browser" />
  <include package="collective.easyslider" />

  <!-- File System Directory Views registration -->
    <cmf:registerDirectory directory="skins/moreviews" name="medialog_moreviews"/>

  <!-- Register the installation GenericSetup extension profile -->
  <genericsetup:registerProfile
      name="default"
      title="Medialog More Views Default profile"
      directory="profiles/default"
      description="Different views for plone 4"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="newsitemviews"
      title="Medialog More Views NewsItem Views"
      directory="profiles/newsitemviews"
      description="Different views for plone 4"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="visualbox2"
      title="Medialog More Views Visualbox2"
      directory="profiles/visualbox2"
      description="Different views for plone 4"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />
  
</configure>
