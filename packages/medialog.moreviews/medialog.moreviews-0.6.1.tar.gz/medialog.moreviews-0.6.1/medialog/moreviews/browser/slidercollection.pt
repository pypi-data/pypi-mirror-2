<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<metal:js fill-slot="javascript_head_slot">
	<script type="text/javascript"
	        tal:content="view/js">
 
    </script>
</metal:js>
<metal:css fill-slot="css_slot">
	<style tal:content="view/css" type="text/css" />
</metal:css>

<body>
<div metal:fill-slot="main">
<metal:main_macro define-macro="main">
    
        <div id="slider-container-sliderpage ">
        <div id="slider">
            <ul>
            <tal:rep tal:repeat="slide view/get_items">  
                <li tal:condition="python: slide.portal_type == 'Image'">
                  <div class="slider-image">
                    <a tal:attributes="href slide/getURL">            
                      <img tal:attributes="src string:${slide/getURL}/image_preview;
                                           title slide/Title;
                                           alt slide/Description"
                      />
                    </a>
                  </div>
                </li>
            </tal:rep>
            </ul>
        </div>
        </div>

        <div metal:define-slot="inside" tal:replace="structure context/getText">The body</div>
  
 </metal:main_macro>

</div>

</body>
</html>