<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="site_actions" meta_type="CMF Action Category">
  <object name="minisite_skin" meta_type="CMF Action" i18n:domain="aws.minisite">
   <property name="title" i18n:translate="">Mini Site Theme</property>
   <property name="description" i18n:translate="">Change the minisite theme</property>
   <property name="url_expr">python:object.restrictedTraverse('@@getMiniSiteSkinUrl')()</property>
   <property name="icon_expr"></property>
   <property name="available_expr">python:object.restrictedTraverse('@@isMiniSiteOwner')()</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
  <object name="minisite_edit" meta_type="CMF Action" i18n:domain="aws.minisite">
   <property name="title" i18n:translate="">Edit Mini Site</property>
   <property name="description" i18n:translate="">Edit the minisite</property>
   <property name="url_expr">python:'%s/edit' %object.restrictedTraverse('@@getMiniSite')().absolute_url()</property>
   <property name="icon_expr"></property>
   <property name="available_expr">python:object.restrictedTraverse('@@isMiniSiteOwner')()</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
