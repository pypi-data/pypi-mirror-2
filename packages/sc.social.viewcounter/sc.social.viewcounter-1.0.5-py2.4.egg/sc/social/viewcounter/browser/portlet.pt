<dl class="portlet viewcounter"
    tal:define="data view/viewcounter;
                lists view/options"
    tal:condition="lists"
    i18n:domain="sc.social.viewcounter">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/title|nothing" >Most accessed</span>
        <span class="portletTopRight"></span>
    </dt>
    <tal:block tal:repeat="list lists">
        <dd class="portletItem"
            tal:define="oddrow repeat/list/odd;
                        listId python:list[0];
                        listTitle python:list[1]"
            tal:attributes="class python:oddrow and  'portletItem even' or 'portletItem odd'">
            <span tal:content="listTitle">Day</span><br />
            <ol>
                <tal:innerBlock tal:repeat="item python:data[listId]">
                <li>
                    <a href=""
                       tal:attributes="href python:item[2];
                                       title python:item[1]"
                       tal:content="python:item[1]">My Content</a>
                </li>
                </tal:innerBlock>
            </ol>
        </dd>
    </tal:block>
    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
