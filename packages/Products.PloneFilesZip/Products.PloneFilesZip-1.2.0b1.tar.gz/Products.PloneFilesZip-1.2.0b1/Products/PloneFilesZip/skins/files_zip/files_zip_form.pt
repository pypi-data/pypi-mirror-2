<div metal:fill-slot="main"
     tal:define="pfz_tool portal/portal_fileszip"
     i18n:domain="plonefileszip">

  <h1 i18n:translate="title_download_zip">ZIP archive of file contents</h1>
  <p i18n:translate="explain_download_zip">
   Download the file(s) of
   <span tal:replace="python: len(pfz_tool.contentBrains(here))" i18n:name="count" />
   content object(s) of this folder in the Zip archive
   <span tal:replace="python: pfz_tool.zipFileName(here)" i18n:name="filename" />
  </p>
  <form action="#"
        tal:attributes="action string:${portal_url}/portal_fileszip/download">
    <input type="hidden" name="folder_path" value="#"
           tal:attributes="value python:'/'.join(here.getPhysicalPath())" />
    <input type="submit" value="Download"
           i18n:attributes="value" />
  </form>
</div>

</html>
