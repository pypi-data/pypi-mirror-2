#!/usr/bin/env python3


import gettext
import sys

import stirimango.mains


gettext.install('stirimango')
actions = { 'init': stirimango.mains.main_init
          , 'list': stirimango.mains.main_list
          , 'status': stirimango.mains.main_status
          , 'forward': stirimango.mains.main_forward
          , 'backward': stirimango.mains.main_backward
          }
if len(sys.argv) < 2 or sys.argv[1] not in actions:
    print >> sys.stderr, 'The action must be one of:'
    for action in actions.keys():
        print >> sys.stderr, ' - %s' % action
else:
    actions[sys.argv[1]](sys.argv[2:])
