<?xml version="1.0"?>
<dc-workflow workflow_id="bastionpayment_workflow"
             title="BastionPayment Workflow"
             state_variable="review_state"
             initial_state="pending">
 <state state_id="cancelled" title="Cancelled"/>
 <state state_id="pending" title="Pending confo">
  <exit-transition transition_id="accept"/>
  <exit-transition transition_id="cancel"/>
  <exit-transition transition_id="reject"/>
 </state>
 <state state_id="paid" title="Paid">
  <exit-transition transition_id="refund"/>
  <exit-transition transition_id="reconcile"/>
 </state>
 <state state_id="rejected" title="Rejected">
  <exit-transition transition_id="accept"/>
 </state>
 <state state_id="refunded" title="Refunded"/>
 <state state_id="reconciled" title="Reconciled">
  <exit-transition transition_id="refund"/>
 </state>
 <transition transition_id="accept"
             title="Payment Accepted"
             new_state="paid" trigger="USER"
             before_script="accept" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=accept" category="workflow">Accept</action>
  <guard>
   <guard-permission>BastionBanking: Operate</guard-permission>
  </guard>
 </transition>
 <transition transition_id="cancel"
             title="cancel"
             new_state="cancelled" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=cancel" category="workflow">Cancel</action>
  <guard>
   <guard-permission>BastionBanking: Operate</guard-permission>
  </guard>
 </transition>
 <transition transition_id="reconcile"
             title="confirm with clearing house"
             new_state="reconciled" trigger="USER"
             before_script="reconcile" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=reconcile" category="workflow">Reconcile</action>
  <guard>
   <guard-permission>BastionBanking: Operate</guard-permission>
  </guard>
 </transition>
 <transition transition_id="refund"
             title="Refund Payment"
             new_state="refunded" trigger="USER"
             before_script="refund" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=refund" category="workflow">Refund</action>
  <guard>
   <guard-permission>BastionBanking: Operate</guard-permission>
  </guard>
 </transition>
 <transition transition_id="reject"
             title="payment not accepted"
             new_state="rejected" trigger="USER"
             before_script="reject" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=reject" category="workflow">Reject</action>
  <guard>
   <guard-permission>BastionBanking: Operate</guard-permission>
  </guard>
 </transition>
 <script script_id="accept" type="Script (Python)"
         filename="workflows/bastionpayment_workflow/accept.py"/>
 <script script_id="reject" type="Script (Python)"
         filename="workflows/bastionpayment_workflow/reject.py"/>
 <script script_id="reconcile" type="Script (Python)"
         filename="workflows/bastionpayment_workflow/reconcile.py"/>
 <script script_id="refund" type="Script (Python)"
         filename="workflows/bastionpayment_workflow/refund.py"/>
</dc-workflow>
