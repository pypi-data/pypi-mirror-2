        install_yaml_config(app)
        
        or
        
        from flaskext.yamlconfig import install_yaml_config
        from flaskext.yamlconfig import AppYAMLConfigure
        
        class MyConfig(AppYAMLConfigure):
        def configure_mysection(self, content):
        for item in content:
        ....
        
        
