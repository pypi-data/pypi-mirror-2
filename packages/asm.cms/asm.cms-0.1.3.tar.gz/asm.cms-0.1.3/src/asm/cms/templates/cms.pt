<html tal:define="resource nocall:context/@@layouthelper/static">
    <head>
        <title tal:content="context/title|nothing"></title>

        <!-- jQuery inclusions -->
        <script type="text/javascript" tal:attributes="src resource/jquery-1.3.min.js"></script>
        <script type="text/javascript" tal:attributes="src resource/jquery-ui.js"></script>
        <link rel="stylesheet" type="text/css" tal:attributes="href resource/jquery-ui.css" />

        <script type="text/javascript" tal:attributes="src resource/jstree/lib/sarissa.js"></script>
        <script type="text/javascript" tal:attributes="src resource/jstree/jquery.tree.min.js"> </script>
        <script type="text/javascript" tal:attributes="src resource/jstree/plugins/jquery.tree.xml_nested.js"></script>

        <!-- CMS-specific inclusions -->
        <script type="text/javascript" tal:attributes="src context/@@layouthelper/static/cms.js"></script>
        <link rel="stylesheet" type="text/css" tal:attributes="href context/@@layouthelper/static/cms.css" />

        <link rel="shortcut icon" type="image/vnd.microsoft.icon" tal:attributes="href context/@@layouthelper/static/favicon.ico" />

        <tal:block condition="context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context.page, '@@preview')"/>
        </tal:block>
        <tal:block condition="not:context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context, '@@preview')"/>
        </tal:block>
        <link rel="root" tal:attributes="href view/application_url"/>

        <base tal:attributes="href string:${context/@@base}"/>
    </head>

    <body>

        <div id="header">
            <h1 tal:content="view/cms_edition/title">Assembly Winter 2010</h1>
        </div>

        <div id="pagecontainer">
            <div id="page">
                <div id="content">
                    <tal:block replace="structure provider:pageheader"/>
                    <ul tal:define="messages context/@@layouthelper/messages"
                        tal:condition="messages"
                        class="messages section">
                      <li
                        tal:repeat="message messages"
                        tal:attributes="class message/type"
                        tal:content="message/message">Sauron will arrive soon!
                      </li>
                    </ul>
                    <tal:block replace="structure view/render"></tal:block>
                </div>
                <div id="navigation">
                    <div class="section">
                        <h2>Navigation</h2>
                    </div>
                    <div id="navigation-tree" tal:attributes="href string:${view/application_url}/@@tree">
                    </div>
                </div>
            </div>

            <div id="actions" class="actionbar">
                <ul>
                    <li><button class="button toggle-navigation">Navigation</button></li>
                </ul>
                <form tal:attributes="action
                    string:${view/application_url}/@@search">
                    <input type="text" name="q" class="search clear-first-focus" value="Search ..."/>
                </form>

                <tal:block replace="structure provider:main-page-actions"/>

                <tal:block replace="structure provider:page-action-groups"/>
            </div>

            <div id="navigation-actions" class="actionbar">
                <ul>
                    <li><button class="button toggle-navigation">Back to editor</button></li>
                </ul>
                <input type="text" name="q" class="search clear-first-focus" value="Search ..."/>
                <button class="button" id="delete-page">Delete page</button>
                <tal:block replace="structure provider:navigation-actions"/>
                <div class="section expandable" id="tools">
                    <h3>Tools
                        <span class="closed ui-icon ui-icon-carat-1-s"></span>
                        <span class="closed hint">more tools</span>
                        <span class="open ui-icon ui-icon-carat-1-n"></span>
                        <span class="open hint">less tools</span>
                    </h3>
                    <ul>
                    <tal:block replace="structure provider:navigation-tool-actions"/>
                    </ul>
                </div>
            </div>
        </div>
    </body>
</html>
