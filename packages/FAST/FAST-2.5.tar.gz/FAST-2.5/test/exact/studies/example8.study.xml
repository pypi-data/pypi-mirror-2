<experimental-study name="example8">
  <!--
	An illustration of how a relative_performance analysis is applied.

	Also, an illustration of how to use a file of seeds.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment name="foo">
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>5
         <seeds filename="example8.seeds"></seeds>
       </replication>
    </controls>
  </experiment>

  <experiment name="bar">
    <factors>
      <factor name="proby">
        <level name="low">0.4</level>
        <level name="high">0.6</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>5
         <seeds filename="example8.seeds"></seeds>
       </replication>
    </controls>
  </experiment>

  <!-- The default statistic is 'mean' -->
  <analysis name="PerfComparison1" type="relative_performance">
    <data experiment="foo"/>
    <options>
	_measurement='Value'
	_target_factor='mapping'
	_target_level='log'
    </options>
  </analysis>

  <analysis name="PerfComparison2" type="relative_performance">
    <data experiment="foo"/>
    <options>
	_measurement='Value'
	_target_factor='mapping'
	_target_level='log'
	_statistic=min
    </options>
  </analysis>

  <analysis name="PerfComparison3" type="relative_performance">
    <data experiment="foo"/>
    <data experiment="bar"/>
    <options>
	_measurement='Value'
	_target_factor='mapping'
	_target_level='log'
    </options>
  </analysis>

</experimental-study>
