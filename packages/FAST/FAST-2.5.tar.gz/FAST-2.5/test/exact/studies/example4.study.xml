<experimental-study name="example4">
  <!--
	A simple experiment with a validation analysis.
	This example illustrates the use of replicated trials of
		the same treatment combination (i.e. set of factor/level
		combinations).

	Note: two validation tests are performed.  The first, performs
		validation assuming that the max value over all 
		trials is evaluated.  The second performs validation
		with the min value over all trials.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment>
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>5
         <seeds>1008734987 10198098 10289347 103342333 10498098</seeds>
       </replication>
    </controls>
  </experiment>

  <!-- The default statistic value is 'max' -->
  <analysis name="Validation1" type="validation">
    <options>_measurement=Value _optimum=100.0 _tolerance=10.0</options>
  </analysis>

  <analysis name="Validation2" type="validation">
    <options>_measurement=Value _optimum=100.0 _tolerance=100.0 _statistic=min</options>
  </analysis>

</experimental-study>
