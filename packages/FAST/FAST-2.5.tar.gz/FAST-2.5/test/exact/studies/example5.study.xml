<experimental-study name="example5">
  <!-- DISABLED -->
  <!--
	A simple experiment using the valgrind driver.

	Note: if valgrind is not installed, then the exit status
		will be '1', and the validation tests will all fail.
	Note: the testfn.script script had to be instrumented to 
		parse the valgrind error summary.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment>
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable driver="exact_valgrind">./testfn.script</executable>
       <replication>1
          <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <analysis name="Validation" type="validation">
    <options>_measurement=Value _optimum=100.0 _tolerance=10.0</options>
  </analysis>

  <analysis name="ValgrindErrors" type="validation">
    <options>_measurement="Valgrind Errors" _value=0 _cmp_operator='leq'</options>
  </analysis>

  <!-- We expect a valgrind leak error. -->
  <analysis name="ValgrindLeaks" type="validation">
    <options>_measurement="Valgrind Leaks" _value=0 _cmp_operator='gt'</options>
  </analysis>

</experimental-study>
