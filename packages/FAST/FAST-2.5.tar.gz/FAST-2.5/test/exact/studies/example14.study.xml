<experimental-study name="example14">
  <!--
	A simple experiment with validation analyses:
		absolute and percent tolerances.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment name="exp1">
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
      <factor name="iters">
        <level name="low">1</level>
        <level name="high">10000000</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <filter>
         <factor name="iters">low</factor>
       </filter>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <experiment name="exp2">
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
      <factor name="iters">
        <level name="low">1</level>
        <level name="high">10000000</level>
      </factor>
    </factors>
    <controls>
       <executable>testfn.script</executable>
       <filter>
         <factor name="iters" comparison="value">1$</factor>
       </filter>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <analysis name="Validation1" type="validation">
    <options>_measurement=Value _optimum=100.0 _tolerance=10.0</options>
  </analysis>

  <analysis name="Validation2" type="validation">
    <options>_measurement=Niter _optimum=2 _tolerance=0.0</options>
  </analysis>

  <analysis name="Validation3" type="validation">
    <options>_measurement=Value _optimum=100.0 _tolerance=10.0</options>
  </analysis>

  <analysis name="Validation4" type="validation">
    <options>_measurement=Niter _optimum=2 _tolerance=0.0</options>
  </analysis>

</experimental-study>
