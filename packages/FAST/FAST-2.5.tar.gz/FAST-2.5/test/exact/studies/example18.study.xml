<experimental-study name="example18">
  <!--
	A simple experiment using the memmon driver.

	Note: if memmon is not built properly, then the exit status
		will be '1', and the validation tests will all fail.
	Note: the testfn.script script had to be instrumented to 
		parse the valgrind error summary.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment>
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
      <factor name="sleep">
        <level name="sleeping">1</level>
      </factor>
    </factors>
    <controls>
       <executable driver="memmon -v">./testfn.script</executable>
       <replication>1
          <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <analysis name="MemCheck" type="validation">
    <options>_measurement=MaxMemory _value=0 _cmp_operator='gt' _validation_method=example13.validation_fn _test_exit_status=False</options>
    <python>example13</python>
  </analysis>

</experimental-study>
