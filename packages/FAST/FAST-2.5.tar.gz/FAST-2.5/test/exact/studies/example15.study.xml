<experimental-study name="example15">
  <!--
	A simple experiment with validation analyses:
		absolute and percent tolerances.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment name="exp1">
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
      <factor name="iters">
        <level name="low">1</level>
        <level name="high">100</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <analysis name="Validation1" type="validation">
    <options>_measurement=Value _optimum=100.0 _tolerance=10.0</options>
  </analysis>

  <!-- This analysis should give exactly the same results as before. The
       percent tolerance value equals 'optimum*ptolerance'.  However,
       when testing large numbers of test problems, it's convenient to
       include the optimum value with each test problem, and then simply
       specify a percentage tolerance for validation.
  -->
  <analysis name="Validation2" type="validation">
    <options>_measurement=Value _optimum=100.0 _ptolerance=0.1</options>
  </analysis>

  <analysis name="Validation3" type="validation">
    <data name="exp1">
      <filter>
        <factor name="iters">low</factor>
      </filter>
    </data>
    <options>_measurement=Niter _optimum=2 _tolerance=0.0</options>
  </analysis>

</experimental-study>
