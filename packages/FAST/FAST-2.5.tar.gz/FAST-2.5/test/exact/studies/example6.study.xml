<experimental-study name="example6">
  <!--
	A simple experiment with a validation analysis.
	This illustrates how named experiments can be used
	with analyses that used named data experiments.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment name="foo">
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <experiment name="bar">
    <factors>
      <factor name="proby">
        <level name="low">0.4</level>
        <level name="high">0.6</level>
      </factor>
      <factor name="scale">
        <level name="low">2.0</level>
        <level name="high">20.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <analysis name="Validation" type="validation">
    <data experiment="foo"/>
    <data experiment="bar"/>
    <options>_measurement=Value _optimum=100.0 _tolerance=10.0</options>
  </analysis>

</experimental-study>
