<experimental-study name="example9">
  <!--
	A simple experiment with baseline analyses:
		absolute and percent tolerances.
  -->

  <tags>
    <tag>example</tag>
  </tags>

  <experiment name="foo">
    <factors>
      <factor name="proby">
        <level name="low">0.1</level>
        <level name="high">0.9</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <experiment name="bar">
    <factors>
      <factor name="proby">
        <level name="low">0.4</level>
        <level name="high">0.6</level>
      </factor>
      <factor name="scale">
        <level name="low">1.0</level>
        <level name="high">10.0</level>
      </factor>
      <factor name="mapping">
        <level name="log">log</level>
        <level name="exp">exp</level>
      </factor>
    </factors>
    <controls>
       <executable>./testfn.script</executable>
       <replication>1
	  <seeds>1008734987</seeds>
       </replication>
    </controls>
  </experiment>

  <!-- The first experiment in the baseline is the one compared
       with all of the other sets of data.  Thus, you can baseline more than
       one experimental result!
  -->
  <analysis name="Baseline1" type="baseline">
    <data experiment="exp1" import="example2.study.xml"/>
    <data experiment="foo"/>
    <data experiment="bar"/>
    <options>_measurement=Value _tolerance=0.0</options>
  </analysis>

  <analysis name="Baseline2" type="baseline">
    <data experiment="exp1" import="example2.study.xml"/>
    <data experiment="foo"/>
    <data experiment="bar"/>
    <options>_measurement=Value _sense=1.0 _tolerance=0.0</options>
  </analysis>

  <!-- This analysis should give exactly the same results as Baseline1. The
       percent tolerance value equals 'optimum*ptolerance'.
  -->
  <analysis name="Baseline3" type="baseline">
    <data experiment="exp1" import="example2.study.xml"/>
    <data experiment="foo"/>
    <data experiment="bar"/>
    <options>_measurement=Value _ptolerance=0.0</options>
  </analysis>

  <analysis name="Baseline4" type="baseline">
    <data experiment="exp1" import="example2.study.xml"/>
    <data experiment="foo"/>
    <data experiment="bar"/>
    <options>_measurement=Value _sense=1.0 _ptolerance=0.0</options>
  </analysis>

</experimental-study>
