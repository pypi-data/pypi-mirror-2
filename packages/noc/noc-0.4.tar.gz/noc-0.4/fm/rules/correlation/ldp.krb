##
## 'LDP LSP Down', 'LDP LSP Up' on same 'fec'
##
lsp_close
    use close($e1, $e2)
    when
        seq_object_classes_vars($e1, $e2, ('LDP LSP Down','LDP LSP Up'), ('fec',))
