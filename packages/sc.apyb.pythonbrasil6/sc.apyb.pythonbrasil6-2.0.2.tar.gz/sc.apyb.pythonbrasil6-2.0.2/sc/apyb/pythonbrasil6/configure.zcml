<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="sc.apyb.pythonbrasil6">

    <five:registerPackage package="." initialize=".initialize" />

    <include package=".browser" />
    <include file="dependencies.zcml" />
    <genericsetup:registerProfile
        name="default"
        title="APyB: PythonBrasil[7]"
        directory="profiles/default"
        description="APyB:Política de configuração para o site PythonBrasil[7]"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />
    <genericsetup:registerProfile
        name="to101"
        title="APyB:Atualização para versão 1.0.1"
        directory="profiles/to101"
        description="APyB:Política de configuração para o site PythonBrasil6"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />
    <genericsetup:registerProfile
        name="to200"
        title="APyB:Atualização para versão 2.0.0"
        directory="profiles/to200"
        description="APyB:Política de configuração para o site PythonBrasil7"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />
        
    <i18n:registerTranslations directory="locales" />
    
    <!-- Oculta produtos no quickinstaller -->
    <utility factory=".quickinstaller.HiddenProfiles"
             name="sc.apyb.pythonbrasil6" />
    <utility factory=".quickinstaller.HiddenProducts"
             name="sc.apyb.pythonbrasil6" />
    
    <include package=".upgrades" />
</configure>
