<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyNewsletter">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       text here/getText;">
        <div id='easynewsletter'>
        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:content="here/Description" 
             class="documentDescription">description</div>

        <div tal:replace="structure provider:plone.abovecontentbody" />
        
        <a href=""
           class="link-parent"
           tal:attributes="href context/aq_parent/absolute_url"
           i18n:translate="easynewsletter_backtonewsletter_label">
           Back to newsletter
        </a>  
        
	<div tal:content="structure context/getHeader">
		The header
	</div>
      
        <div metal:define-macro="body">
          <div tal:content="structure context/get_unpersonalized_body">
            The newsletter's text
          </div>      
        </div>

	<div tal:content="structure context/getFooter">
		The footer
	</div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
        </div>
    </tal:main-macro>
</metal:main>

</body>
</html>

