<dl class="portlet portletContextCloud"
    i18n:domain="betahaus.contextcloud"
    tal:define="layout view/data/layout;
                results view/getResults;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <tal:title content="view/title|nothing"/>
        <span class="portletTopRight"></span>
    </dt>
	
	<tal:cloud condition="python: layout == 'cloud'">
	<dd class="portletItem ContextCloud">
		<tal:iterate repeat="tag results">
			<a tal:content="tag/name"
			   tal:define="weightclass string:cloud-level-${tag/weight}"
			   tal:attributes="href tag/url;
			                   title tag/count;
							   class python: tag.selected and 'selected '+weightclass or 'plain '+weightclass">Name</a>
		</tal:iterate>
	</dd>
	</tal:cloud>

    <tal:comment condition="nothing">The regular listing</tal:comment>
	<tal:listing condition="python: layout == 'list'">
	    <tal:iterate repeat="tag results">
	    	<dd class="portletItem">
	            <a tal:content="tag/name"
	               tal:attributes="href tag/url;
	                               title tag/count;
	                               class python: tag.selected and 'selected' or 'plain'">Name</a>
			    <span class="count" tal:content="tag/count">5</span>
			</dd>
	    </tal:iterate>
	</tal:listing>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
