<?xml version="1.0" encoding="utf-8"?>
<?py
from cocktail.translations import translations
?>

<py:woost.views.StandardView
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:py="http://www.whads.com/ns/cocktail/templates">

    <?py-class
    campaign_monitor_errors = None
    ?>

    <div py:def="content">

        <py:ready>
            <py:woost.extensions.campaignmonitor.CampaignMonitorSubscriptionForm
                py:if="not self.submitted or self.form_errors"
                py:data="@{self.form_data}"
                py:schema="@{self.form_schema}"
                py:errors="@{self.form_errors}"
                py:campaign_monitor_errors="@{self.campaign_monitor_errors}" />
        </py:ready>

        <py:ready py:if="self.publishable.body">
            <p>
                ${self.publishable.body}
            </p>
        </py:ready>

    </div>

</py:woost.views.StandardView>
