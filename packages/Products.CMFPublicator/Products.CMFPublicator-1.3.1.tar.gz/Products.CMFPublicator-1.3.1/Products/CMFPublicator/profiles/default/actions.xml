<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <action-provider name="portal_workflow" />
  <action-provider name="portal_types" />
  <action-provider name="portal_actions" />

  <object name="object" meta_type="CMF Action Category">
    <object name="edit_publications_local"
	        meta_type="CMF Action"
            i18n:domain="Products.CMFPublicator">
	    <property name="title" i18n:translate="">Publications</property>
	    <property name="description" i18n:translate=""></property>
	    <property
	      name="url_expr">python:object.portal_publicator.absolute_url()+"/publicator_select_form"</property>
	    <property name="link_target"></property>
	    <property name="icon_expr"></property>
	    <property
	      name="available_expr">python:member and folder.portal_publicator.absolute_url()==folder.absolute_url()+"/portal_publicator"</property>
	    <property name="permissions">
	       <element value="Review portal content"/>
	    </property>
        <property name="visible">False</property>
    </object>
  </object>
  <object name="user" meta_type="CMF Action Category">
    <object name="edit_publications_global"
	        meta_type="CMF Action"
            i18n:domain="Products.CMFPublicator"
			insert-before="*">
	    <property name="title" i18n:translate="">Publications</property>
	    <property name="description" i18n:translate=""></property>
	    <property
	      name="url_expr">string:${portal_url}/publicator_select_form</property>
	    <property name="link_target"></property>
	    <property name="icon_expr"></property>
	    <property name="available_expr"></property>
	    <property name="permissions">
	        <element value="Review portal content"/>
	    </property>
	    <property name="visible">True</property>
    </object>
  </object>
</object>

