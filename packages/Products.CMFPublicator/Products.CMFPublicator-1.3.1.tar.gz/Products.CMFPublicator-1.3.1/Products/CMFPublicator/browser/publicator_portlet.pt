<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portletNews"
    tal:define="portal_url context/@@plone_portal_state/portal_url"
    i18n:domain="plone">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a href="#"
           class="tile"
           tal:attributes="href view/box_title">News</a>
		<a href=""
           tal:condition="view/check_permission"
           tal:attributes="href string:${portal_url}/publicator_edit_form?box_id=${view/box_id}">
            <img src="" alt="Edit" title="Edit" height="16" width="16"
                 tal:attributes="src string:${portal_url}/publicator_edit_icon.gif"
                 i18n:domain="Products.CMFPublicator"
                 i18n:attributes="alt; title;" />
         </a>
        <span class="portletTopRight"></span>
    </dt>

    <tal:newsitems  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                                plone_view context/@@plone;
                                getIcon nocall:plone_view/getIcon;"
                    tal:repeat="obj view/publicator_items">
    <dd tal:define="oddrow repeat/obj/odd;
	                item_title obj/Title;
					item_id obj/Id;
	                item_url obj/RelativeContentURL;
					item_description obj/Description;
                    item_icon python:getIcon(obj);
					new_window obj/NewWindow;
                    item_icon obj/Icon;
                    item_date obj/Date"
		 tal:condition="python:item_url"
         tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

        <a href=""
           class="tile"
           tal:attributes="href string:${portal_url}/${item_url};
                           title item_description;
						   target python: new_window and '_blank' or '_self'">
            <img tal:replace="structure item_icon" />
            <span tal:replace="python: item_title and item_title or item_id">
            </span>
         </a>
            <span class="portletItemDetails"
                  tal:content="python:toLocalizedTime(item_date)">May 5</span>
        
    </dd>
    </tal:newsitems>
    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</html>