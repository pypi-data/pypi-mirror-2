<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="dublettefinder_styles"
         meta_type="Filesystem Directory View"
         directory="slc.dublettefinder:skins/dublettefinder_styles"/>

 <object name="dublettefinder_templates"
         meta_type="Filesystem Directory View"
         directory="slc.dublettefinder:skins/dublettefinder_templates"/>

 <object name="dublettefinder_images"
         meta_type="Filesystem Directory View"
         directory="slc.dublettefinder:skins/dublettefinder_images"/>

 <skin-path name="Plone Default">
    <layer insert-after="custom" 
            name="dublettefinder_styles"/>

    <layer insert-after="custom" 
            name="dublettefinder_templates"/>

    <layer insert-after="custom" 
            name="dublettefinder_images"/>
 </skin-path>

</object>
