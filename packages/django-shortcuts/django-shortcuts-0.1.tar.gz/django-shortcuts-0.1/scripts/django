#!/usr/bin/env python

import os
import sys
import subprocess
import optparse

ALIASES = [
    ('r', 'runserver'),
    ('s', 'shell'),
]

try:
    command = sys.argv[1]
except IndexError:
    subprocess.call([sys.executable, 'manage.py'], cwd=os.getcwd())
else:
    for alias in ALIASES:
        if alias[0] == command:
            command = alias[1]

    subprocess.call([sys.executable, 'manage.py', command] + sys.argv[2:], cwd=os.getcwd())
