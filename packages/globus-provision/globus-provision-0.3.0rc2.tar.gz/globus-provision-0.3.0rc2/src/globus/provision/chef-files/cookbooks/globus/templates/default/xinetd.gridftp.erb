service gsiftp
             {
             instances               = 50
             socket_type             = stream
             wait                    = no
             user                    = root     
             server                  = /usr/sbin/globus-gridftp-server
             <% if @ec2_public %>
             server_args             = -i  --data-interface <%= @public_ip %>
             <% else %>
             server_args             = -i
             <% end %>
             log_on_success          += DURATION
             nice                    = 10
             disable                 = no
             }
