<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <title>${title}</title>
    <subtitle>${subtitle}</subtitle>
    <link href="${request.url}" rel="self" />
    <link href="${site_url}/" />
    <id>${site_url}/</id>
    <updated>${updated}</updated>
    <author>
        <name>${author_name}</name>
        <email>${author_email}</email>
    </author>

    <entry tal:repeat="comment comments">
        <id>${site_url}/component/content/article/${comment.contentid}/josc${comment.id}</id>
        <title>${comment.content.title}</title>
        <link href="${site_url}/component/content/article/${comment.contentid}#josc${comment.id}" />
        <updated>${comment.rfc3339date}</updated>
        <author>
            <name>${comment.name}</name>
        </author>
        <summary>${comment.comment}</summary>
    </entry>
</feed>
