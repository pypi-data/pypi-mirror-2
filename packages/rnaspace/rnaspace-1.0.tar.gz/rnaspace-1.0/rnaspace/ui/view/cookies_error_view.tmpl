#block jquery
#raw
    // replace span toggle_text by a link
    // so if javascript is not enable, there will be no empty link
    $("span.toggletext").each( function () {

        var TextSpan = $(this).text();
        $(this).replaceWith('<a class="toggletext" href="" title="Display help">' + TextSpan + '<\/a>');
    });

    // when we click on a toogletext element, display added sequences
    $("a.toggletext").click( function () {
        $(this).next("#addedseq").slideToggle("normal");
        return false;
    });

#end raw
