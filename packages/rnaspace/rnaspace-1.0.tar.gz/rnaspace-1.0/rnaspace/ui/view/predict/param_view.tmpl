#from rnaspace.ui.view.predict.predict_helper import *

<input type="hidden" id="authkey" value="$authkey">

<form id="parameters_form" enctype="multipart/form-data"
      method="post"
      action="${mount_point}predict/parameters/submit?authkey=$authkey">
      
    <div class="cbb_content">
      <table>	
	  #for $sopt in $predictor.simple_options
	   #if $sopt != '' 
	   <tr>	  
	    <td> $predictor.options_desc[$sopt]</td> 
	    <td>$get_option($predictor, $sopt, $updated)</td>
	
	    #if $sopt in $param_error
	    <td class="error">$param_error[$sopt]</td>
	    #else
	    <td class="error"></td>
	    #end if
	   </tr>
	   #end if
	  #end for

	  #for $lopt in $predictor.long_options
	   #if $lopt != ''	
	   <tr>
	    <td> $predictor.options_desc[$lopt]</td>
	    <td>$get_option($predictor, $lopt, $updated)</td>
	  
	    #if $lopt in $param_error	  
	    <td class="error">$param_error[$lopt]</td>
	    #else
	    <td class="error"></td>
	    #end if
	   </tr>
	   #end if
	  #end for
	  </table>
      
      <input type="hidden" name="type" value="$predictor.type" />
      <input type="hidden" name="softname" value="$predictor.name" />
        
    </div>
  
  <br />
  
  <div style="float:right;">
      <input id="submit_param" class="button_bp" 
	     type="submit" name="submit_param" value="Save parameters" />
      <input id="cancel_param" class="button_bp" 
	     type="submit" name="cancel_param" value="Cancel" />
      <input id="default_param" class="button_bp" 
	     type="submit" name="default_param" value="Default Values" />
   </div>
   <div style="clear:right"> </div>
</form>
