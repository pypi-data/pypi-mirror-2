<div class="info_section">

  <a class="info_section" href="">User info</a>
  <div class="addedseq">
    #if $user_id == $unknown_user
    You're authentified as an <strong>Unknown user</strong> 
    (<a href="/">create an account</a>)
    #elif $user_id == None
    You're authentified as an <strong>Unknown user</strong> 
    (<a href="/">create an account</a>)
    #else
    User id: <strong>$user_id</strong>
    <br /><br />
    $user_used_space used of $available_space available
    #end if

  </div>

</div>

<br />

<div class="info_section">

  <a class="info_section" href="">Project</a>
  <div class="addedseq">
    #if $len($projects) > 0
    	 #if $len($projects) == 1
		    <strong>ID: </strong> $projects[0]<br />
		    <br />
    	 #else
		    <strong>ID: </strong>
		
		    <select id="projects" name="projects" style="width: 11em">
		      #for $project_id in $projects
		      <option value="$project_id"> $project_id </option>
		      #end for
		    </select> <br />
			<br />			
		#end if
    #end if
    <strong>$nb_sequences</strong> sequences <br />
    <strong>$nb_predictions</strong> predictions <br />
    <strong>$nb_alignments</strong> alignments <br />
    <strong>$project_used_space</strong> used on the disk
    #if $len($projects) > 0
    <div align="right">
      <a href="${mount_point}manage/index?action=new_project">new</a>
    </div>
    #end if
  </div>
</div>

<br />


<div class="info_section">
  #set $nb_lines = 0
  <a class="info_section" href="">History</a>
  <div class="addedseq">
    #if $sorted_dates is not None
	#for $date in $sorted_dates
	      #for $event in $history[$date]
	         #if $nb_lines < $history_size
				 $dates[$date] - $event.make_action() <br />
			 	 #set $nb_lines += 1
			 #end if
	      #end for
	#end for
	#else 
		no entry
	#end if
    <div align="right"><a href="${mount_point}history/">more</a></div>
  </div>
</div>
