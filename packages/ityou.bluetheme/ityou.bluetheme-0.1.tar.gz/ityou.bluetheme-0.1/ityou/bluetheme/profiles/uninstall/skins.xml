<?xml version="1.0"?>
<!-- the default skin is set back to the plone default skin -->
   <object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False" cookie_persistence="False" default_skin="Sunburst Theme"  request_varname="plone_skin">
        <!-- Remove the "ITYOU Blue Theme" skin layers -->
        <object name="ityou_bluetheme_images" meta_type="Filesystem Directory View" remove="True" />
        <object name="ityou_bluetheme_styles" meta_type="Filesystem Directory View" remove="True" />
        <object name="ityou_bluetheme_templates" meta_type="Filesystem Directory View" remove="True" />

       <!-- Remove the "ITYOU Blue Theme" skin path -->
       <skin-path name="ITYOU Blue Theme"  remove="True" />
   </object>
