<?xml version="1.0"?>
<object>

    <order manager="plone.portalheader" skinname="ITYOU Blue Theme" based-on="Plone Default">
        <viewlet name="ityou.bluetheme.searchbox" insert-before="plone.logo"/>
    </order>
    <order manager="plone.portaltop" skinname="ITYOU Blue Theme" based-on="Plone Default">
        <viewlet name="ityou.bluetheme.path_bar"        insert-after="plone.header"/>
        <viewlet name="ityou.bluetheme.contentviews"    insert-after="plone.header"/>
        <viewlet name="ityou.bluetheme.contentactions"  insert-after="ityou.bluetheme.contentviews"/>
    </order>
    
    <hidden manager="plone.portalheader" skinname="ITYOU Blue Theme" based-on="Plone Default">
        <viewlet name="plone.searchbox" />
    </hidden>
    <hidden manager="plone.contentviews" skinname="ITYOU Blue Theme" based-on="Plone Default">
        <viewlet name="plone.contentviews"/>
        <viewlet name="plone.contentactions"/>
    </hidden>
    <hidden manager="plone.abovecontent" skinname="ITYOU Blue Theme">
        <viewlet name="plone.path_bar"/>
    </hidden>

</object>
