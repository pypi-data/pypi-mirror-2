<div tal:define="view context/@@maps_googlemaps_view; global 
plone_view context/@@plone; foo plone_view/globalize; "> 
	<div tal:replace="structure provider:plone.htmlhead" /> 
 
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="plone">

<head><script type="text/javascript"
	        tal:content="view/js">
    </script>
	<style tal:content="view/css" type="text/css" />

<body>
<div tal:define-macro="body_macro"
                tal:define="kssClassesView context/@@kss_field_decorator_view;
                            getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                            templateId template/getId">


        <div id="slider-container">
        <div id="slider">
            <ul>
            <tal:rep tal:repeat="slide view/get_items">
                <li tal:condition="python: slide.portal_type == 'News Item'">
                  <div class="news-slide">
                     <h1 class="documentFirstHeading"> 
                         <span tal:content="slide/Title" />
                     </h1>

                      <a tal:attributes="href slide/getURL">
                          <img class="news-slide-image" 
                              tal:attributes="alt slide/Title;
                                              src string:${slide/getURL}/image_preview"
                          />
                      </a>
                      <div class="slide-news-content">
                         <p class="documentDescription">
                          <span tal:content="slide/Description" />
                        </p>
                         <a tal:attributes="href slide/getURL"  i18n:translate="read_more">
                            Read More
                         </a>
                     
                     </div>
                  </div>
                </li>
                
                <li tal:condition="python: slide.portal_type == 'Image'">
                  <div class="slider-text">
                    <a tal:attributes="href slide/getURL"> 
                      <h1 tal:content="slide/Title" />
                    </a>
                    <p class="documentDescription" tal:content="slide/Description" />
                  </div>
                  <div class="slider-image">
                    <a tal:attributes="href slide/getURL">            
                      <img tal:attributes="src string:${slide/getURL}/image_preview;
                                           title slide/Title;
                                           alt slide/Description"
                      />
                    </a>
                  </div>

                </li>

            </tal:rep>
            </ul>
        </div>
</body>
</html>
</div>
