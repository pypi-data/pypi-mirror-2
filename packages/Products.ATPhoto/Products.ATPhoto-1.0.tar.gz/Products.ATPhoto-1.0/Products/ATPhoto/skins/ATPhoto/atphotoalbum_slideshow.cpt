<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ATPhoto">
  <head>    
    <metal:script metal:fill-slot="javascript_head_slot">
        <script type="text/javascript"
                tal:attributes="src string:$here_url/slideshow_contents.js">
        </script>
    </metal:script>
  </head>

<body>

<tal:header metal:fill-slot="header"> 

    <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
    </div>

    <h1 class="documentFirstHeading"
        i18n:translate="loading_slideshow">
    Loading slide show. Please wait...
    </h1>

    <small class="discreet" id="image_infos"
           style="visibility:hidden">
        <span i18n:translate="label_size">
        Size:
        </span>
        
        <span id="PhotoSize">
        n/a
        </span>

        -
        
        <span i18n:translate="label_file_type">
        File type:
        </span>

        <span id="ContentType">
        n/a
        </span>

    </small>
</tal:header>

<tal:main-macro metal:fill-slot="main">

    <metal:control metal:use-macro="here/atphoto_macros/macros/control" />

    <div class="listingBar" id="BatchNavigation"
         style="visibility:hidden"
         tal:content="python:''">
        Navigation
    </div>
    <div class="row" align="center">
          <div id="PhotoWrapper" style="background-repeat:no-repeat;">
          </div>
    </div>
</tal:main-macro>

<tal:sub metal:fill-slot="sub" 
         tal:define="transition request/cookie/transition|request/transition|string:basicCallBack;">
    <pre id='Debug' name="Debug"
         tal:content="python:''"
         style="visibility:hidden;">
         Area to show debug messages
    </pre>
</tal:sub>

</body>

</html>
