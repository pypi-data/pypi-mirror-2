<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>
<div metal:define-macro="portlet">
     

<tal:recentlist tal:define="results python:request.get('items',
                                            here.portal_catalog.searchResults(sort_on='created',
                                            portal_type=['ATPhoto'],
                                            sort_order='reverse')[:3]);
                            album_res python:request.get('items',
                                            here.portal_catalog.searchResults(sort_on='created',
                                            portal_type=['ATPhotoAlbum'],
                                            sort_order='reverse')[0]);">
<dl class="portletEnd">
<dl class="portlet" id="portlet-recent">
  
    <!-- span class="portletTopLeft" /-->
    <dt class="portletHeader">     
           Recent Photos
    </dt>
    <!-- span class="portletTopRight" /-->
    <tal:items tal:repeat="obj results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd;
                    item_wf_state obj/review_state;
                    item_wf_state_class python:'state-' + here.plone_utils.normalizeString(item_wf_state);
                    item_type_class python: 'contenttype-' + normalizeString(obj.portal_type);"
        tal:attributes="class python:test(oddrow, 
                                         'portletItem even', 
                                         'portletItem odd')">
        <div tal:attributes="class item_type_class">                
        <a href=""
           tal:attributes="href string:${obj/getURL}/view;
                           title obj/Description;
                           class string:$item_wf_state_class">
            <img tal:replace="structure python:obj.getObject().tag(scale='thumb')"/>
            <span class="portletItemDetails"
                  tal:content="python:here.toLocalizedTime(obj.ModificationDate)"
                  >May 5</span>
        </a>
        </div>
    </dd>
    </tal:items>

    <dd class="portletItem" 
        tal:condition="not: results"
        i18n:translate="box_recent_no_items">
        No items changed yet.
    </dd>

  
    <dd class="portletFooter even">
        <a href="#"
           tal:attributes="href python:album_res.getObject().absolute_url()">
        More photos &hellip;
        </a>
    </dd>
  
    <!-- span class="portletBottomLeft" /-->
    <!-- span class="portletBottomRight" /-->
  
</dl>
</dl>
</tal:recentlist>
    
</div>
</body>
</html>


