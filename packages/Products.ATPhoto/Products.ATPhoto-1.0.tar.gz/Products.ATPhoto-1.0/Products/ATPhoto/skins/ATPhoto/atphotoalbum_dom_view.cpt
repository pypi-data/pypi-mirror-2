<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ATPhoto">
  <head>
    <metal:script metal:fill-slot="javascript_head_slot">
        <script type="text/javascript"
                tal:attributes="src string:$here_url/slideshow_contents.js">
        </script>
    </metal:script>
  </head>
<body>
<div metal:fill-slot="main"
         tal:define="standalone python:1; 
                     batch_size request/cookie/batch_size|request/batch_size|string:12;
                     view_title view_title|request/view_title|string:;
                     full_view full_view|request/full_view|python:True;">
    
    <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
    </div>

    <h1 tal:content="object_title" class="documentFirstHeading">
      Title or id
    </h1>

    <tal:full_view condition="full_view" i18n:domain="plone">

        <a href=""
           class="link-parent"
           tal:define="parent_url python:here.navigationParent(here, fallThroughDefaultPage = False, checkPermissions = ['List folder contents'])"
           tal:condition="parent_url"
           tal:attributes="href string:${parent_url}/folder_contents"
           i18n:translate="go_to_parent_url">
            Up one level
        </a>

        <p tal:content="here/Description">
            Description
        </p>
    </tal:full_view>

    <dl id="album_control" class="collapsible collapsedOnLoad">
       <dt class="collapsibleHeader" i18n:translate="label_album_control">Album control</dt>
       <dd class="collapsibleContent">
           <form id="AlbumControl" action="">
              <div class="row">
                  <div class="slideshowInput">
                      <label>Batch size</label>
                      <select name="BatchSizeList"
                             onChange="javascript:ATPhotoAlbum.setBatchSize();">
                        <tal:block tal:repeat="key python:range(12,61,12)">
                          <option value="" tal:attributes="selected python:test(key == batch_size,'selected',None);
                                                           value key">
                            <span tal:omit-tag="" i18n:translate="" tal:content="key"/>
                          </option>
                        </tal:block>
                      </select>
                  </div>
                  <div>&nbsp;</div>
              </div>
          </form>
          <div style="clear:left">&nbsp;</div>
       </dd>
    </dl>

    <div id="AlbumWrapper">
        <div style="display:none">
            <div>Your browser is to old to show this page</div>
            <div>
                Please click
                <a href="" tal:attributes="href string:$here_url/atphotoalbum_view">here</a>
            </div>
        </div>
    </div>

    <div id="BatchNavigation">
    </div>

    <pre id='Debug' name="Debug"
         tal:content="python:''"
         style="visibility:hidden;">
         Area to show debug messages
    </pre>
</div>
</body>
</html>


