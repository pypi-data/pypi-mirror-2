<body>
    <tal:macro metal:define-macro="header">
        <h1 class="documentFirstHeading">
            <tal:field metal:use-macro="python:here.widget('title', mode='view')">
            Titel
            </tal:field>
        </h1>
        <div class="documentByLine">        
        Quellentext. Erstellungsdatum: 
            <span tal:replace="python:here.toLocalizedTime(context.CreationDate(), long_format=1)" />
        </div>
        <div>
            <span tal:replace="structure provider:plone.belowcontenttitle" />
        </div>
        
        <div id ="category" class="documentByLine"
            tal:condition="python:here.getSub()">
            <label>Sachindex</label>
            <div class="link-category" tal:content="python:', '.join(here.getSub())" />
        </div>
        <div>
            <br/>
            <span tal:condition="context/getShorttitle" 
                    tal:content="string:${context/getShorttitle}">Kurztitel
            </span> 
        </div>
        <div>
            <i><span tal:condition="context/getHistdatum"
                    metal:use-macro="python:here.widget('histdatum', mode='view')">Historisches Enstehungsdatum
            </span>  </i>
        </div>
        <div>
            <i><span tal:condition="context/getStddatum"
                    metal:use-macro="python:here.widget('stddatum', mode='view')">Standardisiertes Datum
            </span>  </i>
        </div>
        <div>
            <i><span tal:condition="context/getHistort" 
                    metal:use-macro="python:here.widget('histort', mode='view')">Historisches Enstehungsort
            </span> </i>   
        </div>
