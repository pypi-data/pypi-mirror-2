                    <!--tal:attributes="href here/getFundort">-->
                    <!--<span tal:replace="here/getFundort">full</span>-->
                <!--</a>-->
            <!--</span>-->
        <!--</div>-->
        <div>
            <span tal:condition="here/getFundort">
                <label></label>
                <br/>
                    <h2 class="documentFirstHeading">Fundort</h2>
                    <span metal:use-macro="python:here.widget('fundort', mode='view')">full</span>
                    </span>
        </div>
        <div>
            <span tal:condition="here/getDruckort">
                <label></label>
                <br/>
                    <h2 class="documentFirstHeading">Druckort</h2>
                    <span metal:use-macro="python:here.widget('druckort', mode='view')">full</span>
                    </span>
        </div>
        <br/>
    </tal:macro>
    
    <tal:main-macro metal:define-macro="body">
        <span tal:condition="here/getRegest">
            <br/>
            <h2 class="documentFirstHeading">Regest</h2>
            <span metal:use-macro="python:here.widget('regest', mode='view')">regest</span>
        </span>
        <span tal:condition="here/getOriginaltext">
            <br/>
            <h2 class="documentFirstHeading">Originaltext</h2>
            <span metal:use-macro="python:here.widget('originaltext', mode='view')">originaltext</span>
        </span>
        <span tal:condition="here/getUebetragung">
            <br/>
            <h2 class="documentFirstHeading">Übertragung</h2>
            <span metal:use-macro="python:here.widget('uebetragung', mode='view')">uebetragung</span>
        </span>
