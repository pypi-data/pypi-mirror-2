<body>
    <tal:macro metal:define-macro="header">
        <h1 class="documentFirstHeading">
            <tal:field metal:use-macro="python:here.widget('title', mode='view')">
            Title
            </tal:field>
        </h1>
        <div class="documentByLine">        
        Fachartikel. Erstellungsdatum: 
            <span tal:replace="python:here.toLocalizedTime(context.CreationDate(), long_format=1)" />
        </div>
        <div>
            <span tal:replace="structure provider:plone.belowcontenttitle" />
        </div>
        <div>
            <br/>
            <span tal:condition="context/getUntertitel" 
                    tal:content="string:${context/getUntertitel}">Untertitel
            </span> 
        </div>     
    </tal:macro>
    
    <tal:main-macro metal:define-macro="body">
        <span tal:condition="here/getAboutauthors">
            <br/>
            <h2 class="documentFirstHeading">Zu den Autoren</h2>
            <span metal:use-macro="python:here.widget('aboutauthors', mode='view')"></span>
        </span>
        <span tal:condition="here/getFabstract">
            <br/>
            <h2 class="documentFirstHeading">Abstract</h2>
            <span metal:use-macro="python:here.widget('fabstract', mode='view')"></span>
        </span>
        <span tal:condition="here/getFachartikeltext">
            <br/>
            <h2 class="documentFirstHeading">Fachartikeltext</h2>
            <span metal:use-macro="python:here.widget('fachartikeltext', mode='view')"></span>
        </span>
