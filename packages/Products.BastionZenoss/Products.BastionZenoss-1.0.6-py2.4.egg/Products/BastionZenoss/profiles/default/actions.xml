<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <action-provider name="portal_actions" >

  <action title="Zentinel" action_id="zport"
     category="portal_tabs"
     condition_expr="exists: object/zport"
     url_expr="string:${portal_url}/zentinel"
     visible="True">
       <permission>View</permission>
  </action>

  <action title="ZenReports" action_id="zreports"
     category="portal_tabs"
     condition_expr=""
     url_expr="string:${portal_url}/zenreports"
     visible="True">
       <permission>View</permission>
  </action>

  <action title="Zenoss Prefs" action_id="zenprefs"
     category="user"
     condition_expr="python:member is not None"
     url_expr="string:${portal_url}/zentinel/show_window?url=/zport/dmd/ZenUsers/${member/getId}"
     visible="True">
       <permission>View</permission>
  </action>
 </action-provider>


 <object name="zenoss_reports" meta_type="CMF Action Category">
        <object name="uptimes" meta_type="CMF Action" i18n:domain="bastionzenoss">
            <property name="title" i18n:translate="">Uptimes</property>
            <property name="description"
                  i18n:translate="">Report the uptime and availability of all your monitored devices</property>
            <property name="url_expr">string:${portal_url}/zenreports/lbz_uptime</property>
            <property name="icon_expr">string:document_icon.gif</property>
            <property name="available_expr"></property>
            <property name="permissions">
               <element value="View"/>
            </property>
            <property name="visible">True</property>
        </object>

 </object>

</object>
