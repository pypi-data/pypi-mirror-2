<dl class="portlet" id="portlet-zensearch">

   <dt class="portletHeader">
     <span class="portletTopLeft"></span>
     <span i18n:translate="box_device_ip">Device/IP Search</span>
     <span class="portletTopRight"></span>
   </dt>

   <dd class="portletItem lastItem">

      <span tal:replace="structure string:<script type=text/javascript language=javascript><!--"/>
          function zenSearchSubmit() {
              document.zensearchform.url.value = "<span tal:replace="view/zen_search_url"/>" + document.zensearchform.url.value;
              return true;
          }
      <span tal:replace="structure string://--></script>"/>

      <form action="/zport/dmd/deviceSearchResults" name="zensearchform" method="get"
            onsubmit="javascript: return zenSearchSubmit()"
            tal:attributes="action string:${view/search_url}">
        <input class="inputLabel" type="text" name="url" size="12"/>
        <input class="searchButton"
              type="submit"
              value="Go"
              i18n:attributes="value label_go;"/>
      </form> 

    </dd>

    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>

</dl>
