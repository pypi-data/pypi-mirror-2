<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionzenoss">

  <div metal:fill-slot="main"
       tal:define="devices context/zport/dmd/Devices/getSubDevices;
                   zentinel_url context/passthruUrlBase">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
              tal:attributes="src string:${utool}/${icon}">&nbsp;Uptime Report</h1>

      <a href=""
           class="link-parent"
           tal:define="parent_url context/absolute_url"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">Back to Zenoss Reports</a>

      <table border="0" cellpadding="2" cellspacing="0" width="100%" summary="">
          <tr>
             <td align="left"><strong>Device</strong></td>
             <td align="right"><strong>Uptime</strong></td>
             <td align="right"><strong>Availability</strong></td>
          </tr>
          <tr tal:repeat="device devices">
             <td><a href="" 
                    tal:attributes="href python:'%s/%s' % (zentinel_url, device.absolute_url(1))"
                    tal:content="device/title_or_id"/>
             </td>
             <td align="right" tal:content="device/sysUpTime"/>
             <td align="right" tal:content="device/availability"/>
          </tr>
      </table>

      <div metal:use-macro="context/document_actions/macros/document_actions">
           Document actions (print, sendto etc)
      </div>

  </div>
 
</html>
