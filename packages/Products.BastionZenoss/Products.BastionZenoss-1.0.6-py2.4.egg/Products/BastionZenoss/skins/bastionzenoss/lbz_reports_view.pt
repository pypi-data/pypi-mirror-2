<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionzenoss">

  <div metal:fill-slot="main"
       tal:define="cols python:2;
                   base_url context/absolute_url;
                   rpts context/availableReports;
                   Batch python:modules['Products.CMFPlone'].Batch;
                   b_start request/b_start | python:0;
                   b_size python:80;
                   batch python:Batch(rpts, b_size, int(b_start), orphan=1);
                   batchlen python:len(batch);">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
              tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="object_title"/></h1>

      <a href=""
           class="link-parent"
           tal:define="parent_url python:context.navigationParent(context, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">Up one level</a>

      <table border="0" cellpadding="2" cellspacing="0" width="100%" summary="">
          <tr tal:repeat="rows python: range(0, int(math.ceil( batchlen / float(cols))))">
               <tal:block tal:repeat="col python:range(0, cols)">
                  <tal:block tal:define="index python:rows * cols + col">
                     <tal:block tal:condition="python: index < batchlen">
                        <td class="list-item" 
                            tal:define="rpt python: batch[index];">
                           <img src="" alt="Report" tal:attributes="src string:${utool}/${rpt/icon}"/>
                           <a href="" tal:attributes="href rpt/url;
                                                      title rpt/description | rpt/title"
                                      tal:content="rpt/title"/>
                        </td>
                      </tal:block>
                   </tal:block>
               </tal:block>
          </tr>
      </table>

      <div metal:use-macro="context/document_actions/macros/document_actions">
           Document actions (print, sendto etc)
      </div>

  </div>
 
</html>
