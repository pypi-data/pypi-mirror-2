#!/sbin/runscript

opts="depend start stop"

depend() {
	use logger
}

start() {
	ebegin "Starting Jabbercracky daemon"
	start-stop-daemon --start --quiet --pidfile /var/run/jabbercracky.pid --exec /usr/bin/jabbercrackyd.py
	eend $?
}

stop() {
	ebegin "Stopping Jabbercracky daemon"
	start-stop-daemon --stop --quiet --pidfile /var/run/jabbercracky.pid
	eend $?
}
