<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
 <action-provider name="portal_actions">

  <action title="Allow RSVPs" action_id="allowRSVPs" category="object_buttons"
     condition_expr="not:object/@@rsvp-configuration/isRSVPEnabled"
     url_expr="string:${object_url}/@@rsvp-configuration/enableRSVPs" visible="True">
   <permission>Modify portal content</permission>
  </action>

  <action title="Disable RSVPs" action_id="disableRSVPs" category="object_buttons"
     condition_expr="object/@@rsvp-configuration/isRSVPEnabled"
     url_expr="string:${object_url}/@@rsvp-configuration/disableRSVPs" visible="True">
   <permission>Modify portal content</permission>
  </action>

</action-provider>
</object>