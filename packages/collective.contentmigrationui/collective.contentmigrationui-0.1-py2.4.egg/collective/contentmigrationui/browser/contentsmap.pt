<tal:block metal:define-macro="navigation_menu">
	<li tal:repeat="section sections" class="navTreeItem visualNoMarker">
		<div>
			<input type="checkbox" name="paths:list"
				tal:attributes="value section/path">
			<img tal:attributes="src section/icon;
				alt section/Title;
				title section/Title"/>
			<span tal:content="section/item/Title"
				tal:attributes="class string:state-${section/normalized_review_state}">
				Top level section
			</span>
		</div>
		<ul tal:attributes="class string:navTree navTreeLevel${level}"
			tal:define="sections section/children;
						level	python: level+1"
			tal:condition="nocall:sections">
				<metal:call use-macro="here/contentsmap/macros/navigation_menu" />
		</ul>
	</li>
</tal:block>
