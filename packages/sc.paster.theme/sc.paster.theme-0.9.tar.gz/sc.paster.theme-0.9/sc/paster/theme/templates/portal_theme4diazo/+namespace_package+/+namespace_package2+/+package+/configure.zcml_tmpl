<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:cmf="http://namespaces.zope.org/cmf"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="${namespace_package}.${namespace_package2}.${package}">

    #if str($zope2product) == 'True'
    <five:registerPackage package="." initialize=".initialize" />
    #end if

    <include package=".browser" />
    <plone:static directory="static" type="theme" />
    <include file="skins.zcml" />

    <genericsetup:registerProfile
        name="default"
        title="${namespace_package}.${namespace_package2}.${package}"
        directory="profiles/default"
        description="${namespace_package}.${namespace_package2}.${package}"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />

    <genericsetup:registerProfile
        name="uninstall"
        title="${namespace_package}.${namespace_package2}.${package}"
        directory="profiles/uninstall"
        description="Uninstall ${namespace_package}.${namespace_package2}.${package}"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />

</configure>
