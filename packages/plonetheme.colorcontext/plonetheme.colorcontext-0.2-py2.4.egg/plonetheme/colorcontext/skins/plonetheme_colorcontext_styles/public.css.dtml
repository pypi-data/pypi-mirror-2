/*---------------------SYSTEM INFO-------------------------------*/

.portalMessage
{
	border-bottom: 1px solid &dtml-contentViewBorderColor;;
	background-color: &dtml-contentViewBackgroundColor;;
	margin:0px 0px 5px 0px;	
}

.portalMessage dt
{
	background-color:#999999;
	border-bottom:1px solid #CCCCCC;
	color:white;
	font-weight:bold;
	padding:0 5px;
}

.portalMessage dd
{
	padding-left: 5px;
}
/*---------------------SYSTEM INFO END-------------------------------*/

/*----------------------PAGING--------------------------------------*/

.listingBar
{
/*	display:table; */
	margin:auto;
	text-align:center;
	clear:both;
}

.listingBar span.next, .listingBar span.previous
{
	margin:0px 10px;
}

.listingBar .next
{
	float:right;
}

.listingBar .previous
{
	float:left;
