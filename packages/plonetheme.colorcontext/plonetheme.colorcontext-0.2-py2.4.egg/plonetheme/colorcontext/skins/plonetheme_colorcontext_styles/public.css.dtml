	text-decoration:strikethrough;	
}

.pastEventDateUntil
{
	text-decoration:strikethrough;	
}

.vertical
{
	border:1px solid &dtml-discreetColor;;
	background-color: white;
	-moz-box-shadow: 0px 3px 5px #ccc;
	-webkit-box-shadow:0px 3px 5px #ccc;
}

.vertical th
{
	width:100px;
	border:1px solid &dtml-discreetColor;;
