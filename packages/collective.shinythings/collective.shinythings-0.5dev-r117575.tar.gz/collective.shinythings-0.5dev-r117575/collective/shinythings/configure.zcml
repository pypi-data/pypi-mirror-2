<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.shinythings">

   <include file="skins.zcml" />
   <include file="profiles.zcml" />
   <adapter factory=".configlet.ShinythingsControlPanelAdapter" />
  
   <browser:page
       name="shinythings_controlpanel"
       for="Products.CMFPlone.interfaces.IPloneSiteRoot"
       class=".configlet.ShinythingsControlPanel"
       permission="cmf.ManagePortal"
       />
       
    <browser:resource
      name="Quicksand_Book-webfont.ttf"
      file="fonts/Quicksand_Book-webfont.ttf"
      />

</configure>
