<?xml version="1.0"?>
<object name="portal_actions"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <object name="object">
    <object name="shibboleth" meta_type="CMF Action" i18n:domain="plone">
      <property name="title" i18n:translate="">Shibboleth</property>
      <property name="description"
         i18n:translate="">Grant permissions to new users logging in via Shibboleth</property>
      <property name="url_expr">string:${object_url}/@@shibboleth</property>
      <property name="icon_expr"></property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="Change local roles"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>
