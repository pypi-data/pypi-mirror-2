<div metal:define-macro="portlet-edit" i18n:domain="plone">
    <div tal:attributes="id string:portletwrapper-${portlet/hash};
                        class string:kssattr-portlethash-${portlet/hash};">
        <img style="cursor:pointer"
            tal:attributes="onclick string:jq('div#portletbody-${portlet/hash}').children('dl.portlet').children('dd.portletItem').slideToggle(500);;"
            src="down_arrow.png"/>

        <img style="cursor:pointer"
            class="kss-configure-dashboard-portlet"
            src="process.png"/>

        <img style="cursor:pointer"
            class="kss-remove-dashboard-portlet"
            tal:attributes="onclick string:jq('div#portletwrapper-${portlet/hash}').fadeOut(500);"
            src="delete_item.png"/>

        <div tal:attributes="id string:portletbody-${portlet/hash};">
            <tal:body replace="structure html" />
        </div>
    </div>
</div>


