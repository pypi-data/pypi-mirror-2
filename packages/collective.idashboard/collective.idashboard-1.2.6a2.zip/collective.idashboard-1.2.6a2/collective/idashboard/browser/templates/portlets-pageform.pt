<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<head>
    <div tal:replace="structure provider:plone.htmlhead" />
</head>

<body>
    <div tal:attributes="id string:iframe-form-wrapper-${request/portlethash}"
         class="iframe-form-wrapper">
        <metal:macro use-macro="context/@@base-pageform.html/macros/form">
                <metal:block fill-slot="bottom_buttons"
                                tal:define="hash request/portlethash">
                    <span class="actionButtons">
                        <input  class="context" 
                                type="submit"
                                value="Save" />
                        <input  class="context" 
                                value="Cancel"
                                type="button"
                                tal:attributes="onclick string:cancelPortletEditForm('${hash}');" />
                    </span>
                    <input type="hidden" name="portlethash" tal:attributes="value hash"/>
                </metal:block>
        </metal:macro>
    </div>
</body>
</html>

