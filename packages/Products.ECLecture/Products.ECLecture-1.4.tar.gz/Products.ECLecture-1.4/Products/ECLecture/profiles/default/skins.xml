<?xml version="1.0"?>

<object name="portal_skins" meta_type="Plone Skins Tool"
  allow_any="False" cookie_persistence="False" request_varname="plone_skin">

  <object name="eclecture_templates" meta_type="Filesystem Directory View"
    directory="ECLecture/skins/eclecture_templates" />
 
  <object name="eclecture_styles" meta_type="Filesystem Directory View"
    directory="ECLecture/skins/eclecture_styles" />
 
  <object name="eclecture_images" meta_type="Filesystem Directory View"
    directory="ECLecture/skins/eclecture_images" />

  <skin-path name="*">
    <layer insert-after="custom" name="eclecture_templates" />
    <layer insert-after="custom" name="eclecture_styles" />
    <layer insert-after="custom" name="eclecture_images" />
  </skin-path>

</object>