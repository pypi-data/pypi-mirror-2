.clear-floats:after {
  content: ".";
  visibility: hidden;
  display: block;
  clear: both;
  height: 0px;
  font-size: 0px;
}
.no-selection { 
  -webkit-user-select: none; 
  -moz-user-select: none;
}
<div id="parent">
  !clear-floats;
  !no-selection;
  margin: 10px;
  <div class="child">
    float: left;
    width: 100px;
    height: 100px;
    margin: 5px;
    border: 1px solid #000;
  </div>
</div>