<a metal:define-macro="portal_logo"
   id="portal-logo"
   title="Home"
   accesskey="1"
   tal:attributes="href view/navigation_root_url"
   tal:define="portalUrl view/navigation_root_url"
   i18n:domain="plone"
   i18n:attributes="title">
    <img src="++resource++plonetheme.intkBase.images/logo.png" alt="" tal:attributes="src python: hasattr(here, '/logo_' + ((context.REQUEST)['LANGUAGE'])[:2] + '.png') and portalUrl + '/logo_' + ((context.REQUEST)['LANGUAGE'])[:2] + '.png' or portalUrl + '/logo.png'" />
</a>

