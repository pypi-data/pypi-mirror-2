<metal:page define-macro="master">
    <html>
        <head>
            <title tal:content="context/title" />
            <link rel="stylesheet" type="text/css"
                  tal:attributes="href static/eggsrv.css"
            />

            <metal:slot define-slot="css_slot" />
            <metal:slot define-slot="js_slot" />
        </head>
        <body>
            <table width="100%">
                <tr>
                    <td> 
                         <a tal:attributes="href string:${context/@@absolute_url}/main"> 
                            <img tal:attributes="src static/eggsrv.jpg" border="0" />
                         </a>
                    </td>
                    <td width="100%">
                         <h1 tal:content="context/title" />
                    </td>
                    <td>
                        <a href="http://grok.zope.org">
                            <img tal:attributes="src static/logo.gif" border="0" />
                        </a>
                    </td>
                </tr>
            </table>

            <div class="breadcrumbs">
                <a tal:attributes="href context/@@absolute_url"
                   title="Show all packages"
                  >Packages
                </a> 
                <a tal:condition="request/package|nothing" 
                   tal:attributes="href string:showpackage?package=${request/package}" 
                   tal:content="string: -> ${request/package}" 
                   title="Show all distribution files"
                />
                <a tal:condition="request/filename|nothing" 
                   tal:attributes="href string:metadata?package=${request/package}&filename=${request/filename}" 
                   tal:content="string: -> ${request/filename}" 
                />
            </div>

            <metal:slot define-slot="main" />

            <hr>
            <div class="footer">
            Powered by <a href="http://pypi.python.org/pypi/haufe.eggserver">haufe.eggserver</a> and <a href="http://grok.zope.org">Grok</a>.
            Written by Andreas Jung for Haufe Mediengruppe & ZOPYX Ltd. & Co. KG
            </div>
        </body>
    </html>    
</metal:page>
