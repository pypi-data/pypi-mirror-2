<html metal:use-macro="context/@@master/macros/master">
    <metal:slot fill-slot="main">

      <h2>Available packages</h2>
      <table tal:define="packages view/getPackageInfo" id="packages">

        <tbody>
            <tr tal:repeat="package packages">
                <td>
                    <a tal:attributes="href string:showpackage?package=${package/name}"
                       tal:content="package/name" 
                    />
                </td>
            </tr>
        </tbody>
      </table>

    </metal:slot>
</html>
