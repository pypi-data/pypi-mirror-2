<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.portletpage">
<body>

<metal:css fill-slot="style_slot">
    <style type="text/css" media="all"
            tal:content="string: @import url(${context/++resource++collective.portletpage.css});"></style>
</metal:css>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="documentDescription">
            <span metal:use-macro="python:context.widget('description', mode='view')" />
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div tal:condition="text" metal:use-macro="python:context.widget('text', mode='view')" />

        <div id="portletPageColumnsTabbed"
		     tal:define="tab_labels python:context.getProperty('tab_labels') or ['Section 1', 'Section 2', 'Section 3', 'Section 4'];">
	        <dl class="enableFormTabbing">
				 <tal:section-row define="plone_view nocall:context/@@plone;"
				                        condition="python: plone_view.have_portlets('collective.portletpage.toprow', view)">
		             <dt id="fieldsetlegend-toprow"
					     tal:content="python:tab_labels[0]"
						 i18n:translate=""
						 i18n:domain="plone">Section 1</dt>
					 <dd id="fieldset-toprow"
	                     tal:content="structure provider:collective.portletpage.toprow">
	                     	Region 1
		             </dd>
				 </tal:section-row>
				 <tal:section-row define="plone_view nocall:context/@@plone;"
				                        condition="python: plone_view.have_portlets('collective.portletpage.firstcolumn', view)">
		             <dt id="fieldsetlegend-firstcolumn"
					     tal:content="python:tab_labels[1]"
						 i18n:translate=""
						 i18n:domain="plone">Section 2</dt>
					 <dd id="fieldset-firstcolumn"
	                     tal:content="structure provider:collective.portletpage.firstcolumn">
	                     	Region 2
		             </dd>
				 </tal:section-row>
				 <tal:section-row define="plone_view nocall:context/@@plone;"
				                        condition="python: plone_view.have_portlets('collective.portletpage.secondcolumn', view)">
		             <dt id="fieldsetlegend-secondcolumn"
					     tal:content="python:tab_labels[2]"
						 i18n:translate=""
						 i18n:domain="plone">Section 3</dt>
					 <dd id="fieldset-secondcolumn"
	                     tal:content="structure provider:collective.portletpage.secondcolumn">
	                     	Region 3
		             </dd>
				 </tal:section-row>
				 <tal:section-row define="plone_view nocall:context/@@plone;"
				                        condition="python: plone_view.have_portlets('collective.portletpage.bottomrow', view)">
		             <dt id="fieldsetlegend-bottomrow"
					     tal:content="python:tab_labels[3]"
						 i18n:translate=""
						 i18n:domain="plone">Section 4</dt>
					 <dd id="fieldset-bottomrow"
	                     tal:content="structure provider:collective.portletpage.bottomrow">
	                     	Region 4
		             </dd>
				 </tal:section-row>
	        </dl> 
        </div>

        <div metal:use-macro="context/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

