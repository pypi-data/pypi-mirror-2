<?xml version="1.0"?>
<object name="portal_workflow" meta_type="Plone Workflow Tool">
 <bindings>
  <!-- Events workflow - Members can publish events directly -->
  <type type_id="Event">
   <bound-workflow workflow_id="simple_publication_workflow"/>
  </type>

  <!-- News workflow - Members can publish events directly -->
  <type type_id="News Item">
   <bound-workflow workflow_id="simple_publication_workflow"/>
  </type>


  <!-- PlumiVideo set to the community_workflow -->
  <type type_id="PlumiVideo">
   <bound-workflow workflow_id="plone_workflow"/>
  </type>


 </bindings>
</object>
