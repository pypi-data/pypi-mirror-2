<tal:sections tal:define="portal_tabs view/portal_tabs"
     tal:condition="portal_tabs"
     i18n:domain="plone">
    <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>
    <ul id="portal-globalnav" tal:define="selected_tab python:view.selected_portal_tab">
          <tal:tabs tal:repeat="tab portal_tabs">
                <li tal:define="tid tab/id;
                                percent python:(len(portal_tabs)-1) > 0 and (1.0/(len(portal_tabs)-1))*100 or 100"
                    tal:condition="python: tid != 'index_html'"
                    tal:attributes="id string:portaltab-${tid};
                                    class python:selected_tab==tid and 'selected' or 'plain';
                                    style string:width:${percent}%;">
                          <a href=""
                                    tal:content="tab/name"
                                    tal:attributes="href tab/url;
                                                    title tab/description|nothing;">
                              Tab Name
                          </a>
                          <ul class="submenu" tal:define="subItems python:view.getSubItems(tab)" tal:condition="python: len(subItems) > 0">
                              <li tal:repeat="subItem subItems">
                                   <a href=""
                                    tal:content="subItem/Title | subItem/title"
                                    tal:attributes="href subItem/absolute_url | subItem/getURL;">
                                        Tab Name
                                   </a>
                              </li>
                          </ul>
                              
                </li>
          </tal:tabs>
     </ul>
</tal:sections>