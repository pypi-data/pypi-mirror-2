<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Laboral theme">

 <object name="plonetheme_laboral_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.laboral:skins/plonetheme_laboral_custom_images"/>
 <object name="plonetheme_laboral_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.laboral:skins/plonetheme_laboral_custom_templates"/>
 <object name="plonetheme_laboral_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.laboral:skins/plonetheme_laboral_styles"/>

 <skin-path name="Laboral theme" based-on="Sunburst Theme">
  <layer name="plonetheme_laboral_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_laboral_custom_templates"
     insert-after="plonetheme_laboral_custom_images"/>
  <layer name="plonetheme_laboral_styles"
     insert-after="plonetheme_laboral_custom_templates"/>
 </skin-path>

</object>
