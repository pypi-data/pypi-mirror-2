<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main" 
           tal:define="size python:here.getObjSize(here);
                       content_type here/get_content_type|here/Format;
			isAnon context/@@plone_portal_state/anonymous;
                       kssClassesView context/@@kss_field_decorator_view; 
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
	
      <div class="pageWrapper file_view">
        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>
       <br />
      
        <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>
	
	<div class="addthis_toolbox addthis_default_style"
               tal:attributes="addthis:url python:here.absolute_url() + '/view';
                            addthis:title here/title | here/Title;
                            addthis:description here/description">
               		<a class="addthis_button_facebook">
			      <img class="shareButton facebookShare" src="++resource++plonetheme.laboral.images/facebook.png" />
			      <img class="shareButtonHover facebookShare" src="++resource++plonetheme.laboral.images/facebook_hover.png" />
			</a>
			<a class="addthis_button_twitter">
			      <img class="shareButton twitterShare" src="++resource++plonetheme.laboral.images/twitter.png" />
			      <img class="shareButtonHover twitterShare" src="++resource++plonetheme.laboral.images/twitter_hover.png" />
			</a>
			<a class="addthis_button_stumbleupon">
			      <img class="shareButton stumbleuponShare" src="++resource++plonetheme.laboral.images/stumbleupon.png" />
			      <img class="shareButtonHover stumbleuponShare" src="++resource++plonetheme.laboral.images/stumbleupon_hover.png" />
			</a>
			<a class="addthis_button_more">
			      <img class="shareButton shareShare" src="++resource++plonetheme.laboral.images/share.png" />
			      <img class="shareButtonHover shareShare" src="++resource++plonetheme.laboral.images/share_hover.png" />
			</a>
        </div>
	
        <p class="file_description">
            <metal:field use-macro="python:here.widget('file', mode='view')">
            File
            </metal:field>
        </p>

        <div class="newsImageContainer" tal:condition="view/hasContentLeadImage">
	       <a href="#"
		  id="parent-fieldname-leadImage">
		  <img tal:attributes="src python:here.absolute-url() + '/leadImage_preview'" src="" alt="" />
	       </a>
	</div>

        <div tal:condition="python: content_type.startswith('text')">
            <h2 i18n:translate="heading_file_contents">File contents</h2>
            <pre tal:content="here/get_data|here/data|nothing">
            </pre>
        </div>
	
	<span tal:condition="python: site_properties.allowAnonymousViewAbout or not isAnon">
        <div metal:use-macro="here/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>
	</span>
    
        <div tal:replace="structure provider:plone.belowcontentbody" />
	</div>
	<span tal:condition="python: site_properties.allowAnonymousViewAbout or not isAnon">
       <div tal:replace="structure provider:plone.belowcontenttitle" />
       </span>
       
       <script type="text/javascript">
         var addthis_config = {"data_track_clickback":true};
         var addthis_share = {templates: { twitter: '{{title}}: {{url}} via @laboral' }}
        </script>
        <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=intk"></script>
    </tal:main-macro>
</div>

</body>

</html>
