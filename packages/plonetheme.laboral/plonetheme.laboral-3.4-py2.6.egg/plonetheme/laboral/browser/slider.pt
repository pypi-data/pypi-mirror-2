 <div class="slider">
	    <div class="slider-inner" tal:repeat="item python:view.getOneWayRelatedItems()" tal:omit-tag="">
		  <div class="slider-item" tal:attributes="class python:'slider-item slider-' + item.portal_type;
							   id item/id;"
					   tal:condition="python:view.hasContentLeadImage(item)">
			<a class="slider-item-image-link" tal:attributes="href python:item.absolute_url() + '/leadImage_large'">
			      <img src="++resource++plonetheme.laboral.images/loader_animated.gif" />
			</a>
			<div class="slider-item-info">
			      <a class="slider-item-title" tal:attributes="href context/absolute_url"
							   tal:content="context/title">
				    The title
			      </a>
			      <a class="slider-item-subtitle" tal:attributes="href item/absolute_url"
							   tal:content="item/title"
							   tal:condition="python: item.id != context.id">
				    The title
			      </a>
			      
			      <tal:event define="item_type item/portal_type" condition="python: item_type == 'Event'">
				   <span tal:condition="python: item_type == 'Event'">
					  <div class="EventDateInfo" tal:condition="python: item.end() >= view.currenttime()">
						  <div class="futureEventDateFrom">
							  <div class="eventDayInfo" tal:content="python:item.start().strftime('%d')">02</div>
							  <div class="eventMonthInfo" tal:content="python:item.start().strftime('%b').capitalize()">Jun</div>
							  <div class="eventYearInfo" tal:content="python:item.start().strftime('%Y').capitalize()">2010</div>
						  </div>
						  <span tal:condition="python:item.start().strftime('%d - %m - %Y') != item.end().strftime('%d - %m - %Y')" tal:omit-tag="" >
						  <div class="futureEventDateUntil">
							  <div class="eventDayInfo" tal:content="python:item.end().strftime('%d')">02</div>
							  <div class="eventMonthInfo" tal:content="python:item.end().strftime('%b').capitalize()">Jun</div>
							  <div class="eventYearInfo" tal:content="python:item.end().strftime('%Y').capitalize()">2010</div>
						  </div>
						  <div class="visualClearLeft"><!-- --></div>
						  </span>
					  </div>
					  <div class="EventDateInfo" tal:condition="python: item.end() < view.currenttime()">
						  <div class="pastEventDateFrom">
							  <div class="eventDayInfo" tal:content="python:item.start().strftime('%d')">02</div>
							  <div class="eventMonthInfo" tal:content="python:item.start().strftime('%b').capitalize()">Jun</div>
							  <div class="eventYearInfo" tal:content="python:item.start().strftime('%Y').capitalize()">2010</div>
						  </div>
						  <span tal:condition="python:item.start().strftime('%d - %m - %Y') != item.end().strftime('%d - %m - %Y')" tal:omit-tag="">
						  <div class="pastEventDateUntil">
							  <div class="eventDayInfo" tal:content="python:item.end().strftime('%d')">02</div>
							  <div class="eventMonthInfo" tal:content="python:item.end().strftime('%b').capitalize()">Jun</div>
							  <div class="eventYearInfo" tal:content="python:item.end().strftime('%Y').capitalize()">2010</div>
						  </div>
						  </span>
					  </div>
				   </span>
			      </tal:event>
			      
			      <div class="slider-description" tal:content="item/Description">
				    Description
			      </div>
			</div>
			<div class="visualClear"></div>
		  </div>
	    </div>
	    <div class="slider-buttons">
			<div class="slider-button-prev" onclick="RelSlider.stepBack()">Previous</div> / 
			<div class="slider-button-next" onclick="RelSlider.step()">Next</div>
		  </div>
	    <div class="visualClear"></div>
      </div>