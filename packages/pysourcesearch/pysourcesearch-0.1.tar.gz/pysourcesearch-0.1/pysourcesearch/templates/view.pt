<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>PySourceSearch</title>
<meta name="keywords" content="python web application" />
<meta name="description" content="repoze.bfg web application" />
<link href="${request.application_url}/static/default.css" rel="stylesheet" type="text/css" />
<link href="${request.application_url}/pygments/colorful.css" rel="stylesheet" type="text/css" />
</head>
<body>
<!-- start header -->
<div id="logo">
  <h2><a href="${request.application_url}"><code>PySourceSearch</code>, a <code>repoze.bfg</code> application</a></h2>
</div>
<div id="header">
  <div id="menu">
		<form method="get" action="${request.application_url}">
	    <fieldset>
	      <span>Search:</span><input type="text" id="q" name="q" value="" size="30" tal:attributes="value python: request.params.get('q')"/>
	      <input type="submit" value="Search" />
				<span>Package:</span>
				<select name="package">
					<tal:repeat tal:repeat="package packages">
						<tal:con tal:condition="python: package == selected_package">
							<option tal:attributes="value package;" selected="selected" tal:content="package"></option>
						</tal:con>
						<tal:con tal:condition="python: package != selected_package">
							<option tal:attributes="value package;" tal:content="package"></option>
						</tal:con>
					</tal:repeat>
				</select>
	    </fieldset>
	  </form>
  </div>
</div>
<!-- end header -->
<div id="wrapper">
  <!-- start page -->
  <div id="page">
    <!-- start content -->
    <div id="content">
		<h2 tal:content="python: metadata['relative_path']"></h2>
		<div class="highlight" tal:content="structure python: highlight(context)"></div>
    </div>
    <!-- end content -->
    <div style="clear: both;">&nbsp;</div>
  </div>
</div>
<!-- end page -->
<!-- start footer -->
<div id="footer">
  <p id="legal">( c ) 2008. All Rights Reserved. Template design
  by <a href="http://www.freecsstemplates.org/">Free CSS
  Templates</a>.</p>
</div>
<!-- end footer -->
</body>
</html>
