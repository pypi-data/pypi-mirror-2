<?xml version="1.0"?>
<object name="portal_controlpanel" 
        meta_type="Plone Control Panel Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="collective.disqus">

    <configlet
            title="DISQUS comment system"
            action_id="DisqusConfig"
            appId="collective.disqus"
            category="Products"
            condition_expr=""
            url_expr="string:${portal_url}/@@disqus-controlpanel"
            icon_expr="string:${portal_url}/++resource++collective.disqus/disqus_icon.png"
            visible="True"
            i18n:attributes="title">
        <permission>Manage portal</permission>
    </configlet>

</object>

