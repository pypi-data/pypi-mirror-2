	$("#f_0").click(function() {
		goSource('3d2699003e88cd6df678fa07e5ea9402','megaupload');
		return false;
	});
	</script>
		<li style="width:33.333333333333%;margin-top:10px;"><a href="#" id="f_1"><img src="servers/img/bitshare.jpg" height="130" width="130" border="0" /></a></li>
