     pagetemplate for the wowlichking.footer
-->

<head>

  <script src="++resource++collective.wowlichking.scripts/jquery-ui-1.7.2.spritely.custom.min.js" type="text/javascript"></script>
  <script src="++resource++collective.wowlichking.scripts/jquery.spritely-0.2.js" type="text/javascript"></script>

  <script type="text/javascript">

    (function(jq) {
      jq(document).ready(function() {
        jq('#ogre')
          .sprite({fps: 10, no_of_frames: 3})
          .isDraggable()
          .active();
        jq('#footman')
          .sprite({fps: 10, no_of_frames: 3})
          .isDraggable()
          .active();
        jq('#bg').pan({fps: 30, speed: 2, dir: 'left', depth: 30});
        jq('#bg').spRelSpeed(10);

        window.actions = 
        {
          stop: function() {
            jq('#ogre, #footman')
              .fps(0)
            jq('#bg')
              .spStop()
          },
          go: function() {
            jq('#ogre, #footman')
              .fps(10)
            jq('#bg')
              .spStart()
              .spRelSpeed(10)
          },
          faster: function() {
            jq('#ogre, #footman')
              .fps(20)
            jq('#bg')
              .spStart()
              .spRelSpeed(20)
          },
          slower: function() {
            jq('#ogre, #footman')
              .fps(5)
            jq('#bg')
              .spStart()
              .spRelSpeed(5)
          },
          FASTER: function() {
            jq('#ogre, #footman')
              .fps(40)
            jq('#bg')
              .spStart()
              .spRelSpeed(40)
          },
          SLOWER: function() {
            jq('#ogre, #footman')
              .fps(2.5)
            jq('#bg')
              .spStart()
              .spRelSpeed(2.5)
          },
          continentaldrift: function() {
            jq('#ogre, #footman')
              .fps(0.5)
            jq('#bg')
              .spStart()
              .spRelSpeed(0.5)
          },
          lightning: function() {
            jq('#ogre, #footman')
              .fps(80)
            jq('#bg')
              .spStart()
              .spRelSpeed(80)
          }
        }

      });
    })(jQuery);

  </script>

  </head>

<div align=center id="portal-footer" metal:define-macro="portal_footer" i18n:domain="plone">
  <p>
    Kudos go to reteep for his Wordpress Theme
    <br>
    <a class="link-plain" target="_blank" href="http://themes.wordpress-deutschland.org/wow-lich-king/">WoW Lich King</a>
  </p>
  <div align=center>
    <div id="bg">
      <div id="ogre"></div>
      <div id="footman"></div>
    </div>
    <button class="banner" onclick="actions.continentaldrift();">continental drift...duh?</button>
    <button class="banner" onclick="actions.SLOWER();">SLOWER!</button>
    <button class="banner" onclick="actions.slower();">Slower</button>
    <button class="banner" onclick="actions.stop();">Stop</button>
    <button class="banner" onclick="actions.go();">Go</button>
    <button class="banner" onclick="actions.faster();">Faster</button>
    <button class="banner" onclick="actions.FASTER();">FASTER!</button>
    <button class="banner" onclick="actions.lightning();">fast as lightning...duh?</button>
  </div>
</div>
