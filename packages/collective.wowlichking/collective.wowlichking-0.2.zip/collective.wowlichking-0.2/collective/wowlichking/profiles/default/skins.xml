<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="WoWLichKing">

 <object name="collective_wowlichking_custom_images"
    meta_type="Filesystem Directory View"
    directory="collective.wowlichking:skins/collective_wowlichking_custom_images"/>
 <object name="collective_wowlichking_custom_templates"
    meta_type="Filesystem Directory View"
    directory="collective.wowlichking:skins/collective_wowlichking_custom_templates"/>
 <object name="collective_wowlichking_styles"
    meta_type="Filesystem Directory View"
    directory="collective.wowlichking:skins/collective_wowlichking_styles"/>

 <skin-path name="WoWLichKing" based-on="Plone Default">
  <layer name="collective_wowlichking_custom_images"
     insert-after="custom"/>
  <layer name="collective_wowlichking_custom_templates"
     insert-after="collective_wowlichking_custom_images"/>
  <layer name="collective_wowlichking_styles"
     insert-after="collective_wowlichking_custom_templates"/>
 </skin-path>

</object>
