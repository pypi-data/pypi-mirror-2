<!-- author: marc goetz
     pagetemplate for the wowlichking.footer
-->

<head>

  <style type="text/css">

    #bg {
      background: url(++resource++collective.wowlichking.images/bg.png) 0 0 repeat-x;
      width: 500px;
      height: 75px;
    }

    #ogre {
      background: transparent url(++resource++collective.wowlichking.images/ogre.png) 0 0 no-repeat;
      width: 57px;
      height: 60px;
      z-index: 2000;
      cursor: pointer;
      margin-left: -125px;
      margin-bottom: -50px;
    }

    #footman {
      background: transparent url(++resource++collective.wowlichking.images/footman.png) 0 0 no-repeat;
      width: 48px;
      height: 45px;
      z-index: 2000;
      cursor: pointer;
      margin-left: 125px;
    }

  </style>

  <script src="++resource++collective.wowlichking.scripts/jquery-1.3.2.min.js" type="text/javascript"></script>
  <script src="++resource++collective.wowlichking.scripts/jquery-ui-1.7.2.spritely.custom.min.js" type="text/javascript"></script>
  <script src="++resource++collective.wowlichking.scripts/jquery.spritely-0.2.js" type="text/javascript"></script>

  <script type="text/javascript">

    (function($) {
      $(document).ready(function() {
        $('#ogre')
          .sprite({fps: 9, no_of_frames: 3})
          .isDraggable()
          .active();
        $('#footman')
          .sprite({fps: 9, no_of_frames: 3})
          .isDraggable()
          .active();
        $('#bg').pan({fps: 30, speed: 2, dir: 'left', depth: 30});
        $('#bg').spRelSpeed(8);
      });
    })(jQuery);

  </script>

</head>

<div align=center id="portal-footer" metal:define-macro="portal_footer" i18n:domain="plone">
  <p>
    Kudos go to reteep for his Wordpress Theme
    <br>
    <a class="link-plain" target="_blank" href="http://themes.wordpress-deutschland.org/wow-lich-king/">WoW Lich King</a>
  </p>
  <div align=center>
    <div id="bg">
      <div id="ogre"></div>
      <div id="footman"></div>
    </div>
  </div>
</div>
