<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.subscribemember">

<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <h1 class="documentFirstHeading">Renew Expired Member</h1>
        
        <form tal:attributes="action string:${here/absolute_url}/@@renew_expired_view">
        <table
               tal:attributes="class string:vertical listing">
            <tr>
                <th>Member ID</th>
                <td><input type="text" name="memberid" tal:attributes="value view/getMemberId" /></td>
            </tr>
            <tr>
                <th>Password</th>
                <td><input type="password" name="memberpassword" /></td>
            <tr>
                <th>Membership Level</th>
                <td>
		          <select name="member_types" tal:define="member_types view/member_types">
		            <option selected=""
		                    tal:repeat="term member_types"
		              tal:attributes="value term/value;
		                              selected python:view.get_selected_membertype()==term.value and 'selected' or None"
		              tal:content="term/title">
		              Menu Item
		            </option>
		          </select>
		        </td>
		    </tr>
		    <tr>
		        <td>&nbsp;</td>
		        <td>
	                <input class="context"
	                       type="submit"
	                       name="form_submit"
	                       value="Renew Membership"
	                       />
                </td>
		    </tr>
        </table>
        <input type="hidden" name="form.submitted" value="1" />
        </form>

    </tal:main-macro>
</metal:main>

</body>
</html>
