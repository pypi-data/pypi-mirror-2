<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">

  <metal:border fill-slot="top_slot">
    <tal:border define="dummy python:request.set('enable_border',1)" />
  </metal:border>
 
<body>
  <div metal:fill-slot="main"
       tal:define="advices python: context.objectValues('BLDividendAdvice')">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="object_title"/> Dividend Advices</h1>

      <a href=""
           class="link-parent"
           tal:define="parent_url python:context.aq_parent.navigationParent(context.aq_parent, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">Back to Ledger</a>

      <table summary="" width="100%" tal:condition="advices">
         <tr class="row">
             <td class="field">&nbsp;</td>
             <td class="field"><label>Details</label></td>
             <td class="field"><label>Date</label></td>
             <td class="field"><label>Amount</label></td>
         </tr>
         <tr class="row" tal:repeat="advice advices">
             <td class="field">
                 <img src="" alt="" tal:define="icon python:advice.getIcon(1)" 
                             tal:attributes="src string:${utool}/${icon}">
             </td>
             <td class="field">
                <a href="" tal:attributes="href string: ${advice/getId}" 
                           tal:content="advice/title_or_id"/>
             </td>
             <td class="field" 
                 tal:content="python: context.toLocalizedTime(advice.effective_date)"/>
             <td class="field" tal:content="python: abs(advice.amount)"/>
         </tr>
      </table>

      <p class="formHelp" tal:condition="not: advices">There are no dividend advices
           for this shareholder.</p>

      <div metal:use-macro="context/document_actions/macros/document_actions">
           Document actions (print, sendto etc)
      </div>

  </div>
 
</body>
</html>
