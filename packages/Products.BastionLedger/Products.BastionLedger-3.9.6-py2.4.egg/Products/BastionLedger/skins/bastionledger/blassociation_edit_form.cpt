<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">


<body>
   <div metal:fill-slot="main"
        tal:define="errors options/state/getErrors">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="object_title"/></h1>

      <br/>

      <form name="edit_form" action="" method="post"
            tal:attributes="action string:${context/getId}/${template/getId}">


          <div class="field"
               tal:define="error errors/id | nothing;
                           id request/id | here/getId"
               tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="id" i18n:translate="label_short_name">Tag Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Tag Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          </div>

             <div tal:define="error errors/title|nothing;
                  Title request/title | context/Title"
                  tal:attributes="class python:test(error, 'field error', 'field')">

                 <label for="title" i18n:translate="label_title">Title</label>

                 <span class="fieldRequired" title="Required"
                       i18n:attributes="title title_required;"
                       i18n:translate="label_required">(Required)</span>

                 <div tal:content="error">Validation error output</div>

                 <input type="text" id="title" name="title" value="" size="50"
                        tabindex="" tal:attributes="value Title; tabindex tabindex/next;"/>
             </div>

             <div tal:define="error errors/Description|nothing;
                  Description request/description | context/Description"
                  tal:attributes="class python:test(error, 'field error', 'field')">

                 <div class="label">Description</div>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" i18n:translate="help_description">
                    A brief description of the item.
                 </div>

                 <textarea rows="5" cols="80" id="description" name="description"
                           tal:content="Description" 
                           tal:attributes="tabindex tabindex/next"></textarea>
             </div>

             <div tal:define="error errors/ledger|nothing;
                              Ledger request/ledger | context/ledger"
                              tal:attributes="class python:test(error, 'field error', 'field')">

                 <label for="ledger" i18n:translate="label_ledger">Ledger</label>

                 <span class="fieldRequired" title="Required"
                       i18n:attributes="ledger ledger_required;"
                       i18n:translate="label_required">(Required)</span>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" i18n:translate="help_ledger">
                    The id of the ledger which this association links accounts
                 </div>

                 <input type="text" id="ledger" name="ledger" value="" size="20"
                        tabindex="" tal:attributes="value Ledger; tabindex tabindex/next;"/>
             </div>

             <div tal:define="error errors/accno|nothing;
                              Accno request/accno | context/accno"
                              tal:attributes="class python:test(error, 'field error', 'field')">

                 <label for="accno" 
                        i18n:translate="label_accno">Account Numbers</label>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" i18n:translate="help_accno">
                     The account number(s) in this association group
                 </div>

                 <textarea rows="3" id="accno" name="accno:tokens"
                        tabindex="" tal:attributes="tabindex tabindex/next;" 
                        tal:content="python: ' '.join(Accno)"></textarea>
             </div>


         <div class="formControls" colspan="2">
               <input class="context" tabindex="" type="submit" name="form.button.Edit"
                      value="Edit" i18n:attributes="Edit"
                      tal:attributes="tabindex tabindex/next;" />
         </div>

         <input type="hidden" name="form.submitted" value="1"/>
      </form>
 
  </div>
 
</body>
</html>
