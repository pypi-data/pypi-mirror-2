<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bastionledger">
 
<body>
  <div metal:fill-slot="main" 
       tal:define="errors options/state/getErrors;
                   account here/blAccount">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="object_title"/></h1>

        <a href=""
           class="link-parent"
           tal:define="ledger_url python:context.navigationParent(context, template.getId())"
           tal:condition="ledger_url"
           tal:attributes="href ledger_url"
           i18n:translate="go_to_ledger_url">
        Back to Order
        </a>

      <p class="formHelp">Enter alternative shipping information here.</p>

      <form name="edit_form" action="" method="post" 
            tal:attributes="action string:${here/absolute_url}/${template/getId}">

         <div class="field"
              tal:define="error errors/contact|nothing;
                          Contact request/contact | here/contact;"
              tal:attributes="class python:test(error, 'field error', 'field')">

             <label for="order_date" i18n:translate="label_shiptocontact">Shipping Contact Name</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="contact"
                   i18n:translate="label_required">(Required)</span>

             <div tal:content="error">Validation error output</div>

             <input type="text" id="contact" name="contact" value="" size="25"
                    tabindex="" tal:attributes="value Contact; 
                                                tabindex tabindex/next;"/>

        </div>

         <div class="field"
              tal:define="error errors/email|nothing;
                          Email request/email | here/email;"
              tal:attributes="class python:test(error, 'field error', 'field')">

             <label for="order_date" i18n:translate="label_shipping_email">Shipping Email</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="email"
                   i18n:translate="label_required">(Required)</span>

             <div tal:content="error">Validation error output</div>

             <input type="text" id="email" name="email" value="" size="25"
                    tabindex="" tal:attributes="value Email; 
                                                tabindex tabindex/next;"/>

        </div>

         <div class="field"
              tal:define="error errors/shiptophone|nothing;
                          Phone request/shiptophone | here/shiptophone;"
              tal:attributes="class python:test(error, 'field error', 'field')">

             <label for="order_date" i18n:translate="label_shipping_phone">Shipping Phone</label>

             <div tal:content="error">Validation error output</div>

             <input type="text" id="shiptophone" name="shiptophone" value="" size="15"
                    tabindex="" tal:attributes="value Phone; 
                                                tabindex tabindex/next;"/>

        </div>
         <div class="field"
              tal:define="error errors/shiptofax|nothing;
                          Fax request/shiptofax | here/shiptofax;"
              tal:attributes="class python:test(error, 'field error', 'field')">

             <label for="order_date" i18n:translate="label_shipping_fax">Shipping Fax</label>

             <div tal:content="error">Validation error output</div>

             <input type="text" id="shiptofax" name="shiptofax" value="" size="15"
                    tabindex="" tal:attributes="value Fax; 
                                                tabindex tabindex/next;"/>

        </div>

        <div class="field"
             tal:define="error errors/shiptoaddress|nothing;
                         Shiptoaddress request/shiptoaddress | here/shiptoaddress;"
             tal:attributes="class python:test(error, 'field error', 'field')">

           <label for="shiptoaddress" i18n:translate="label_shiptoaddress">Shipping Address</label>

           <span class="fieldRequired" title="Required"
                 i18n:attributes="shiptoaddress"
                 i18n:translate="label_required">(Required)</span>

           <div tal:content="error">Validation error output</div>

           <textarea id="shiptoaddress" name="shiptoaddress:text" rows="10"
                  tabindex="" tal:attributes="tabindex tabindex/next;"
                  tal:content="Shiptoaddress"/>

        </div>
        <input type="hidden" name="form.submitted" value="1" />

        <span class="formControls">
             <input class="context"  type="submit"
                    tabindex=""  name="form.button.Edit"
                    value=" Edit " i18n:attributes="value"
                    tal:attributes="tabindex tabindex/next;" />
        </span>

      </form>
  </div>
 
</body>
</html>
