<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="plone">

<head>

    <metal:block tal:define="dummy python:request.RESPONSE.setHeader('Content-Type', 'text/html;;charset='+context.plone_utils.getSiteEncoding())" />

    <style type="text/css" media="screen">
    body {
        background-color: white; 
        color: black; 
        font-family: "Lucida Grande", Verdana, Lucida, Helvetica, Arial, sans-serif; 
        font-size: 69%;
        text-align: center;
    }
    
    a {
        display:block; 
        margin: 0.5em; 
        color: #436976; 
        text-decoration: underline; 
        line-height:1.5em;
    }

    img {
        border: 0px;
        padding: 5px;
    }

    .visualWrapper {
        text-align: center;
    }

    
    .image_view_large .ImageTitle{
        font-weight: 600;
        font-size: 150%;
        margin: 0.2em 0em 0.4em 0em;
        text-align: center;
        color: #76797c;
    }
    
    .ImageDescription{
        color: #76797c;
        padding: 0em 18% 1em 18%;
        text-align: justify;
    }
    
    </style>

</head>      

<body>

<div class="visualWrapper">
  <div class="image_view_large">
    <a href=""
       tal:attributes="href request/HTTP_REFERER"
       tal:condition="request/HTTP_REFERER"
       ><span i18n:translate="label_back_to_site">Back to site</span><br /><tal:block replace="structure python: here.tag(scale='large')" /></a>
    <div tal:condition="request/HTTP_REFERER"
            tal:content="here/Title" 
            class="ImageTitle" />
    <div tal:condition="request/HTTP_REFERER"
            tal:content="here/Description" 
            class="ImageDescription" />
            
    <a href=""
       tal:attributes="href here/portal_url"
       tal:condition="not: request/HTTP_REFERER"
       ><span i18n:translate="label_home">Home</span><br /><tal:block replace="structure python: here.tag(scale='large')" /></a>
    <div tal:condition="not: request/HTTP_REFERER"
            tal:content="here/Title" />
    <div tal:condition="not: request/HTTP_REFERER"
            tal:content="here/Description" 
            class="ImageDescription" />             
               
    <a href=""
      i18n:translate="get_the_fullsize_image_here"
      tal:attributes="href python: here.absolute_url()">get the fullsize image here</a>&nbsp;
    <a href=""
       tal:attributes="href python: here.absolute_url()+'/edit'"
       tal:condition="python: here.getPermissions()"
       tal:content="string:edit"
       style="display:inline;" />
    <span tal:content="string: | "
          tal:condition="python: here.getPermissions()" />

<!--        i18n:translate="link_transform" -->
    <a href=""
       tal:attributes="href python: here.absolute_url()+'/atct_image_transform'"
       tal:condition="python: here.getPermissions()"
       tal:content="string:transform"
       style="display:inline;" />
  </div>
</div>    

</body>
</html>
