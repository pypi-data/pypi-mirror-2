/* 
################################################################
# ATMediaPage global styles                                                                                                                           #
################################################################
*/

.Inline {
    display: inline;  
}

.ATMediaPageImageBox {
    float: right;    
}

.ATMediaPageImageRight {
    float: right;
}

.ATMediaPage .documentDescription {
    font-size: 110% !important;
    font-weight: 600 !important;
    margin-top: 1em;
    margin-bottom: 2.5em;
    clear: both;
}

.ATMediaPage h1 {
    page-break-before: avoid;
    width:100%;
}

#archetypes-fieldname-AutoChangeViewLabel {
    font-size: 150%;
    color: white;
    background-color: #849BC4;  
    padding: 0.2em 0.5em 0.2em 0.5em;
    margin: 2em 0em 0.6em 0em;
}

/* pleas use the following structure for style-attributes which are only for one view. */


/* 
################################################################
# ATMediaPage styles for "mediapage_view" (default view)                                                                              #
################################################################
*/
.ATMediaPageTopImage {
    text-align: left;
    margin: 0em 0em 4em 20%;
}

.ATMP_TopAndFloatRight_Image {
  display: inline;
}
.ATMP_TopAndFloatRight_Image img {
    padding: 2.2em 0em 1em 20px;
}

.ATMediaPage.top-right_view .plain {
    width: 70%;
    float: left;
    padding: 0em 0em 0em 0em;
}

.ATMediaPage.top-right_view h2 {
    width: 96%;
}

/* 
################################################################
# ATMediaPage styles for "mediapage_small-right_view"                                                                                   #
################################################################
*/
.small-right_view .ATMediaPageImageBox {
    width: 200px;
    margin-right: 1.0em;
    padding: 0 1.0em;
}
.small-right_view .ATMediaPageImageRight {
    margin: 0 0.2em 2.0em 1em;
}


/* 
################################################################
# ATMediaPage styles for "mediapage_preview-right_view"                                                                               #
################################################################
*/
.preview-right_view .ATMediaPageImageBox {
    width: 400px;
}
.preview-right_view .ATMediaPageImageRight {
    margin: 0 0.2em 2.0em 1em;
}

/* uncommend, to have spacing anytime for text to rightside, even if the mediapage have no images. */
