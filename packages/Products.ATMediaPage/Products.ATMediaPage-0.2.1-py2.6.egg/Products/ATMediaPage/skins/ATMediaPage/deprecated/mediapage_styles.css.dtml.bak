/* 
################################################################
# ATMediaPage styles for "mediapage_thumb-bottom_view"                                                                            #
################################################################
*/
.ATMediaPageImageBottom {
    display: inline;
    margin: 0.2em 0.5em 1.0em 0.2em;
}


/* 
################################################################
# ATMediaPage styles for "mediapage_images-autochange_view"                                                                     #
################################################################
*/
.images-autochange_view .ATMediaPageImageBox {
    width: 200px;
}
.images-autochange_view .ATMediaPageImageRight {
    margin: 0 0.2em 2.0em 1em;
}


/* 
################################################################
# ATMediaPage styles for "mediapage_images-autochange_view2"                                                                     #
################################################################
*/

.ATMediaPage.images-autochange_view2 .ATMediaPageDescriptionBox {
    border-width: 1px 1px 1px 1px;
    border-color: black;
    border-style: solid;
    margin: 2.5em 0em 2.5em 0em;
    padding: 0.5em 0.5em 0.5em 0.5em;
}

.ATMediaPage.images-autochange_view2 .ATMediaPageImageBox {
    width: 200px;
    /* uncommend the next line for an fixed image height. */
    /*height: 150px;*/
    display: inline;
    float: right;  
    padding: 0em 0em 0em 0em;
    margin: 0em 0em 0em 1em !important;    
}

.ATMediaPage.images-autochange_view2 .documentDescription {
    clear: none;
    display: inline;
}

.ATMediaPage.images-autochange_view2 .plain p {
    width: 100%;
}

/* 
################################################################
# ATMediaPage styles for "mediapage_banner_view"                                                                                       #
################################################################
*/
.ATMediaPageTopBanner {
    text-align: center;
    margin: 0em 0em 3em 0em;
}
.banner_view .ATMediaPageImageBox {
    width: 200px;
    margin-right: 1.0em;
    padding: 0 1.0em;
}
.banner_view .ATMediaPageImageRight {
    margin: 0 0.2em 2.0em 1em;
}


/* 
################################################################
# ATMediaPage styles for "mediapage_article-style_view"                                                                                 #
################################################################
*/

.ATMediaPage.article-style_view .ImageBox {
    float: left;
    width: 200px;
    height: 340px;
    text-align: justify;
    border: 0px solid black;
    margin: 2em 3em 0.6em 0em;
}

.ATMediaPage.article-style_view .ImageTitle {
    font-weight: 600;
    margin: 0.2em 0em 0.4em 0em;
    color: &dtml-discreetColor;;
}

.ATMediaPage.article-style_view .ImageDescription {
    color: &dtml-discreetColor;;
}

