@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix fresnel:  <http://www.w3.org/2004/09/fresnel#> .
@prefix dc:       <http://purl.org/dc/terms/> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix obp:	  <http://purl.org/NET/obp/> .
@prefix :         <http://example.org/lens/> .

:marcGroup a fresnel:Group .

:MarcDefaultLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:classLensDomain obp:MarcRecord ;
	fresnel:group :marcGroup ; 
	fresnel:showProperties (
		dc:title
		dc:description
		[ a fresnel:PropertyDescription ;
                  fresnel:property dc:contributor ;
                  fresnel:sublens :PersonLens ]
		fresnel:allProperties
	) .

:PersonLens a fresnel:Lens ;
	fresnel:purpose fresnel:defaultLens ;
	fresnel:instanceLensDomain foaf:Person ;
	fresnel:group :marcGroup ;
	fresnel:showProperties (
	    foaf:name
	) .

:titleFormat a fresnel:Format ;
	fresnel:propertyFormatDomain dc:title ;
	fresnel:label fresnel:none ;
	fresnel:propertyStyle "h1_container"^^fresnel:styleClass ;
	fresnel:valueStyle "h1"^^fresnel:styleClass ;
	fresnel:group :marcGroup .

:descriptionFormat a fresnel:Format ;
	fresnel:propertyFormatDomain dc:description ;
	fresnel:label "Description" ;
	fresnel:group :marcGroup .
